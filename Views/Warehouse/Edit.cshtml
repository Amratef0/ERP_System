@model ERP_System_Project.Models.Inventory.Warehouse

<h2>Edit Warehouse</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="WarehouseId" />

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BranchId">Branch</label>
        <select asp-for="BranchId" class="form-control" asp-items="@(ViewData["Branches"] as SelectList)">
            <option value="">-- Select Branch --</option>
        </select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
