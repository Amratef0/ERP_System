@model Currency

@{
    ViewData["Title"] = "Add Currency";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add Currency</h3>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Currency Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Currency Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Currency Code -->
            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " maxlength="3" style="text-transform: uppercase;" />
                <label asp-for="Code">Currency Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <!-- Currency Symbol -->
            <div class="form-group">
                <input asp-for="Symbol" class="form-control" placeholder=" " maxlength="5" />
                <label asp-for="Symbol">Currency Symbol <span class="text-danger">*</span></label>
                <span asp-validation-for="Symbol" class="text-danger"></span>
            </div>

            <!-- Symbol Preview -->
            <div class="symbol-preview-center">
                <div class="symbol-preview-box">
                    <h4 class="symbol-title">Symbol Preview</h4>

                    <div class="symbol-preview-content">
                        <span class="symbol-icon" id="symbolPreview">$</span>
                        <span class="symbol-text" id="previewText">1,234.56</span>
                    </div>
                </div>
            </div>


            <!-- Is Active -->
            <div class="form-group form-check" style="margin-top: 18px;">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" checked />
                <label asp-for="IsActive" class="form-check-label" for="isActiveSwitch">
                    Currency is Active
                </label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>

        <!-- Info Section -->
        <div class="lists-section" style="margin-top:22px;">
            <h4>Currency Information</h4>
            <ul class="item-list">
                <li><strong>Name:</strong> Full name of the currency</li>
                <li><strong>Code:</strong> Standard 3-letter ISO code</li>
                <li><strong>Symbol:</strong> Display symbol used in UI & reports</li>
                <li><strong>Status:</strong> Only active currencies appear in lists</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-uppercase code
        document.querySelector('input[name="Code"]')?.addEventListener('input', function () {
            this.value = this.value.toUpperCase();
        });

        // Live symbol preview
        const symbolInput = document.querySelector('input[name="Symbol"]');
        const symbolPreview = document.getElementById('symbolPreview');
        const previewText = document.getElementById('previewText');

        symbolInput?.addEventListener('input', function () {
            const symbol = this.value || '$';
            symbolPreview.textContent = symbol;
            previewText.textContent = symbol + ' 1,234.56';
        });
    </script>
}
