@model BranchesIndexVM

@{
    ViewData["Title"] = "Branches";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Branches</h1>
        <p>Manage company branches and locations</p>
    </div>

    <!-- Search -->
    <div class="bp-search-card top-search">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search by branch name, code, email, or phone..." />
            </div>
            <button type="button" id="searchBtn">Search Branches</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">

        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Branches.Count()</h3>
                <p>Total Branches</p>
            </div>
            <i class="bi bi-building"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Countries.Count()</h3>
                <p>Countries</p>
            </div>
            <i class="bi bi-globe"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Branches.Count(b => !string.IsNullOrEmpty(b.Email))</h3>
                <p>With Email</p>
            </div>
            <i class="bi bi-envelope"></i>
        </div>

        <div class="bp-stat-card stat-4">
            <div>
                <h3>@Model.Branches.Count(b => !string.IsNullOrEmpty(b.PhoneNumber))</h3>
                <p>With Phone</p>
            </div>
            <i class="bi bi-telephone"></i>
        </div>

    </div>

    <!-- Branches List -->
    <div class="list-page branches-page">

        <div class="card">

            <h2>Branches List</h2>

            <!-- Floating Add Button -->
            <a href="javascript:void(0)" 
               onclick="openModalWithAjax('@Url.Action("Create", "Branch")', 'Add New Branch')" 
               class="floating-btn" 
               title="Add New Branch">
               <i class="fa-solid fa-plus"></i>
            </a>


            <!-- Filters -->
            <div class="filters-container">
                <div class="filter-row">
                    <div class="filter-item">
                        <select id="countryFilter" class="form-select"
                                asp-items="@(new SelectList(Model.Countries, "Id", "Name"))">
                            <option value="">All Countries</option>
                        </select>
                    </div>
                </div>
            </div>
<!-- Branches Table -->
<table>
    <thead>
        <tr>
            <th>Branch Name</th>
            <th>Code</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="branches">
        @foreach (var item in Model.Branches)
        {
            <tr>
                <td data-label="Branch Name"><strong>@item.Name</strong></td>
                <td data-label="Code">
                    <span class="text-muted">@item.Code</span>
                </td>
                <td data-label="Phone">
                    @if (!string.IsNullOrEmpty(item.PhoneNumber))
                    {
                        <a href="tel:@item.PhoneNumber" class="text-decoration-none">@item.PhoneNumber</a>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td data-label="Email">
                    @if (!string.IsNullOrEmpty(item.Email))
                    {
                        <a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td data-label="Actions">
                    <div class="action-buttons">
                    <!-- Details Button AJAX -->
                    <a href="javascript:void(0)" 
                       onclick="openModalWithAjax('@Url.Action("Details", "Branch", new { id = item.Id })', 'Branch Details')" 
                       class="btn btn-view btn-sm" 
                       title="View Branch">
                       <i class="fa-solid fa-eye"></i>
                    </a>

                    <!-- Edit Button AJAX -->
                    <a href="javascript:void(0)" 
                       onclick="openModalWithAjax('@Url.Action("Edit", "Branch", new { id = item.Id })', 'Edit Branch')" 
                       class="btn btn-update btn-sm" 
                       title="Edit Branch">
                       <i class="fa-solid fa-pen"></i>
                    </a>


                        <!-- Delete Button (Non-AJAX) -->
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-delete btn-sm" title="Delete Branch">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


            @if (!Model.Branches.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No branches found. Click "Add New Branch" to get started.
                </div>
            }

        </div>
    </div>

</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var country = parseInt($("#countryFilter").val()) || 0;
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Filter", "Branch")',
                    data: {
                        name: searchTerm,
                        countryId: country,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#countryFilter").change(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function fillTable(response) {
                var tableBody = $("#branches");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();

                    response.forEach(function (branch) {
                        var phone = branch.phoneNumber 
                            ? `<a href="tel:${branch.phoneNumber}" class="text-decoration-none"><i class="bi bi-telephone"></i> ${branch.phoneNumber}</a>`
                            : '<span class="text-muted">-</span>';
                        
                        var email = branch.email 
                            ? `<a href="mailto:${branch.email}" class="text-decoration-none"><i class="bi bi-envelope"></i> ${branch.email}</a>`
                            : '<span class="text-muted">-</span>';

                        newRows += `<tr>
                                        <td><strong>${branch.name}</strong></td>
                                        <td><span class="badge bg-secondary">${branch.code}</span></td>
                                        <td>${phone}</td>
                                        <td>${email}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/Branch/Details/${branch.id}" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/Branch/Edit/${branch.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${branch.name}?')) { document.getElementById('deleteForm${branch.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${branch.id}" action="/Branch/Delete/${branch.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='5' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}
