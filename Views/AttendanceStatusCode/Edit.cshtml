@model AttendanceStatusCode

@{
    ViewData["Title"] = "Edit Attendance Status Code";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit Attendance Status Code</h3>

        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()

            <!-- Hidden Id -->
            <input asp-for="Id" type="hidden" />

            <!-- Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Status Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Code -->
            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " style="text-transform: uppercase;" />
                <label asp-for="Code">Status Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group full-width">
                <textarea asp-for="Description" rows="5" class="form-control" placeholder=" "></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- IsActive -->
            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">Status is Active</label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // auto uppercase for Code
        document.querySelector('input[name="Code"]')
            ?.addEventListener('input', function () {
                this.value = this.value.toUpperCase();
            });
    </script>
}
