@model IEnumerable<LeaveType>

@{
    ViewData["Title"] = "Leave Types";
}

<!-- General styles -->
<link rel="stylesheet" href="~/css/ListPageHeader.css" />
<link rel="stylesheet" href="~/css/CRUD/Index.css" />
<link rel="stylesheet" href="~/css/GeneralModal.css" />

<div class="page-section">
    <!-- Header Section -->
    <div class="bp-header mb-4">
        <div class="bp-header-content">
            <div>
                <h2><i class="bi bi-calendar2-x"></i> Leave Types</h2>
                <p>Manage employee leave classifications</p>
            </div>
            <div>
                <a asp-action="Create" class="quick-action-btn card1">
                    <i class="bi bi-plus-circle me-2"></i><span>Add New</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="bp-stats-row mb-4">
        <div class="bp-stat-card" style="background: var(--card1-bg);">
            <div>
                <h3 style="color: var(--card1-h3);">@Model.Count()</h3>
                <p style="color: var(--card1-p);">Total Types</p>
            </div>
            <i class="bi bi-list" style="color: var(--card1-icon);"></i>
        </div>
        <div class="bp-stat-card" style="background: var(--card2-bg);">
            <div>
                <h3 style="color: var(--card2-h3);">@Model.Count(t => t.IsPaid)</h3>
                <p style="color: var(--card2-p);">Paid Leave</p>
            </div>
            <i class="bi bi-cash" style="color: var(--card2-icon);"></i>
        </div>
        <div class="bp-stat-card" style="background: var(--card3-bg);">
            <div>
                <h3 style="color: var(--card3-h3);">@Model.Count(t => !t.IsPaid)</h3>
                <p style="color: var(--card3-p);">Unpaid Leave</p>
            </div>
            <i class="bi bi-cash-stack" style="color: var(--card3-icon);"></i>
        </div>
        <div class="bp-stat-card" style="background: var(--card4-bg);">
            <div>
                <h3 style="color: var(--card4-h3);">@Model.Count(t => t.IsActive)</h3>
                <p style="color: var(--card4-p);">Active</p>
            </div>
            <i class="bi bi-check-circle" style="color: var(--card4-icon);"></i>
        </div>
    </div>

    <!-- Search Section -->
    <div class="bp-search-card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form id="searchForm">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-10">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" id="searchTerm" class="form-control" 
                                   placeholder="Search leave types by name..." />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="button" id="searchBtn" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Leave Types Table -->
    <div class="bp-search-card shadow-sm border-0">
        <div class="p-2 mb-2" style="background-color: #343a40; color: #fff; border-radius: 14px;">
            <h4 class="mb-0"><i class="bi bi-table"></i> Leave Types List</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-tag"></i> Leave Type Name</th>
                            <th><i class="bi bi-hash"></i> Code</th>
                            <th class="text-center"><i class="bi bi-calendar-range"></i> Max Days/Year</th>
                            <th class="text-center"><i class="bi bi-cash"></i> Paid</th>
                            <th class="text-center"><i class="bi bi-toggle-on"></i> Status</th>
                            <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody id="types">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-secondary fs-6">@item.Code</span>
                                </td>
                                <td class="text-center">
                                    @if (item.MaxDaysPerYear.HasValue && item.MaxDaysPerYear > 0)
                                    {
                                        <span class="badge bg-warning text-dark">@item.MaxDaysPerYear days</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Unlimited</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.IsPaid)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-cash"></i> Paid
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-cash-stack"></i> Unpaid
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal@(item.Id)" 
                                                title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Delete leave type <strong>@item.Name (@item.Code)</strong>?</p>
                                                    <p class="text-danger mb-0">
                                                        <i class="bi bi-exclamation-triangle"></i> This action cannot be undone!
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <i class="bi bi-info-circle"></i> No leave types found. Click "Add New" to get started.
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "LeaveType")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function fillTable(response) {
                var tableBody = $("#types");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (leaveType) {
                        var maxDays = leaveType.maxDaysPerYear && leaveType.maxDaysPerYear > 0
                            ? `<span class="badge bg-warning text-dark">${leaveType.maxDaysPerYear} days</span>`
                            : '<span class="badge bg-success">Unlimited</span>';
                        
                        var paidStatus = leaveType.isPaid 
                            ? '<span class="badge bg-success"><i class="bi bi-cash"></i> Paid</span>'
                            : '<span class="badge bg-warning text-dark"><i class="bi bi-cash-stack"></i> Unpaid</span>';
                        
                        var activeStatus = leaveType.isActive 
                            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>'
                            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>';

                        newRows += `<tr>
                                        <td><strong>${leaveType.name}</strong></td>
                                        <td><span class="badge bg-secondary fs-6">${leaveType.code}</span></td>
                                        <td class="text-center">${maxDays}</td>
                                        <td class="text-center">${paidStatus}</td>
                                        <td class="text-center">${activeStatus}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/LeaveType/Details/${leaveType.id}" class="btn btn-sm btn-info" title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/LeaveType/Edit/${leaveType.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${leaveType.name}?')) { document.getElementById('deleteForm${leaveType.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${leaveType.id}" action="/LeaveType/Delete/${leaveType.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='6' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}