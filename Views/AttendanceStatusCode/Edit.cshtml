@model AttendanceStatusCode

@{
    ViewData["Title"] = "Edit Attendance Status Code";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-pencil-square"></i> Edit Status Code</h2>
                    <p class="text-muted">Update attendance status information</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Edit Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-check2-square"></i> Status Code Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Hidden ID field -->
                        <input asp-for="Id" type="hidden" />
                        
                        <!-- Name Field -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-tag"></i> Status Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter status name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Name of the attendance status</div>
                        </div>

                        <!-- Code Field -->
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">
                                <i class="bi bi-hash"></i> Status Code <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter status code" maxlength="10" style="text-transform: uppercase;" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <div class="form-text">Short code for quick identification</div>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-card-text"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Optional: Describe when this status should be used</div>
                        </div>

                        <!-- Is Active Field -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch" />
                                <label class="form-check-label" for="isActiveSwitch">
                                    <i class="bi bi-toggle-on"></i> Status Code is Active
                                </label>
                            </div>
                            <div class="form-text">Inactive status codes won't appear in selection lists</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Update Status Code
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Tips</h6>
                    <ul class="mb-0 small">
                        <li>Changing the code may affect existing attendance records</li>
                        <li>Deactivating will hide this status from selection lists</li>
                        <li>Ensure the code is unique and meaningful</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-uppercase status code
        document.querySelector('input[name="Code"]')?.addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });
    </script>
}
