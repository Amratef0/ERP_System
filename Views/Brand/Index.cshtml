@using ERP_System_Project.ViewModels.Inventory
@model IEnumerable<BrandVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 text-primary">Brand Management</h1>
            <p class="text-muted mb-0">Manage your product brands and their details</p>
        </div>
        <a asp-controller="Brand" asp-action="New" class="btn btn-primary d-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i>Add New Brand
        </a>
    </div>

    <!-- Brands Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="card-title mb-0">Brand List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Brand Name</th>
                            <th scope="col">Logo</th>
                            <th scope="col">Website</th>
                            <th scope="col" class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle">
                                    <span class="fw-semibold">@brand.Name</span>
                                </td>
                                <td class="align-middle">
                                    <img src="@brand.LogoURL" class="img-thumbnail brand-logo" alt="@brand.Name logo">
                                </td>
                                <td class="align-middle">
                                    <a href="@brand.WebsiteURL" target="_blank" class="text-decoration-none website-link">
                                        @brand.Name Website
                                    </a>
                                </td>
                                <td class="text-end pe-4 align-middle">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Brand" asp-action="Edit" asp-route-Id="@brand.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a asp-controller="Brand" asp-action="Delete" asp-route-Id="@brand.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .brand-logo {
        width: 48px;
        height: 48px;
        object-fit: contain;
    }

    .website-link {
        max-width: 200px;
        display: inline-block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>