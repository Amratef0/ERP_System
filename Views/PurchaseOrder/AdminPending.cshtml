@model IEnumerable<ERP_System_Project.Models.PurchaseOrder>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2 class="mb-4">Pending Purchase Orders</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>PO Number</th>
                    <th>Supplier</th>
                    <th>Product</th>
                    <th>Warehouse</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PoNumber</td>
                        <td>@item.Supplier?.SupplierName</td>
                        <td>@item.WarehouseProduct?.Product?.Name</td>
                        <td>@item.WarehouseProduct?.Warehouse?.Name</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form asp-action="ChangeStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.PurchaseOrderId" />
                                <input type="hidden" name="newStatusId" value="2" /> <!-- Delivered -->
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fa-solid fa-truck"></i> Deliver
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
