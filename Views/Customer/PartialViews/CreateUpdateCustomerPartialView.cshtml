@model Customer
@inject IUnitOfWork unitOfWork
@{
    var CustomerTypes= new SelectList(await unitOfWork.CustomerTypes.GetAllAsync(), "Id", "Name");
    // or var departments = new SelectList(ViewBag.Departments, "Id", "Name");
}
<div class="form-group">

    <label class="col-fom-label" asp-for="FirstName"></label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">

    <label class="col-fom-label" asp-for="LastName"></label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>

<div class="form-group">

    <label class="col-fom-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">

    <label class="col-fom-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<div class="form-group">

    <label class="col-fom-label" asp-for="DateOfBirth"></label>
    <input asp-for="DateOfBirth" class="form-control" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>








<div class="form-group">
    <label class="col-form-label" asp-for="CustomerType"></label>
    <select class="form-control" asp-items="CustomerTypes" asp-for="CustomerTypeId">
        <option value="@null"> -- Select Customer Type -- </option>
    </select>

</div>
