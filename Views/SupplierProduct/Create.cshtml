@model ERP_System_Project.Models.SupplierProduct

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="create-supplier">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add Supplier Product</h3>

        <form id="supplierProductForm" asp-action="Create" method="post">

            <div class="form-group">
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers">
                    <option value="">-- Select Supplier --</option>
                </select>
                <label asp-for="SupplierId"></label>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                    <option value="">-- Select Product --</option>
                </select>
                <label asp-for="ProductId"></label>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="UnitPrice" class="form-control" placeholder=" " />
                <label asp-for="UnitPrice"></label>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>
