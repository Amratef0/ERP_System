@model CustomerTypeVM
@{
    ViewData["Title"] = "Creae";
}

<div class="form-page">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add New Customer Type</h3>

        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Description" class="form-control" placeholder=" " />
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Add</button>

                <a asp-action="Index"
                   asp-controller="CustomerType"
                   class="btn btn-secondary">
                    Back
                </a>
            </div>

        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
