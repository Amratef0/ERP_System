@model CustomerAddressVM
@{
    ViewData["Title"] = "Edit Address";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">

        <h3 class="formTitle" id="form-title">Edit Address</h3>

        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerId" />

            <!-- Country -->
            <div class="form-group">
                <input asp-for="Country" class="form-control" placeholder=" " />
                <label asp-for="Country">Country <span class="text-danger">*</span></label>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <!-- City -->
            <div class="form-group">
                <input asp-for="City" class="form-control" placeholder=" " />
                <label asp-for="City">City <span class="text-danger">*</span></label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- Street -->
            <div class="form-group">
                <input asp-for="Street" class="form-control" placeholder=" " />
                <label asp-for="Street">Street <span class="text-danger">*</span></label>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <!-- Building Number -->
            <div class="number-field-group">
                <label for="BuildingNumber" class="number-label">Building Number</label>
                <input asp-for="BuildingNumber" type="number" class="number-input" />
                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>

            <!-- Apartment Number -->
            <div class="number-field-group">
                <label for="ApartmentNumber" class="number-label">Apartment Number</label>
                <input asp-for="ApartmentNumber" type="number" class="number-input" />
                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="CustomerAddress" asp-route-id="@Model.CustomerId" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
