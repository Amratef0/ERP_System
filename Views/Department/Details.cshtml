@model ERP_System_Project.Models.HR.Department

@{
    ViewData["Title"] = "Department Details";
}

<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page">

    <!-- Title -->
    <h2 class="title">Department Details</h2>

    <!-- Name + Code -->
    <h3 class="supplier-name">@Model.Name (@Model.Code)</h3>


    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <!-- Department Name -->
        <div class="detail-item">
            <dt>Department Name</dt>
            <dd>@Model.Name</dd>
        </div>

        <!-- Department Code -->
        <div class="detail-item">
            <dt>Department Code</dt>
            <dd>@Model.Code</dd>
        </div>

        <!-- Cost Center -->
        <div class="detail-item">
            <dt>Cost Center</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.CostCenterCode))
                {
                    @Model.CostCenterCode
                }
                else
                {
                    <span class="text-muted">Not assigned</span>
                }
            </dd>
        </div>

        <!-- Status -->
        <div class="detail-item">
            <dt>Status</dt>
            <dd>
                @if (Model.IsActive)
                {
                    <span class="status active">Active</span>
                }
                else
                {
                    <span class="status inactive">Inactive</span>
                }
            </dd>
        </div>

        <!-- Internal ID -->
        <div class="detail-item">
            <dt>Internal ID</dt>
            <dd class="text-muted">@Model.Id</dd>
        </div>

    </dl>


    <!-- INFO LIST -->
    <div class="lists-section" style="margin-top:22px;">
        <h4>Department Information</h4>

        <ul class="item-list">
            <li><strong>Department Name:</strong> The official name of the department</li>
            <li><strong>Department Code:</strong> Unique identifier used in the system</li>
            <li><strong>Cost Center Code:</strong> Used for financial reporting and budget tracking</li>
            <li><strong>Status:</strong> Indicates whether the department is currently active</li>
        </ul>
    </div>


    <!-- ACTION BUTTONS -->
    <div class="viewActions">
        <div class="left-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
        </div>

        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>

</div>
