@using ERP_System_Project.Models.Authentication
@model VerifyEmailViewModel

@{
    ViewData["Title"] = "Verify Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Email Verification</h2>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-action="ConfirmEmailToken" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="Token" class="form-label"></label>
                            <input asp-for="Token" class="form-control" />
                            <span asp-validation-for="Token" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Verify Email</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
