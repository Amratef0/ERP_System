@model PageSourcePagination<ProductCardVM>
@{
    ViewData["Title"] = "Market";
    string currentSearch = Context.Request.Query["searchByName"];
    string currentBrand = Context.Request.Query["brandName"];
    string currentCategory = Context.Request.Query["categoryName"];
    string currentMinPrice = Context.Request.Query["minPrice"];
    string currentMaxPrice = Context.Request.Query["maxPrice"];
}

<partial name="_Toast" />

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 text-primary fw-bold">Marketplace</h1>
            <p class="text-muted mb-0">Browse and discover amazing products</p>
        </div>
        <div>
            <a asp-controller="CustomerFavorite" asp-action="Index" asp-route-customerId="@ViewBag.CustomerId"
               class="btn btn-outline-danger me-2">
                <i class="bi bi-heart-fill me-1"></i>Favorites
            </a>
            <a asp-controller="CustomerWishlist" asp-action="Index" asp-route-customerId="@ViewBag.CustomerId"
               class="btn btn-outline-primary">
                <i class="bi bi-bookmark-fill me-1"></i>Wishlist
            </a>
        </div>
    </div>

    <!-- Search and Filter Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form method="get" asp-controller="Market" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="searchInput" class="form-label small text-muted">Search Products</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" name="searchByName" value="@currentSearch"
                               class="form-control border-start-0" placeholder="Enter product name to search..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <label for="brandFilter" class="form-label small text-muted">Brand</label>
                    <select class="form-select" id="brandFilter" name="brandName">
                        <option value="">All Brands</option>
                        @if (ViewBag.Brands != null)
                        {
                            foreach (var brand in ViewBag.Brands)
                            {
                                <option value="@brand.Text" selected="@(currentBrand == brand.Text)">@brand.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="categoryFilter" class="form-label small text-muted">Category</label>
                    <select class="form-select" id="categoryFilter" name="categoryName">
                        <option value="">All Categories</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Text" selected="@(currentCategory == category.Text)">@category.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="minPrice" class="form-label small text-muted">Min Price</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-currency-dollar text-muted"></i>
                        </span>
                        <input type="number" id="minPrice" name="minPrice" value="@currentMinPrice"
                               class="form-control border-start-0" placeholder="Min" min="0" step="0.01" />
                    </div>
                </div>

                <div class="col-md-2">
                    <label for="maxPrice" class="form-label small text-muted">Max Price</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-currency-dollar text-muted"></i>
                        </span>
                        <input type="number" id="maxPrice" name="maxPrice" value="@currentMaxPrice"
                               class="form-control border-start-0" placeholder="Max" min="0" step="0.01" />
                    </div>
                </div>

                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-1"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    @if (Model.Data.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model.Data)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="card product-card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            <!-- Product Image -->
                            <img src="@product.ImageURL" class="card-img-top" alt="@product.Name"
                                 style="height: 200px; object-fit: cover; border-radius: 8px 8px 0 0;">

                            <!-- Offer Badge -->
                            @if (product.HaveOffer)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-danger rounded-pill px-3 py-2">
                                        -@product.DiscountPercentage% OFF
                                    </span>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <!-- Brand -->
                            <div class="d-flex align-items-center mb-2">
                                <img src="@product.BrandImageURL" alt="@product.BrandName"
                                     class="rounded-circle me-2" style="width: 24px; height: 24px; object-fit: cover;">
                                <small class="text-muted">@product.BrandName</small>
                            </div>

                            <!-- Product Name -->
                            <h6 class="card-title fw-bold text-dark mb-1" style="min-height: 2.5rem;">
                                @product.Name
                            </h6>

                            <!-- Star Rating -->
                            <div class="mb-2">
                                <div class="d-flex align-items-center gap-1">
                                    @{
                                        double rating = product.TotalRate;
                                        int fullStars = (int)rating;
                                        bool hasHalfStar = (rating - fullStars) >= 0.5;
                                        int emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                    }

                                    <!-- Stars -->
                                    @for (int i = 0; i < fullStars; i++)
                                    {
                                        <i class="bi bi-star-fill text-warning" style="font-size: 0.8rem;"></i>
                                    }

                                    @if (hasHalfStar)
                                    {
                                        <i class="bi bi-star-half text-warning" style="font-size: 0.8rem;"></i>
                                    }

                                    @for (int i = 0; i < emptyStars; i++)
                                    {
                                        <i class="bi bi-star text-warning" style="font-size: 0.8rem;"></i>
                                    }

                                    <!-- Rating Number -->
                                    <span class="text-muted small ms-1">
                                        @product.TotalRate.ToString("0.0") (@product.NumberOfReviews)
                                    </span>
                                </div>
                            </div>

                            <!-- Category -->
                            <div class="mb-3">
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-tag me-1"></i>@product.CategoryName
                                </span>
                            </div>

                            <!-- Pricing -->
                            <div class="mt-auto">
                                @if (product.HaveOffer)
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="h5 mb-0 fw-bold text-success">$@product.NetPrice.ToString("N2")</span>
                                        <span class="text-muted text-decoration-line-through small">$@product.Price.ToString("N2")</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="h5 mb-0 fw-bold text-dark">$@product.Price.ToString("N2")</span>
                                }
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 mt-3">
                                <a asp-controller="Market"
                                   asp-action="ProductDetails"
                                   asp-route-productId="@product.Id"
                                   class="btn btn-primary btn-sm flex-fill">
                                    <i class="bi bi-eye"></i>
                                    Show Details
                                </a>

                                <!-- Favorite button -->
                                <button class="btn btn-outline-danger btn-sm btn-favorite"
                                        data-product-id="@product.Id"
                                        data-customer-id="@(ViewBag.CustomerId ?? 0)">
                                    <i class="bi bi-heart"></i>
                                </button>

                                <!-- Wishlist button -->
                                @* <button class="btn btn-outline-primary btn-sm btn-wishlist"
                                        data-product-id="@product.Id"
                                        data-customer-id="@(ViewBag.CustomerId ?? 0)">
                                    <i class="bi bi-bookmark"></i>
                                </button> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-search display-4 d-block mb-3"></i>
            <h5>No products found</h5>
            <p class="mb-0">Try adjusting your search filters</p>
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted small">
                Showing page @Model.PageNumber of @Model.TotalPages
            </div>
            <nav aria-label="Product pagination">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(Model.PageNumber > 1 ? "" : "disabled")">
                        <a class="page-link"
                           asp-controller="Market"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-pageSize="12"
                           asp-route-searchByName="@currentSearch"
                           asp-route-brandName="@currentBrand"
                           asp-route-categoryName="@currentCategory"
                           asp-route-minPrice="@currentMinPrice"
                           asp-route-maxPrice="@currentMaxPrice">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link"
                               asp-controller="Market"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-pageSize="12"
                               asp-route-searchByName="@currentSearch"
                               asp-route-brandName="@currentBrand"
                               asp-route-categoryName="@currentCategory"
                               asp-route-minPrice="@currentMinPrice"
                               asp-route-maxPrice="@currentMaxPrice">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber < Model.TotalPages ? "" : "disabled")">
                        <a class="page-link"
                           asp-controller="Market"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-pageSize="12"
                           asp-route-searchByName="@currentSearch"
                           asp-route-brandName="@currentBrand"
                           asp-route-categoryName="@currentCategory"
                           asp-route-minPrice="@currentMinPrice"
                           asp-route-maxPrice="@currentMaxPrice">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
@section Scripts {
    <partial name="~/Views/Shared/_ProductCardsScripts.cshtml" />

}
<style>
    /* ===== General ===== */
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* ===== Cards ===== */
    .card {
        border-radius: 16px;
        transition: all 0.4s ease;
        background: #ffffff;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    /* ===== Product Image ===== */
    .product-card img {
        border-radius: 16px 16px 0 0;
        transition: transform 0.3s ease;
    }

        .product-card img:hover {
            transform: scale(1.05);
        }

    /* ===== Buttons ===== */
    .btn {
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .btn-primary {
        background: linear-gradient(45deg, #4a90e2, #007bff);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #007bff, #4a90e2);
            transform: translateY(-2px) scale(1.05);
        }

    .btn-outline-danger,
    .btn-outline-primary {
        border-width: 2px;
        transition: all 0.3s ease;
    }

        .btn-outline-danger:hover {
            background-color: #ff6b6b;
            color: #fff;
            transform: translateY(-2px);
        }

        .btn-outline-primary:hover {
            background-color: #4a90e2;
            color: #fff;
            transform: translateY(-2px);
        }

    /* ===== Badges ===== */
    .badge {
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .badge.bg-danger:hover {
            transform: scale(1.1);
        }

        .badge.bg-light:hover {
            background-color: #e0e0e0;
        }

    /* ===== Stars ===== */
    .bi-star-fill,
    .bi-star-half,
    .bi-star {
        color: #ffca28;
        transition: transform 0.3s ease;
    }

        .bi-star-fill:hover,
        .bi-star-half:hover,
        .bi-star:hover {
            transform: scale(1.2);
        }

    /* ===== Pagination ===== */
    .page-item .page-link {
        border-radius: 50%;
        transition: all 0.3s ease;
        margin: 0 3px;
    }

        .page-item .page-link:hover {
            background-color: #0d6efd;
            color: #fff;
            transform: scale(1.1);
        }

    /* ===== Form Inputs ===== */
    .form-control {
        border-radius: 12px;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 10px rgba(74, 144, 226, 0.3);
        }

    /* ===== Cards Footer Buttons ===== */
    .product-card .btn-favorite,
    .product-card .btn-wishlist {
        transition: all 0.3s ease;
    }

        .product-card .btn-favorite:hover i,
        .product-card .btn-wishlist:hover i {
            color: #ff6b6b;
            transform: scale(1.3);
        }

    

    .product-card {
        animation: fadeInUp 0.5s ease forwards;
    }


</style>
