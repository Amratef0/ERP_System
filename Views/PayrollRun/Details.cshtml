@model PayrollRunDetailsVM

@{
    ViewData["Title"] = $"{Model.Name} - Details";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header d-flex align-items-center gap-2">
        <h2 class="mb-0">@Model.Name</h2>
    
        @if (Model.IsLocked)
        {
            <span class="badge bg-success">
                <i class="bi bi-lock-fill"></i> Confirmed
            </span>
        }
        else
        {
            <span class="badge bg-warning text-dark">
                <i class="bi bi-unlock-fill"></i> Draft
            </span>
        }
    <p class="mt-2">Payroll details for this run</p>
    </div>



<div class="d-flex gap-3 flex-wrap mb-4">
    <a asp-action="Index" class="quick-action-btn card1">
        <i class="bi bi-arrow-left me-2"></i> <span>Back to List</span>
    </a>

    @if (!Model.IsLocked)
    {
        <form asp-action="Regenerate" asp-route-id="@Model.Id" method="post" style="display:inline;"
              onsubmit="return confirm('This will delete all entries and regenerate them. Continue?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="quick-action-btn card2">
                <i class="bi bi-arrow-clockwise me-2"></i> <span>Regenerate</span>
            </button>
        </form>

        <form asp-action="Lock" asp-route-id="@Model.Id" method="post" style="display:inline;"
              onsubmit="return confirm('This will lock the payroll and send email notifications to all employees. Continue?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="quick-action-btn card3">
                <i class="bi bi-lock-fill me-2"></i> <span>Confirm Payroll</span>
            </button>
        </form>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;"
              onsubmit="return confirm('Are you sure you want to delete this payroll run?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="quick-action-btn card4">
                <i class="bi bi-trash me-2"></i> <span>Delete</span>
            </button>
        </form>
    }
    else
    {
        <form asp-action="Unlock" asp-route-id="@Model.Id" method="post" style="display:inline;"
              onsubmit="return confirm('This will unlock the payroll for editing. Continue?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="quick-action-btn card2">
                <i class="bi bi-unlock-fill me-2"></i> <span>Unlock</span>
            </button>
        </form>
    }

    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }



    <!-- Summary Cards -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.PeriodStart.ToString("MMM yyyy") - @Model.PeriodEnd.ToString("dd MMM yyyy")</h3>
                <p>Period</p>
            </div>
            <i class="bi bi-calendar-event"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Entries.Count</h3>
                <p>Total Employees</p>
            </div>
            <i class="bi bi-people"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.CurrenciesUsed.Count</h3>
                <p>Currencies Used</p>
                <small class="text-muted">
                    @foreach (var currency in Model.CurrenciesUsed.Take(3))
                    {
                        <span class="badge bg-info me-1">@currency.Code</span>
                    }
                    @if (Model.CurrenciesUsed.Count > 3)
                    {
                        <span>+@(Model.CurrenciesUsed.Count - 3)</span>
                    }
                </small>
            </div>
            <i class="bi bi-currency-dollar"></i>
        </div>

        <div class="bp-stat-card stat-4">
            <div>
                <h3>@Model.Status</h3>
                <p>Status</p>
                @if (Model.ProcessedDate.HasValue)
                {
                    <small class="text-muted">@Model.ProcessedDate.Value.ToString("dd MMM yyyy HH:mm")</small>
                }
                else
                {
                    <small class="text-muted">Not processed</small>
                }
            </div>
            <i class="bi bi-lock"></i>
        </div>
    </div>



    <br />
<!-- Currency Breakdown Card -->
@if (Model.CurrencyTotals.Any())
{
    <div class="currency-breakdown-box mb-4">
        <h2 class="currency-breakdown-title"><i class="bi bi-currency-exchange"></i> Currency Breakdown</h2>

        <div class="currency-breakdown-items">
            @foreach (var currencyTotal in Model.CurrencyTotals)
            {
                <div class="currency-item">
                    <div class="currency-label">@currencyTotal.Key</div>
                    <div class="currency-value">@currencyTotal.Value.ToString("N2")</div>
                    <div class="currency-subtext">Total Net Amount</div>
                </div>
            }
        </div>
    </div>
}


    <!-- Payroll Entries Table -->
<div class="list-page customers-page mt-4">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="card-title fw-semibold">Payroll Entries (@Model.Entries.Count)</h2>
            <span class="badge bg-primary rounded-pill">@Model.Entries.Count Entries</span>
        </div>

        @if (Model.Entries.Any())
        {
            <div class="table-responsive">
                <table class="table" id="payrollTable">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Job Title</th>
                            <th class="text-end">Base Salary</th>
                            <th class="text-end">Overtime</th>
                            <th class="text-end">Bonus</th>
                            <th class="text-end">Allowances</th>
                            <th class="text-end">Deductions</th>
                            <th class="text-end">Tax (10%)</th>
                            <th class="text-end">Net Amount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.Entries)
                        {
                            <tr>
                                <td>@entry.EmployeeName</td>
                                <td>@entry.DepartmentName</td>
                                <td>@entry.JobTitleName</td>
                                <td class="text-end">@entry.BaseSalaryAmount.ToString("N2")</td>
                                <td class="text-end text-success">+@entry.OvertimeAmount.ToString("N2")</td>
                                <td class="text-end text-success">+@entry.BonusAmount.ToString("N2")</td>
                                <td class="text-end text-success">+@entry.AllowanceAmount.ToString("N2")</td>
                                <td class="text-end text-danger">-@entry.DeductionAmount.ToString("N2")</td>
                                <td class="text-end text-danger">-@entry.TaxAmount.ToString("N2")</td>
                                <td class="text-end">@entry.NetAmount.ToString("N2") @entry.CurrencyCode</td>
                                <td class="text-center">
                                    <a asp-controller="PayrollEntry" asp-action="Details" asp-route-id="@entry.Id" class="btn btn-view btn-sm">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    @if (!Model.IsLocked)
                                    {
                                        <a asp-controller="PayrollEntry" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-update btn-sm">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                        <form asp-controller="PayrollEntry" asp-action="Delete" 
                                              asp-route-id="@entry.Id" asp-route-payrollRunId="@Model.Id"
                                              method="post" style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this payroll entry?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-delete btn-sm" title="Delete">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="fw-bold">
                        <tr>
                            <td colspan="3">TOTAL (Mixed Currencies)</td>
                            <td class="text-end">@Model.Entries.Sum(e => e.BaseSalaryAmount).ToString("N2")</td>
                            <td class="text-end text-success">@Model.Entries.Sum(e => e.OvertimeAmount).ToString("N2")</td>
                            <td class="text-end text-success">@Model.Entries.Sum(e => e.BonusAmount).ToString("N2")</td>
                            <td class="text-end text-success">@Model.Entries.Sum(e => e.AllowanceAmount).ToString("N2")</td>
                            <td class="text-end text-danger">@Model.Entries.Sum(e => e.DeductionAmount).ToString("N2")</td>
                            <td class="text-end text-danger">@Model.Entries.Sum(e => e.TaxAmount).ToString("N2")</td>
                            <td class="text-end text-primary">See Currency Breakdown</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No payroll entries found.</p>
            </div>
        }
    </div>
</div>

<!-- Summary Statistics -->
<div class="bp-summary-grid mt-4">

    <div class="bp-card">
        <div class="bp-card-header">
            <h4 class="card-section-title">Breakdown Summary</h5>
        </div>
        <div class="bp-card-body">
            <p class="text-muted mb-0">Totals are grouped by currency - see "Currency Breakdown" card above.</p>
        </div>
    </div>

    <div class="bp-card bp-card-info">
        <div class="bp-card-header">
            <h4 style = "color : #fff;"><i class="bi bi-info-circle"></i> Actions Guide</h3>
        </div>
        <div class="bp-card-body">
            @if (!Model.IsLocked)
            {
                <h6>Draft Mode - Available Actions:</h6>
                <ul>
                    <li><strong>Edit Entries:</strong> Click the edit icon to adjust individual payroll amounts</li>
                    <li><strong>Regenerate:</strong> Recalculate all entries based on current attendance/leave data</li>
                    <li><strong>Confirm Payroll:</strong> Lock the payroll and send email notifications to employees</li>
                    <li><strong>Delete:</strong> Remove this entire payroll run</li>
                </ul>
                <div class="bp-alert-warning mt-3">
                    <strong>Remember:</strong> Once confirmed, the payroll cannot be edited without unlocking it first.
                </div>
            }
            else
            {
                <h6>Confirmed & Locked:</h6>
                <ul>
                    <li><i class="bi bi-check-circle text-success"></i> Payroll has been processed</li>
                    <li><i class="bi bi-envelope-check text-success"></i> Email notifications sent to all employees</li>
                    <li><i class="bi bi-lock-fill text-success"></i> Entries are protected from editing</li>
                </ul>
                <div class="bp-alert-info mt-3">
                    If you need to make corrections, use the <strong>Unlock</strong> button.
                </div>
            }
        </div>
    </div>

</div>


<link rel="stylesheet" href="~/css/ListPageHeader.css" />
<link rel="stylesheet" href="~/css/CRUD/Index.css" />
<link rel="stylesheet" href="~/css/pagination.css" />
@await Html.PartialAsync("_GeneralModal")

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $("#searchInput").on("keyup", function() {
                filterTable();
            });

            // Currency filter functionality
            $("#currencyFilter").on("change", function() {
                filterTable();
            });

            function filterTable() {
                var searchValue = $("#searchInput").val().toLowerCase();
                var currencyValue = $("#currencyFilter").val();

                $("#payrollTable tbody tr").filter(function() {
                    var textMatch = $(this).text().toLowerCase().indexOf(searchValue) > -1;
                    var currencyMatch = true;

                    if (currencyValue) {
                        // Check if the row contains the selected currency in the Net Amount column
                        var netAmountCell = $(this).find("td").eq(9).text(); // 10th column (Net Amount)
                        currencyMatch = netAmountCell.indexOf(currencyValue) > -1;
                    }

                    $(this).toggle(textMatch && currencyMatch);
                });

                // Update visible count
                var visibleCount = $("#payrollTable tbody tr:visible").length;
                var totalCount = $("#payrollTable tbody tr").length;
                
                // You can add a counter display here if needed
                console.log(`Showing ${visibleCount} of ${totalCount} entries`);
            }
        });
    </script>
}
