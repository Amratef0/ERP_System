@model ERP_System_Project.Models.HR.JobTitle

@{
    ViewData["Title"] = "Job Title Details";
}

<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page">

    <!-- Title -->
    <h2 class="title">Job Title Details</h2>

    <!-- Name + Code -->
    <h3 class="supplier-name">@Model.Name (@Model.Code)</h3>


    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <!-- Job Title -->
        <div class="detail-item">
            <dt>Job Title</dt>
            <dd>@Model.Name</dd>
        </div>

        <!-- Job Code -->
        <div class="detail-item">
            <dt>Job Code</dt>
            <dd>@Model.Code</dd>
        </div>

        <!-- Status -->
        <div class="detail-item">
            <dt>Status</dt>
            <dd>
               @if (Model.IsActive)
                {
                    <span class="status active">Active</span>
                }
                else
                {
                    <span class="status inactive">Inactive</span>
                }
            </dd>
        </div>

        <!-- Min Salary -->
        <div class="detail-item">
            <dt>Min Salary</dt>
            <dd>
                @if (Model.MinSalary.HasValue && Model.MinSalary > 0)
                {
                   <span class="fs-6">$@Model.MinSalary.Value.ToString("N2")</span>

                }
                else
                {
                    <span class="text-muted">Not set</span>
                }
            </dd>
        </div>

        <!-- Max Salary -->
        <div class="detail-item">
            <dt>Max Salary</dt>
            <dd>
                @if (Model.MaxSalary.HasValue && Model.MaxSalary > 0)
                {
                   <span class="fs-6">$@((Model.MaxSalary.Value - Model.MinSalary.Value).ToString("N2"))</span>
                }
                else
                {
                    <span class="text-muted">Not set</span>
                }
            </dd>
        </div>

        <!-- Range -->
        @if (Model.MinSalary.HasValue && Model.MaxSalary.HasValue && Model.MinSalary > 0 && Model.MaxSalary > 0)
        {
            <div class="detail-item">
                <dt>Range</dt>
                <dd>
                    $@((Model.MaxSalary.Value - Model.MinSalary.Value).ToString("N2"))
                </dd>
            </div>
        }
    </dl>


    <!-- DESCRIPTION -->
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="details-section" style="margin-top:18px;">
            <h4>Description</h4>

           <div class="detail-item" style="grid-column: 1 / -1;">
              <dt>Description</dt>
              <dd>@Model.Description</dd>
           </div>

        </div>
    }


    <!-- INFO LIST -->
    <div class="lists-section" style="margin-top:22px;">
        <h4>Job Title Information</h4>

        <ul class="item-list">
            <li><strong>Job Title:</strong> Official position name</li>
            <li><strong>Job Code:</strong> Unique identifier in the system</li>
            <li><strong>Status:</strong> Availability in selection lists</li>
            <li><strong>Salary Range:</strong> Compensation boundaries</li>
            <li><strong>Description:</strong> Responsibilities and requirements</li>
        </ul>
    </div>


    <!-- ACTION BUTTONS -->
    <div class="viewActions">
        <div class="left-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
        </div>

        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>
</div>
