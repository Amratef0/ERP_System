@model Currency

@{
    ViewData["Title"] = "Edit Currency";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-pencil-square"></i> Edit Currency</h2>
                    <p class="text-muted">Update currency information</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Edit Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-currency-exchange"></i> Currency Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Hidden ID field -->
                        <input asp-for="Id" type="hidden" />
                        
                        <!-- Currency Name Field -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-tag"></i> Currency Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter currency name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Full name of the currency</div>
                        </div>

                        <!-- Currency Code Field -->
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">
                                <i class="bi bi-hash"></i> Currency Code <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter currency code" maxlength="3" style="text-transform: uppercase;" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <div class="form-text">ISO 4217 currency code (3 letters)</div>
                        </div>

                        <!-- Currency Symbol Field -->
                        <div class="mb-3">
                            <label asp-for="Symbol" class="form-label">
                                <i class="bi bi-currency-dollar"></i> Currency Symbol <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Symbol" class="form-control form-control-lg" placeholder="Enter currency symbol" maxlength="5" />
                            <span asp-validation-for="Symbol" class="text-danger"></span>
                            <div class="form-text">Symbol used to represent the currency</div>
                        </div>

                        <!-- Symbol Preview -->
                        <div class="mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted mb-2">
                                        <i class="bi bi-eye"></i> Symbol Preview
                                    </h6>
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="badge bg-success fs-3" id="symbolPreview">@Model.Symbol</span>
                                        <span class="text-muted" id="previewText">@Model.Symbol 1,234.56</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Is Active Field -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch" />
                                <label class="form-check-label" for="isActiveSwitch">
                                    <i class="bi bi-toggle-on"></i> Currency is Active
                                </label>
                            </div>
                            <div class="form-text">Inactive currencies won't appear in selection lists</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Update Currency
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Tips</h6>
                    <ul class="mb-0 small">
                        <li>Changing currency code may affect salary and financial records</li>
                        <li>Deactivating will hide the currency from selection lists</li>
                        <li>Ensure symbol is correct for proper display in reports</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-uppercase currency code
        document.querySelector('input[name="Code"]')?.addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });

        // Live symbol preview
        const symbolInput = document.querySelector('input[name="Symbol"]');
        const symbolPreview = document.getElementById('symbolPreview');
        const previewText = document.getElementById('previewText');
        
        symbolInput?.addEventListener('input', function(e) {
            const symbol = this.value || '@Model.Symbol';
            symbolPreview.textContent = symbol;
            previewText.textContent = symbol + ' 1,234.56';
        });
    </script>
}
