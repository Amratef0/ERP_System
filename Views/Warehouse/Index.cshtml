@model IEnumerable<ERP_System_Project.Models.Inventory.Warehouse>

@{
    ViewData["Title"] = "Warehouses";
}

<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />

<div class="list-page warehouses-page">
    <div class="card">
        <h2>Warehouses</h2>

        <!-- Floating Button -->
        <a href="javascript:void(0)" 
           onclick="openModalWithAjax('@Url.Action("Create", "Warehouse")', 'Add New Warehouse')" 
           class="floating-btn" 
           title="Add New Warehouse">
           <i class="fa-solid fa-plus"></i>
        </a>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Branch</th>
                    <th>Products Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var w in Model)
                {
                    <tr>
                        <td data-label="Code">@w.Code</td>
                        <td data-label="Name">@w.Name</td>
                        <td data-label="Branch">@w.Branch?.Name</td>
                        <td data-label="Products Count">@w.WarehouseProducts.Count()</td>
                        <td data-label="Actions">
                            <div class="action-buttons">
                                <!-- View -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Details", "Warehouse", new { id = w.WarehouseId })', 'View Warehouse')" 
                                   class="btn btn-view btn-sm" 
                                   title="View Warehouse">
                                   <i class="fa-solid fa-eye"></i>
                                </a>

                                <!-- Edit -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Edit", "Warehouse", new { id = w.WarehouseId })', 'Edit Warehouse')" 
                                   class="btn btn-update btn-sm" 
                                   title="Edit Warehouse">
                                   <i class="fa-solid fa-pen"></i>
                                </a>

                                <!-- Delete -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Delete", "Warehouse", new { id = w.WarehouseId })', 'Delete Warehouse')" 
                                   class="btn btn-delete btn-sm" 
                                   title="Delete Warehouse">
                                   <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- General Modal -->
@await Html.PartialAsync("_GeneralModal")

