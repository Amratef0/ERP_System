@using ERP_System_Project.Models.Authentication
@model EnterTokenViewModel

@{
    ViewData["Title"] = "Enter Reset Token";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Enter Reset Token</h2>

                    <form asp-action="SaveEnterToken" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Token" class="form-label"></label>
                            <input asp-for="Token" class="form-control" />
                            <span asp-validation-for="Token" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Verify Token</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
