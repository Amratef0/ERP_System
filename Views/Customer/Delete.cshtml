@* Change from Customer to CustomerVM *@
@model ERP_System_Project.ViewModels.CRM.CustomerVM

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Customer</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this customer?</h5>
                        <p class="mb-0">This action will soft delete the customer. They will be marked as inactive but their data will be preserved.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Full Name</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">Customer Type</dt>
                        <dd class="col-sm-9">@Model.CustomerTypeName</dd>

                        <dt class="col-sm-3">Number of Orders</dt>
                        <dd class="col-sm-9">@Model.NumOfOrders</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Confirm Delete</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>