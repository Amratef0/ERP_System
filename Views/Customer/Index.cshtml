@model PageSourcePagination<CustomerVM>

@{
    ViewData["Title"] = "All Customers";
    string currentSearch = Context.Request.Query["searchValue"];
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>All Customers</h1>
        <p>Manage and view your registered customers</p>
    </div>

    <!-- Search Card -->
    <div class="bp-search-card top-search mt-4">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" name="searchValue" value="@currentSearch" placeholder="Search customers by name..." />
            </div>
            <button type="button" id="searchBtn">Search</button>
        </form>
    </div>

    <!-- Stats Row (Optional) -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Data.Count()</h3>
                <p>Total Customers</p>
            </div>
            <i class="bi bi-people"></i>
        </div>
        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Data.Count(c => c.IsActive)</h3>
                <p>Active</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>
        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Data.Count(c => !c.IsActive)</h3>
                <p>Inactive</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="list-page customers-page mt-4">
        <div class="card">
            <h2>Customers List</h2>

            <!-- Floating Add Button -->
            <a href="javascript:void(0);" 
               onclick="openModalWithAjax('@Url.Action("Create", "Customer")', 'Add New Customer')" 
               class="floating-btn" 
               title="Add New Customer">
               <i class="fa-solid fa-plus"></i>
            </a>

            <table>
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="customers">
                    @foreach (var c in Model.Data)
                    {
                        <tr>
                            <td data-label="Full Name">@c.FullName</td>
                            <td data-label="Email">@c.Email</td>
                            <td data-label="Phone">@c.PhoneNumber</td>
                            <td data-label="Status">
                                @if (c.IsActive)
                                {
                                    <span class="status active">Active</span>
                                }
                                else
                                {
                                    <span class="status inactive">Inactive</span>
                                }
                            </td>
                            <td data-label="Actions">
                                <div class="action-buttons">
                                    <!-- View (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Details", "Customer", new { id = c.Id })', 'View Customer')"
                                       class="btn btn-view btn-sm" title="View Customer">
                                       <i class="fa-solid fa-eye"></i>
                                    </a>

                                    <!-- Edit (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Edit", "Customer", new { id = c.Id })', 'Edit Customer')"
                                       class="btn btn-update btn-sm" title="Edit Customer">
                                       <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <a href="javascript:void(0)"
                                       onclick="openModalWithAjax('@Url.Action("Delete", "Customer", new { id = c.Id })', 'Delete Customer')"
                                       class="btn btn-delete btn-sm"
                                       title="Delete Customer">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Data.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No customers found. Click "Add New Customer" to get started.
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/ListPageHeader.css" />
<link rel="stylesheet" href="~/css/CRUD/Index.css" />
<link rel="stylesheet" href="~/css/pagination.css" />
@await Html.PartialAsync("_GeneralModal")
