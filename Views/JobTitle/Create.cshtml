@model JobTitle

@{
    ViewData["Title"] = "Add Job Title";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-plus-circle"></i> Add New Job Title</h2>
                    <p class="text-muted">Create a new job position in the system</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Add Form -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-briefcase"></i> Job Title Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Name Field -->
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">
                                        <i class="bi bi-tag"></i> Job Title Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g., Senior Software Engineer" autofocus />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Code Field -->
                                <div class="mb-3">
                                    <label asp-for="Code" class="form-label">
                                        <i class="bi bi-hash"></i> Job Code <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Code" class="form-control form-control-lg" placeholder="e.g., SSE-001" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                    <div class="form-text">Unique identifier (e.g., SSE-001, MGR-002)</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <!-- Min Salary Field -->
                                <div class="mb-3">
                                    <label asp-for="MinSalary" class="form-label">
                                        <i class="bi bi-cash-stack"></i> Minimum Salary
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="MinSalary" type="number" step="0.01" class="form-control" placeholder="50000.00" />
                                    </div>
                                    <span asp-validation-for="MinSalary" class="text-danger"></span>
                                    <div class="form-text">Lowest salary for this position</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Max Salary Field -->
                                <div class="mb-3">
                                    <label asp-for="MaxSalary" class="form-label">
                                        <i class="bi bi-cash-coin"></i> Maximum Salary
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="MaxSalary" type="number" step="0.01" class="form-control" placeholder="100000.00" />
                                    </div>
                                    <span asp-validation-for="MaxSalary" class="text-danger"></span>
                                    <div class="form-text">Highest salary for this position</div>
                                </div>
                            </div>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-card-text"></i> Job Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter job responsibilities, requirements, and qualifications..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Optional: Describe the role, responsibilities, and requirements</div>
                        </div>

                        <!-- Is Active Field -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch" checked />
                                <label class="form-check-label" for="isActiveSwitch">
                                    <i class="bi bi-toggle-on"></i> Job Title is Active
                                </label>
                            </div>
                            <div class="form-text">Active job titles appear in selection lists</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Create Job Title
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Guidelines</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="mb-0 small">
                                <li>Job code must be unique</li>
                                <li>Use clear, descriptive job titles</li>
                                <li>Minimum salary should be less than maximum</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="mb-0 small">
                                <li>Salary ranges are optional but recommended</li>
                                <li>Description helps with recruitment</li>
                                <li>Active status can be changed later</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
