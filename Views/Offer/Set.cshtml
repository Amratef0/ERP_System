@using ERP_System_Project.ViewModels.ECommerce
@model OfferVM
@{
    ViewData["Title"] = "Set Offer";
}

<div class="form-page create-product">
    <div class="form">
        <h3 class="formTitle">Set Offer</h3>

        <form method="post" asp-action="Set">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="ProductId" />

            <!-- Offer Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Discount Percentage -->
            <div class="number-field-group">
                <label asp-for="DiscountPercentage" class="number-label">Discount Percentage (%)</label>
                <input asp-for="DiscountPercentage" type="number" min="1" max="100" class="number-input" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>

            <!-- Offer Duration -->
            <div class="number-field-group">
                <label asp-for="OfferDays" class="number-label">Offer Duration (Days)</label>
                <input asp-for="OfferDays" type="number" min="1" max="365" class="number-input" />
                <span asp-validation-for="OfferDays" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="form-buttons mt-3">
                <button type="submit" class="btn btn-primary">Save Offer</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
        @if (Model.IsHasOffer)
        {
            <form asp-action="Delete" asp-controller="Offer" asp-route-productId="@Model.ProductId" method="post" style="display:inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

        }
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
