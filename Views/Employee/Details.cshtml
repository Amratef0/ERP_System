@model EmployeeVM

@{
    ViewData["Title"] = "Employee Details";
}

<div class="form-page create-product">
    <div class="form">
        <h3 class="formTitle"><i class="bi bi-person-badge"></i> Employee Details</h3>
<!-- Photo Section - Custom Details Style -->
<div class="my-image-section-wrapper mb-4">
    <div class="image-card shadow rounded-4 border-0 overflow-hidden">
        <div class="image-card-header bg-gradient-primary text-white py-2 px-3">
            <h4 class="mb-0"><i class="bi bi-person-badge"></i> Employee Photo</h4>
        </div>
        <div class="image-card-body text-center p-4">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="@Model.FirstName @Model.LastName" 
                     class="avatar-preview rounded-circle shadow mb-3" 
                     style="width: 180px; height: 180px; object-fit: cover; border: 3px solid #fff;" />
            }
            else
            {
                <div class="avatar-placeholder d-inline-flex align-items-center justify-content-center mb-3 rounded-circle shadow" 
                     style="width: 180px; height: 180px; font-size: 5rem; background-color: #6c757d; color: white; border: 3px solid #fff;">
                    @Model.FirstName?.Substring(0, 1).ToUpper()
                </div>
            }

            <h4 class="fw-semibold mb-1">@Model.FirstName @Model.LastName</h4>
            <p class="text-muted mb-2">@Model.JobTitle</p>

            @if (Model.IsActive)
            {
                <span class="badge bg-success rounded-pill py-2 px-3">Active</span>
            }
            else
            {
                <span class="badge bg-danger rounded-pill py-2 px-3">Inactive</span>
            }
        </div>
    </div>
</div>

        <!-- Personal Information -->
        <div class="card card1 mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-person"></i> Personal Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>First Name:</strong> @Model.FirstName</p>
                        <p><strong>Last Name:</strong> @Model.LastName</p>
                        <p><strong>Gender:</strong> @Model.Gender</p>
                        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.NationalId))
                        {
                            <p><strong>National ID:</strong> @Model.NationalId</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.PassportNumber))
                        {
                            <p><strong>Passport Number:</strong> @Model.PassportNumber</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Employment Information -->
        <div class="card card2 mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-briefcase"></i> Employment Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Department:</strong> @Model.Department</p>
                        <p><strong>Job Title:</strong> @Model.JobTitle</p>
                        <p><strong>Employee Type:</strong> @Model.Type</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Branch:</strong> @Model.Branch</p>
                        <p><strong>Hire Date:</strong> @Model.HireDate.ToString("dd MMM yyyy")</p>
                        @if (Model.TerminationDate.HasValue)
                        {
                            <p><strong>Termination Date:</strong> @Model.TerminationDate.Value.ToString("dd MMM yyyy")</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="card card4 mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-telephone"></i> Contact Information</h4>
            </div>
            <div class="card-body">
                <p><strong>Work Email:</strong> @Model.WorkEmail</p>
                <p><strong>Work Phone:</strong> @Model.WorkPhone</p>
                @if (!string.IsNullOrEmpty(Model.PersonalEmail))
                {
                    <p><strong>Personal Email:</strong> @Model.PersonalEmail</p>
                }
                @if (!string.IsNullOrEmpty(Model.PersonalPhone))
                {
                    <p><strong>Personal Phone:</strong> @Model.PersonalPhone</p>
                }
                @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                {
                    <p><strong>Emergency Contact Name:</strong> @Model.EmergencyContactName</p>
                    <p><strong>Phone:</strong> @Model.EmergencyContactPhone</p>
                }
            </div>
        </div>

        <!-- Salary & Banking -->
        <div class="card card3 mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-cash-stack"></i> Salary & Banking</h4>
            </div>
            <div class="card-body">
                <p><strong>Base Salary:</strong> @Model.BaseSalary.ToString("N2")</p>
                <p><strong>Currency:</strong> @Model.SalaryCurrency</p>
                @if (!string.IsNullOrEmpty(Model.BankName))
                {
                    <p><strong>Bank Name:</strong> @Model.BankName</p>
                }
                @if (!string.IsNullOrEmpty(Model.BankAccountNumber))
                {
                    <p><strong>Account Number:</strong> @Model.BankAccountNumber</p>
                }
            </div>
        </div>

        <!-- Address Information -->
        <div class="card card4 mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-geo-alt"></i> Address Information</h4>
            </div>
            <div class="card-body">
                <p><strong>Address:</strong> @Model.Line1</p>
                @if (!string.IsNullOrEmpty(Model.Line2))
                {
                    <p>@Model.Line2</p>
                }
                <p>@Model.City, @Model.StateProvince @Model.PostalCode</p>
                <p><strong>Country:</strong> @Model.Country</p>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                <i class="bi bi-pencil"></i> Edit Employee
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />
<link rel="stylesheet" href="~/css/UploadImage.css" />
<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="~/css/employee.css" />
