@model EmployeesIndexVM

@{
    ViewData["Title"] = "Employees";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Employees</h1>
        <p>Manage company employees and workforce</p>
    </div>

       <!-- Search -->
    <div class="bp-search-card top-search">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search by employee name..." />
            </div>
            <button type="button" id="searchBtn">Search Employees</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">

        <!-- Total Employees -->
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Employees.Count()</h3>
                <p>Total Employees</p>
            </div>
            <i class="bi bi-people"></i>
        </div>

        <!-- Branches -->
        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Branches.Count()</h3>
                <p>Branches</p>
            </div>
            <i class="bi bi-building"></i>
        </div>

        <!-- Departments -->
        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Departments.Count()</h3>
                <p>Departments</p>
            </div>
            <i class="bi bi-diagram-3"></i>
        </div>

        <!-- Job Titles -->
        <div class="bp-stat-card stat-4">
            <div>
                <h3>@Model.JobTitles.Count()</h3>
                <p>Job Titles</p>
            </div>
            <i class="bi bi-briefcase"></i>
        </div>

    </div>

<!-- Filters Section -->
<div class="list-page employees-page">

    <div class="card">

        <h2>Employees List</h2>

        <!-- Floating Add Button -->
        <a asp-action="Create"
           class="floating-btn"
           title="Add New Employee">
            <i class="fa-solid fa-plus"></i>
        </a>

        <!-- Filters -->
        <div class="filters-container">
            <div class="filter-row">

                <div class="filter-item">
                    <label><i class="bi bi-building"></i> Branch</label>
                    <select id="branchFilter" class="form-select"
                            asp-items="@(new SelectList(Model.Branches, "Id", "Name"))">
                        <option value="">All Branches</option>
                    </select>
                </div>

                <div class="filter-item">
                    <label><i class="bi bi-diagram-3"></i> Department</label>
                    <select id="departmentFilter" class="form-select"
                            asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                        <option value="">All Departments</option>
                    </select>
                </div>

                <div class="filter-item">
                    <label><i class="bi bi-person-lines-fill"></i> Employee Type</label>
                    <select id="employeeTypeFilter" class="form-select"
                            asp-items="@(new SelectList(Model.EmployeeTypes, "Id", "Name"))">
                        <option value="">All Types</option>
                    </select>
                </div>

                <div class="filter-item">
                    <label><i class="bi bi-briefcase"></i> Job Title</label>
                    <select id="jobTitleFilter" class="form-select"
                            asp-items="@(new SelectList(Model.JobTitles, "Id", "Name"))">
                        <option value="">All Job Titles</option>
                    </select>
                </div>

            </div>
        </div>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Branch</th>
                    <th>Department</th>
                    <th>Type</th>
                    <th>Job Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="employees">
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>@item.FullName</td>

                        <td>
                            <span class="badge bg-primary">@item.Branch.Name</span>
                        </td>

                        <td>
                            <span class="badge bg-info">@item.Department.Name</span>
                        </td>

                        <td>
                            <span class="badge bg-secondary">@item.Type.Name</span>
                        </td>

                        <td>
                            <span class="badge bg-success">@item.JobTitle.Name</span>
                        </td>

                        <td>
                            <div class="action-buttons">

                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-update" title="View">
                                    <i class="fa-solid fa-eye"></i>
                                </a>

                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-update" title="Edit">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <button type="button" class="btn btn-delete"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal@(item.Id)">
                                    <i class="fa-solid fa-trash"></i>
                                </button>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Delete employee <strong>@item.FullName</strong>?</p>
                                                <p class="text-danger mb-0">
                                                    <i class="bi bi-exclamation-triangle"></i> This action cannot be undone!
                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Employees.Any())
        {
            <div class="alert alert-info mt-4">
                <i class="bi bi-info-circle"></i> No employees found.
            </div>
        }

    </div>
</div>


<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
