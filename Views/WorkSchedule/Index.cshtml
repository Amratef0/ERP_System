@model IEnumerable<WorkScheduleDay>

@{
    ViewData["Title"] = "Work Schedule";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Work Schedule</h2>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Day)</th>
                <th>@Html.DisplayNameFor(model => model.IsWorkDay)</th>
                <th>@Html.DisplayNameFor(model => model.WorkStartTime)</th>
                <th>@Html.DisplayNameFor(model => model.WorkEndTime)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Day)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsWorkDay)</td>
                    <td>
                        @Html.TextBoxFor(modelItem => item.WorkStartTime, new { type = "time", @readonly = "readonly", @class = "form-control" })
                    </td>
                    <td>
                        @Html.TextBoxFor(modelItem => item.WorkEndTime, new { type = "time", @readonly = "readonly", @class = "form-control" })
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
