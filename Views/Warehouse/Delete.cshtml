@model ERP_System_Project.Models.Inventory.Warehouse
@{
    ViewData["Title"] = "Delete Warehouse";
}

<link rel="stylesheet" href="~/css/CRUD/Delete.css" />

<div class="delete-wrapper">
    <h2 class="title">Delete Warehouse</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="details-section">
        <h4 class="record-name">@Model.Name (@Model.Code)</h4>
        <dl class="details-grid">
            <div class="detail-item">
                <dt>Branch</dt>
                <dd>@Model.Branch?.Name</dd>
            </div>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="WarehouseId" />
        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" class="btn btn-back">Cancel</a>
            </div>
        </div>
    </form>
</div>
