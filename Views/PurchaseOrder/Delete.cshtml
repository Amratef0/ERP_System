@model ERP_System_Project.Models.PurchaseOrder
@{
    ViewData["Title"] = "Delete Purchase Order";
}

<link rel="stylesheet" href="~/css/CRUD/Delete.css" />

<div class="delete-wrapper">

    <h2 class="title">Delete Purchase Order</h2>

    @* لو في رسالة خطأ *@
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="details-section">
        <h4 class="record-name">@Model.PoNumber</h4>

        <dl class="details-grid">

            <div class="detail-item">
                <dt>PO Number</dt>
                <dd>@Model.PoNumber</dd>
            </div>

            <div class="detail-item">
                <dt>Order Date</dt>
                <dd>@Model.OrderDate.ToShortDateString()</dd>
            </div>

            <div class="detail-item">
                <dt>Supplier</dt>
                <dd>@Model.Supplier?.SupplierName</dd>
            </div>

            <div class="detail-item">
                <dt>Product</dt>
                <dd>@Model.WarehouseProduct?.Product?.Name</dd>
            </div>

            <div class="detail-item">
                <dt>Warehouse</dt>
                <dd>@Model.WarehouseProduct?.Warehouse?.Name</dd>
            </div>

        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PurchaseOrderId" />

        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" class="btn btn-back">Cancel</a>
            </div>
        </div>
    </form>

</div>
