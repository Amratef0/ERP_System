@model EmployeeType

@{
    ViewData["Title"] = "Employee Type Details";
}

<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page">

    <!-- Title -->
    <h2 class="title">Employee Type Details</h2>

    <!-- Name -->
    <h3 class="supplier-name">@Model.Name</h3>

    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <!-- Employee Type Name -->
        <div class="detail-item">
            <dt>Type Name</dt>
            <dd>@Model.Name</dd>
        </div>

        <!-- Status -->
        <div class="detail-item">
            <dt>Status</dt>
            <dd>
                @if (Model.IsActive)
                {
                    <span class="status active">Active</span>
                }
                else
                {
                    <span class="status inactive">Inactive</span>
                }
            </dd>
        </div>

        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="detail-item" style="grid-column: 1 / -1;">
                <dt>Description</dt>
                <dd>@Model.Description</dd>
            </div>
        }
    </dl>

    <!-- INFO LIST -->
    <div class="lists-section" style="margin-top:22px;">
        <h4>Employee Type Information</h4>

        <ul class="item-list">
            <li><strong>Type Name:</strong> Employee classification name</li>
            <li><strong>Status:</strong> Indicates if active or inactive</li>
            <li><strong>Description:</strong> Additional information about this type</li>
        </ul>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="viewActions">
        <div class="left-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
        </div>

        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>
</div>
