@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Add new department</a>
</p>

<div class="mb-3">
    <form id="searchForm">
        @Html.AntiForgeryToken()
        <div class="input-group">
            <input type="text" id="searchTerm" class="form-control" placeholder="Search by department name..." />

            <button type="button" id="searchBtn" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCenterCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="departments">
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostCenterCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();

                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "Department")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            function fillTable(response) {
                var tableBody = $("#departments");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    response.forEach(function (department) {
                        var editUrl = '@Url.Action("Edit", "Department")/' + department.id;
                        var detailsUrl = '@Url.Action("Details", "Department")/' + department.id;

                        newRows += `<tr>
                                        <td>${department.name}</td>
                                        <td>${department.code}</td>
										<td>${department.costCenterCode}</td>
                                        <td>
                                            <input type="checkbox" ${department.isActive ? 'checked' : ''} disabled />
                                        </td>
                                        <td>
                                            <a href="${editUrl}">Edit</a> |
                                            <a href="${detailsUrl}">Details</a> |
                                            <form action="/Department/Delete/${department.id}" method="post">
                                                <Input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='5' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}