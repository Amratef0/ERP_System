@model EmployeeType

@{
    ViewData["Title"] = "Employee Type Details";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-info-circle"></i> Employee Type Details</h2>
                    <p class="text-muted">View complete employee type information</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> @Model.Name</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <!-- Type Name -->
                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-tag"></i> Type Name:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-primary fs-6">@Model.Name</span>
                        </dd>

                        <!-- Status -->
                        <dt class="col-sm-4 mb-3">
                            <i class="bi bi-toggle-on"></i> Status:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-x-circle"></i> Inactive
                                </span>
                            }
                        </dd>

                        <!-- Description -->
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4 mb-0">
                                <i class="bi bi-card-text"></i> Description:
                            </dt>
                            <dd class="col-sm-8 mb-0">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Description</p>
                                    </div>
                                </div>
                            </dd>
                        }
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Employee Type
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-list"></i> View All Types
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-lightbulb"></i> Employee Type Information</h6>
                    <ul class="mb-0 small">
                        <li><strong>Type Name:</strong> Classification of employment</li>
                        <li><strong>Status:</strong> Indicates whether the type is currently active</li>
                        <li><strong>Description:</strong> Additional details about this employment type</li>
                        <li><strong>Usage:</strong> Used to categorize employees in the system</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
