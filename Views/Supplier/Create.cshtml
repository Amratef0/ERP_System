@model ERP_System_Project.Models.Supplier

<h2>Create Supplier</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SupplierName"></label>
        <input asp-for="SupplierName" class="form-control" />
        <span asp-validation-for="SupplierName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierCode"></label>
        <input asp-for="SupplierCode" class="form-control" />
        <span asp-validation-for="SupplierCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierCategoryId">Category</label>
        <select asp-for="SupplierCategoryId" class="form-control" asp-items="@(ViewData["SupplierCategories"] as SelectList)">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="SupplierCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
