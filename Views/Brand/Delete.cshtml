@model BrandVM
@{
    ViewData["Title"] = "Delete Brand";
}

<div class="delete-wrapper">
    <h2 class="title">Delete Brand</h2>

    <form method="post" asp-action="Delete">
        <input asp-for="Id" type="hidden" />

        <div class="details-grid">
            <div class="detail-item">
                <dt>Name</dt>
                <dd>@Model.Name</dd>
            </div>

            <div class="detail-item">
                <dt>Description</dt>
                <dd>@Model.Description</dd>
            </div>

            <div class="detail-item">
                <dt>Logo URL</dt>
                <dd>@Model.LogoURL</dd>
            </div>

            <div class="detail-item">
                <dt>Website URL</dt>
                <dd>@Model.WebsiteURL</dd>
            </div>
        </div>

        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" asp-controller="Brand" class="btn btn-back">Back to Brands</a>
            </div>
        </div>
    </form>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Delete.css"))" />
