@* Change from Customer to CustomerVM *@
@model ERP_System_Project.ViewModels.CRM.CustomerVM

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Customer Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Full Name</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">Date of Birth</dt>
                        <dd class="col-sm-9">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-3">Customer Type</dt>
                        <dd class="col-sm-9">@Model.CustomerTypeName</dd>

                        <dt class="col-sm-3">Main Address</dt>
                        <dd class="col-sm-9">@Model.MainAddress</dd>

                        <dt class="col-sm-3">Number of Orders</dt>
                        <dd class="col-sm-9">@Model.NumOfOrders</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Last Login</dt>
                        <dd class="col-sm-9">@(Model.LastLoginDate?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
                    </dl>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>