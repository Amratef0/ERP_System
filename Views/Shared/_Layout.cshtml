<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Optima </title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700&family=Rajdhani:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- BootStrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ERP_System_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">


</head>
<body>

    <!-- icons sidebar -->
    <div class="sidebar-icons">
        <button id="menuToggle" title="Toggle submenu"><i class="fa fa-bars"></i></button>

        <button id="iconHome" title="Home" asp-area="" asp-controller="Market" asp-action="Index"><i class="fa-solid fa-house"></i></button>
        <hr>

        @if (User.IsInRole("Admin") || User.IsInRole("HR Manager") || User.IsInRole("Employee"))
        {
            <!-- HR -->
            <button id="iconEmp" title="Employees"><i class="fa fa-id-badge"></i></button>
            <button id="iconDept" title="Departments"><i class="fa fa-sitemap"></i></button>
            <button id="iconJob" title="Job Title"><i class="fa fa-briefcase"></i></button>
            <button id="iconAttend" title="Attendance"><i class="fa fa-clipboard-user"></i></button>
            <button id="iconLeaveType" title="Leave"><i class="fa-solid fa-plane-departure"></i></button>
            <button id="iconManager" title="Manager"><i class="fa fa-user-tie"></i></button>

            <button id="iconPayroll" title="Payroll"><i class="fa fa-money-bill"></i></button>
            <hr>

            <button id="iconPortal" title="Leave"><i class="fa-solid fa-plane-departure"></i></button>
            <hr />
        }
        @if (User.IsInRole("Admin") || User.IsInRole("Inventory"))
        {
            <!-- INVENTORY -->
            <button id="iconProd" title="Products"><i class="fa fa-box"></i></button>
            <button id="iconCat" title="Categories"><i class="fa fa-layer-group"></i></button>
            <button id="iconStock" title="Stock Transactions"><i class="fa fa-exchange-alt"></i></button>
            <button id="iconWare" title="Warehouse"><i class="fa-solid fa-warehouse"></i></button>
            <button id="iconBrands" title="Brands"><i class="bi bi-award"></i></button>
            <hr>
        }

        <!-- SALES / E-COMMERCE -->
        <button id="iconMarket" title="Market"><i class="fa fa-bag-shopping"></i></button>
        <hr>

        @if (User.IsInRole("Admin") || User.IsInRole("Purchase"))
        {
            <!-- PROCUREMENT -->
            <button id="iconSupp" title="Suppliers"><i class="fa fa-truck"></i></button>
            <button id="iconPO" title="Purchase Orders"><i class="fa fa-money-check-dollar"></i></button>
            <hr>
        }

        @if (User.IsInRole("Admin") || User.IsInRole("CRM"))
        {
            <!-- CRM -->
            <button id="iconCust" title="Customers"><i class="fa fa-users"></i></button>
            <hr>
        }
        @if (User.IsInRole("Admin"))
        {
            <!-- SYSTEM -->
            <button id="iconRoles" title="Roles"><i class="fa fa-shield-halved"></i></button>
            <hr>
        }


        @if (User.Identity.IsAuthenticated && !User.IsInRole("User"))
        {
            <!-- SETTINGS -->
            <button id="iconSettings" title="Settings"><i class="fa fa-gear"></i></button>
            <hr>
        }




    </div>

    <div class="overlay" id="overlay" aria-hidden="true"></div>

    <!-- navbar -->
    <div class="app" id="app">
        <nav class="topbar">
            <button id="menuToggleMobile" class="btn btn-link d-lg-none" aria-expanded="false" aria-label="Toggle sidebar">
                <i class="fa fa-bars"></i>
            </button>

            <a class="navbar-brand d-flex align-items-center flex-nowrap"
               asp-area="" asp-controller="Market" asp-action="Index"
               asp-route-pageSize="25" asp-route-pageNumber="1">
                <img src="~/optima-logo.webp" alt="Optima Logo"
                     class="navbar-logo me-2"
                     style="max-height:40px; width:auto;" />
                <h5 class="mb-0 d-none d-sm-block">Optima</h5>
            </a>


            <div class="d-flex align-items-center">
                <div class="mood">
                    <button id="toggle-theme" class="btn btn-link text-decoration-none position-relative">
                        <i class="fa-regular fa-moon"></i>
                        <i class="fa-regular fa-sun"></i>
                    </button>
                </div>



                <!-- Profile Dropdown -->
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fa-regular fa-circle-user fs-4"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ViewProfile">My Profile</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Order" asp-action="MyOrders">My Orders</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="CustomerWishlist" asp-action="Index">My Wishlist</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="CustomerFavorite" asp-action="Index">My Favorite</a></li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Cart" asp-action="Index"> My Cart</a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-area="" asp-controller="Account" asp-action="Signout">
                                    <button type="submit" class="dropdown-item text-danger">Sign Out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></li>
                        }
                    </ul>
                </div>

        </nav>


        <div class="main">

            <aside id="submenu" class="submenu" aria-expanded="true">
                <div class="submenu-section hidden" id="Home">

                    <h6>Home</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Market" asp-action="Index" asp-route-pageSize="25" asp-route-pageNumber="1">Home</a>
                        </li>
                    </ul>
                </div>

                <!-- HR -->
                <div class="submenu-section hidden" id="Emp">
                    <h6>Employees</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EmployeeType" asp-action="Index">Employee Types</a>
                        </li>
                    </ul>
                </div>

                <div class="submenu-section hidden" id="Dept">
                    <h6>Departments</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Department" asp-action="Index">Departments</a>
                        </li>
                    </ul>
                </div>

                <div class="submenu-section hidden" id="Job">
                    <h6>Job Title</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="JobTitle" asp-action="Index">Job Title</a>
                        </li>
                    </ul>
                </div>

                <div class="submenu-section hidden" id="Attend">
                    <h6>Attendance</h6>
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Index">Attendance</a></li>


                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AttendanceStatusCode" asp-action="Index">Attendance Status Codes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="MonthlyReport"> Monthly Attendance Report</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PublicHoliday" asp-action="Index">Public Holidays</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WorkSchedule" asp-action="Index">Work Schedule</a>
                        </li>
                    </ul>
                </div>

                <div class="submenu-section hidden" id="LeaveType">
                    <h6>Leave</h6>
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LeaveType" asp-action="Index">Leave Types</a>
                        </li>

                        <li  class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EmployeeLeaveBalance" asp-action="Index"> Leave Balances</a>
                        </li>
                    </ul>
                </div>


                <div class="submenu-section hidden" id="Payroll">
                    <h6>Payroll</h6>
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PayrollRun" asp-action="Index">Payroll Runs</a>
                        </li>

                    </ul>
                </div>

                    <div class="submenu-section hidden" id="Portal">
                        <h6>My Portal</h6>
                        <ul class="nav flex-column">

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="MyLeaveRequests">
                                    My Leave Requests
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="RequestLeave">
                                    Request Leave
                                </a>
                            </li>
                        </ul>
                    </div>
                

                        <!-- E-Commerce -->
                        <div class="submenu-section hidden" id="Market">
                       <h6>Market</h6>
                       <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Market" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="25">Browse Market</a>
                        </li>

                        <li class="nav-item">
                             <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="25">Shopping Cart</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="MyOrders" asp-route-pageNumber="1" asp-route-pageSize="5">MyOrders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="AdminOrders" asp-route-pageNumber="1" asp-route-pageSize="5">AdminOrders</a>
                        </li>

                        </ul>
                   </div>

                    <!-- INVENTORY -->
                      <div class="submenu-section hidden" id="Prod">
                       <h6>Products</h6>
                       <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="10">Products</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attribute" asp-action="Index">Attribute</a>
                        </li>
                        </ul>
                   </div>

                      <div class="submenu-section hidden" id="Cat">
                       <h6>Category</h6>
                       <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                        </ul>
                   </div>

                   <div class="submenu-section hidden" id="Ware">
                       <h6>Warehouse</h6>
                       <ul class="nav flex-column">
                         <li>
                             <a class="nav-link" asp-area="" asp-controller="Warehouse" asp-action="Index">Warehouse</a>
                         </li>
                         </ul>
                   </div>

                   <div class="submenu-section hidden" id="Stock">
                       <h6>Inventory Transaction</h6>
                       <ul class="nav flex-column">
                         <li>
                             <a class="nav-link" asp-area="" asp-controller="InventoryTransaction" asp-action="Index">Inventory Transaction</a>
                         </li>
                         </ul>
                   </div>

                   <div class="submenu-section hidden" id="Brands">
                       <h6>Brands</h6>
                       <ul class="nav flex-column">
                         <li>
                             <a class="nav-link" asp-area="" asp-controller="Brand" asp-action="Index">Brands</a>
                         </li>
                         </ul>
                   </div>

                   <!--  PROCUREMENT -->

                    <div class="submenu-section hidden" id="Supp">
                       <h6>Suppliers</h6>
                       <ul class="nav flex-column">   
                       <li class="nav-item">
                           <a class="nav-link" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link" asp-area="" asp-controller="SupplierCategory" asp-action="Index">Supplier Categories</a>
                       </li>
                       <li class="nav-item">
                          <a class="nav-link" asp-area="" asp-controller="SupplierProduct" asp-action="Index">Supplier Products</a>
                       </li>

                       </ul>
                   </div>

                    <div class="submenu-section hidden" id="PO">
                       <h6>Purchase Orders</h6>
                       <ul class="nav flex-column">
                       <li class="nav-item">
                           <a class="nav-link" asp-area="" asp-controller="PurchaseOrder" asp-action="Index">Purchase Orders</a>
                       </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PurchaseOrder" asp-action="AdminPending">Purchase Orders Admin Panel </a>
                        </li>
                       </ul>
                   </div>

                   <!-- CRM -->
                     <div class="submenu-section hidden" id="Cust">
                       <h6>Customers</h6>
                       <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="CustomerType" asp-action="Index">Customer Types</a>
                        </li>
                        </ul>
                   </div>



                   <!-- Settings -->
                        <div class="submenu-section hidden" id="Settings">
                       <h6>Settings</h6>
                       <ul class="nav flex-column">
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Country" asp-action="Index">Countries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Branch" asp-action="Index">Branches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Currency" asp-action="Index">Currencies</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PerformanceLog" asp-action="Index">Develper View</a>
                        </li>
                    </ul>
                   </div>


                   <div class="submenu-section hidden" id="Roles">
                       <h6>Roles</h6>
                       <ul class="nav flex-column">
                       <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="RoleManagement" asp-action="AssignRole"> Assign Roles</a>
                        </li>
                       <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">User Management</a>
                        </li>
                       <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="RolePermission" asp-action="Manage"> Permission</a>
                        </li>
                       </ul>
                   </div>

                        <!-- Manager Portal (Only for Managers & HR) -->
                        @if (User.IsInRole("HR Manager") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {

                          <div class="submenu-section hidden" id="Manager">
                               <h6>Managers</h6>
                               <ul class="nav flex-column">
                                    <li>
                                        <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="PendingApprovals"> Pending Approvals</a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="TeamLeaveCalendar"> Team Leave Calendar</a>
                                   </li>
                               </ul>
                       </div>

                        }

                        </div>
      </aside>

                      
    <!-- Toast Notification Partial -->
    <partial name="_Toast" />
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
