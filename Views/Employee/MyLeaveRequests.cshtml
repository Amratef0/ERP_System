@model IEnumerable<LeaveRequest>

@{
    ViewData["Title"] = "My Leave Requests";
}

<!-- General styles -->
<link rel="stylesheet" href="~/css/ListPageHeader.css" />
<link rel="stylesheet" href="~/css/CRUD/Index.css" />
<link rel="stylesheet" href="~/css/GeneralModal.css" />

<style>
    /* Make filter tabs visible against a white background */
    .nav-tabs .nav-link {
        background-color: #f7f7f9; /* light gray */
        color: #333; /* dark text for contrast */
        border: 1px solid #dee2e6;
        margin-right: 2px;
        border-top-left-radius: .375rem;
        border-top-right-radius: .375rem;
    }
    .nav-tabs .nav-link:hover {
        background-color: #eef0f3;
        color: #222;
        border-color: #cfd4da;
    }
    .nav-tabs .nav-link.active {
        background-color: #e9ecef; /* active state slightly darker */
        color: #000;
        border-color: #cfd4da #cfd4da #e9ecef; /* blend with tab content */
    }
    /* Ensure tab content has a subtle border to delineate from tabs */
    .tab-content {
        border: 1px solid #dee2e6;
        border-top: none;
        background-color: #fff;
        padding: 1rem;
        border-radius: 0 .375rem .375rem .375rem;
    }
</style>

<div class="page-section">
    <!-- Header -->
    <div class="bp-header">
        <div class="bp-header-content">
            <div>
                <h2><i class="bi bi-list-ul"></i> My Leave Requests</h2>
                <p>Review and track all your submitted leave requests</p>
            </div>
            <div>
                <a asp-action="Profile" class="bp-back-btn btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-3" id="statusTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                All (@Model.Count())
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">
                Pending (@Model.Count(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Pending))
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button">
                Approved (@Model.Count(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Approved))
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button">
                Rejected (@Model.Count(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Rejected))
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button">
                Cancelled (@Model.Count(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Cancelled))
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="statusTabContent">
        <!-- All Requests -->
        <div class="tab-pane fade show active" id="all" role="tabpanel">
            @await Html.PartialAsync("_LeaveRequestsTable", Model)
        </div>

        <!-- Pending Requests -->
        <div class="tab-pane fade" id="pending" role="tabpanel">
            @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Pending))
        </div>

        <!-- Approved Requests -->
        <div class="tab-pane fade" id="approved" role="tabpanel">
            @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Approved))
        </div>

        <!-- Rejected Requests -->
        <div class="tab-pane fade" id="rejected" role="tabpanel">
            @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Rejected))
        </div>

        <!-- Cancelled Requests -->
        <div class="tab-pane fade" id="cancelled" role="tabpanel">
            @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == ERP_System_Project.Models.Enums.LeaveRequestStatus.Cancelled))
        </div>
    </div>
</div>
