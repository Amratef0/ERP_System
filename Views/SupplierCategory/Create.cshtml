@model ERP_System_Project.Models.SupplierCategory

<link rel="stylesheet" href="~/css/Purchase/Supplier/CreateSupplier.css" />

<div class="create-supplier">
    <div class="form">
        <h3 class="formTitle" id="form-title">Create Supplier Category</h3>

        <form id="categoryForm" asp-action="Create" method="post">
            <div class="form-group">
                <input asp-for="CategoryName" class="form-control" placeholder=" " />
                <label asp-for="CategoryName"></label>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Description" class="form-control" placeholder=" " />
                <label asp-for="Description"></label>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
