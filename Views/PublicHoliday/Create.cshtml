@model PublicHolidayCountriesVM
@{
    ViewData["Title"] = "Add New Public Holiday";
}

<div class="form-page create-product">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add New Public Holiday</h3>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Holiday Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Holiday Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Holiday Date -->
            <div class="number-field-group">
                <label asp-for="Date" class="number-label">Holiday Date</label>
                <input asp-for="Date" type="date" class="number-input" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>


            <!-- Country -->
            <div class="form-group">
                <select asp-for="CountryId" class="form-select" asp-items="@(new SelectList(Model.Countries, "Id", "Name"))">
                    <option value="">-- Select Country --</option>
                </select>
                <label asp-for="CountryId">Country</label>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Add Holiday</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
