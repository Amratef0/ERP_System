@model IEnumerable<JobTitle>

@{
    ViewData["Title"] = "Job Titles";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Job Titles</h1>
        <p>Manage organizational job titles and positions</p>
    </div>

    <!-- Search Card -->
    <div class="bp-search-card top-search mt-4">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search job titles by name or code..." />
            </div>
            <button type="button" id="searchBtn">Search</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Count()</h3>
                <p>Total Job Titles</p>
            </div>
            <i class="bi bi-collection"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Count(j => j.IsActive)</h3>
                <p>Active</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Count(j => !j.IsActive)</h3>
                <p>Inactive</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>
    </div>

    <!-- Job Titles Table -->
    <div class="list-page departments-page mt-4">
        <div class="card">
            <h2>Job Titles List</h2>

            <!-- Floating Add Button -->
            <a asp-action="Create" class="floating-btn" title="Add New Job Title">
                <i class="fa-solid fa-plus"></i>
            </a>

            <table>
                <thead>
                    <tr>
                        <th>Job Title</th>
                        <th>Code</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="jobTitles">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Job Title"><strong>@item.Name</strong></td>
                            <td data-label="Code">
                                <span class="text-muted">@item.Code</span>
                            </td>
                            <td data-label="Status">
                                @if (item.IsActive)
                                {
                                    <span class="status active">Active</span>
                                }
                                else
                                {
                                    <span class="status inactive">Inactive</span>
                                }
                            </td>
                            <td data-label="Actions">
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-view btn-sm" title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-update btn-sm" title="Edit">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Delete", "JobTitle", new { id = item.Id })', 'Delete Job Title')" 
                                       class="btn btn-delete btn-sm" 
                                       title="Delete">
                                       <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No job titles found. Click "Add New Job Title" to get started.
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "JobTitle")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        FillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function FillTable(response) {
                var tableBody = $("#jobTitles");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (jobTitle) {
                        var activeStatus = jobTitle.isActive 
                            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>'
                            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>';

                        newRows += `<tr>
                                        <td><strong>${jobTitle.name}</strong></td>
                                        <td><span class="badge bg-secondary">${jobTitle.code}</span></td>
                                        <td>${activeStatus}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/JobTitle/Details/${jobTitle.id}" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/JobTitle/Edit/${jobTitle.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${jobTitle.name}?')) { document.getElementById('deleteForm${jobTitle.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${jobTitle.id}" action="/JobTitle/Delete/${jobTitle.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='4' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}
