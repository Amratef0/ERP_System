@model EmployeeType

@{
    ViewData["Title"] = "Add Employee Type";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add Employee Type</h3>

        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()

            <!-- Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " autofocus />
                <label asp-for="Name">Type Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group full-width">
                <textarea asp-for="Description" rows="5" class="form-control" placeholder=" "></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Active Checkbox -->
            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" checked />
                <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">
                    Employee Type is Active
                </label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
