@model ERP_System_Project.Models.SupplierCategory

<link rel="stylesheet" href="~/css/Purchase/Supplier/Details.css" />

<div class="supplier-details-wrapper">
    <h2 class="title">Category Details</h2>

    <div class="details-section">
        <h3 class="supplier-name">@Model.CategoryName</h3>
        <dl class="details-grid">
            <div class="detail-item">
                <dt>Description</dt>
                <dd>@Model.Description</dd>
            </div>

            <div class="detail-item">
                <dt>Is Active</dt>
                <dd>
                    @if (Model.IsActive)
                    {
                        <span class="status active">Active</span>
                    }
                    else
                    {
                        <span class="status inactive">Inactive</span>
                    }
                </dd>
            </div>


            <div class="detail-item">
                <dt>Suppliers Count</dt>
                <dd>@(Model.Suppliers?.Count() ?? 0)</dd>
            </div>
        </dl>
    </div>

    <div class="lists-section">
        <h4>Suppliers</h4>
        @if (Model.Suppliers != null && Model.Suppliers.Any())
        {
            <ul class="item-list">
                @foreach (var supplier in Model.Suppliers)
                {
                    <li>@supplier.SupplierName</li>
                }
            </ul>
        }
        else
        {
            <p>No suppliers in this category.</p>
        }
    </div>

    <div class="viewActions">
        <div class="left-buttons">
            <a href="javascript:void(0)" 
               onclick="openModalWithAjax('@Url.Action("Edit", "SupplierCategory", new { id = Model.CategoryId })', 'Edit Category')" 
               class="btn btn-edit">Edit</a>

            <a href="javascript:void(0)" 
               onclick="openModalWithAjax('@Url.Action("Delete", "SupplierCategory", new { id = Model.CategoryId })', 'Delete Category')" 
               class="btn btn-delete">Delete</a>
        </div>

        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>
</div>
