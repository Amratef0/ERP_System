@model Department

@{
    ViewData["Title"] = "Edit Department";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit Department</h3>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden ID -->
            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Department Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " maxlength="10" />
                <label asp-for="Code">Department Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="CostCenterCode" class="form-control" placeholder=" " />
                <label asp-for="CostCenterCode">Cost Center Code</label>
                <span asp-validation-for="CostCenterCode" class="text-danger"></span>
            </div>


            <!-- Status Checkbox -->
            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">
                    Department is Active
                </label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>

        <!-- Department Info -->
        <div class="lists-section" style="margin-top:22px;">
            <h4>Department Information</h4>

            <ul class="item-list">
                <li><strong>Department Name:</strong> Full name of the department</li>
                <li><strong>Code:</strong> Short unique identifier (used in reports and systems)</li>
                <li><strong>Cost Center:</strong> Optional code for financial reporting</li>
                <li><strong>Status:</strong> Only active departments can have employees assigned</li>
            </ul>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
