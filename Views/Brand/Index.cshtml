@model PageSourcePagination<BrandVM>
@{
    ViewData["Title"] = "Index";
    string currentSearch = Context.Request.Query["searchByName"];
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 text-primary">Brand Management</h1>
            <p class="text-muted mb-0">Manage your product brands and their details</p>
        </div>
        <a asp-controller="Brand" asp-action="New" class="btn btn-success d-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i>Add New Brand
        </a>
    </div>

    <!-- Search Form -->
    <form method="get" asp-controller="Brand" asp-action="Index" class="d-flex mb-3">
        <input type="text" name="searchByName" value="@currentSearch" class="form-control me-2" placeholder="Search by brand name..." />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <!-- Brands Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="card-title mb-0">Brand List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Brand Name</th>
                            <th>Logo</th>
                            <th>Website</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model.Data)
                        {
                            <tr>
                                <td class="ps-4 align-middle">@brand.Name</td>
                                <td class="align-middle"><img src="@brand.LogoURL" class="img-thumbnail brand-logo" alt="@brand.Name logo" /></td>
                                <td class="align-middle"><a href="@brand.WebsiteURL" target="_blank" class="text-decoration-none website-link">@brand.Name Website</a></td>
                                <td class="text-end pe-4 align-middle">
                                    <div class="btn-group">
                                        <a asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                                        <a asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-end gap-2 mt-3">
        @if (Model.TotalPages > 1)
        {
            @if (Model.PageNumber > 1)
            {
                <a asp-controller="Brand"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="5"
                   asp-route-searchByName="@currentSearch"
                   class="btn btn-sm btn-primary fw-bold px-3"><i class="bi bi-arrow-left"></i></a>
            }
            @if (Model.PageNumber < Model.TotalPages)
            {
                <a asp-controller="Brand"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="5"
                   asp-route-searchByName="@currentSearch"
                   class="btn btn-sm btn-primary fw-bold px-3"><i class="bi bi-arrow-right"></i></a>
            }
        }
    </div>
</div>

<style>
    .brand-logo {
        width: 48px;
        height: 48px;
        object-fit: contain;
    }

    .website-link {
        max-width: 200px;
        display: inline-block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
