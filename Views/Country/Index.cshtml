@model IEnumerable<Country>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Add New Country</a>
</p>

<div class="mb-3">
    <form id="searchForm">
        @Html.AntiForgeryToken()
        <div class="input-group">
            <input type="text" id="searchTerm" class="form-control" placeholder="Search by country name..." />

            <button type="button" id="searchBtn" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>
</div>

@if(TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneCode)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="countries">
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneCode)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>
        $(document).ready(function () {

            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "Country")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
						fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
			}

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            function fillTable(response) {
                var tableBody = $("#countries");
                var token = $('input[name="__RequestVerificationToken"]').val();
                tableBody.empty();
                        if (response && response.length > 0) {
                            var newRows = "";
                            response.forEach(function (country) {
                                var editUrl = '@Url.Action("Edit", "Country")?id=' + country.id;
                                newRows += `<tr>
                                                <td>${country.name}</td>
                                                <td>${country.code}</td>
                                                <td>${country.phoneCode}</td>
                                                <td class="d-flex align-items-center">
                                                    <a href="${editUrl}" class="btn btn-primary btn-sm me-2">Edit</a>
                                                    <form action="/Country/Delete/${country.id}" method="post" >
                                                        <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>`;
                            });
                            tableBody.html(newRows);
                        } else {
                            var noResultsRow = "<tr><td colspan='4' class='text-center'>No results found.</td></tr>";
                            tableBody.html(noResultsRow);
                        }
			}
        });
    </script>
}