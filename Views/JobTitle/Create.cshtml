@model JobTitle

@{
    ViewData["Title"] = "Add Job Title";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add Job Title</h3>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Job Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Job Title Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Job Code -->
            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " />
                <label asp-for="Code">Job Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

                  <!-- Min Salary -->
            <div class="number-field-group">
                <label for="MinSalary" class="number-label">Minimum Salary</label>
                <input asp-for="MinSalary" type="number" step="0.01" class="number-input" />
                <span asp-validation-for="MinSalary" class="text-danger"></span>
            </div>

            <!-- Max Salary -->
            <div class="number-field-group">
                <label for="MaxSalary" class="number-label">Maximum Salary</label>
                <input asp-for="MaxSalary" type="number" step="0.01" class="number-input" />
                <span asp-validation-for="MaxSalary" class="text-danger"></span>
            </div>



            <!-- Description full width -->
            <div class="form-group full-width">
                <textarea asp-for="Description" rows="4" class="form-control" placeholder=" "></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Checkbox -->
            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" checked />
                <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">Job Title is Active</label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    document.querySelectorAll('input[type="number"]').forEach(input => {
        if (input.value) input.classList.add('has-value');
        input.addEventListener('input', () => {
            if (input.value) input.classList.add('has-value');
            else input.classList.remove('has-value');
        });
    });
</script>

