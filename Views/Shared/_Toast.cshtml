
<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 11055">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["ErrorMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    @TempData["InfoMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="toast align-items-center text-bg-warning border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body text-dark">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>
                    @TempData["WarningMessage"]
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>

<style>
/* ==============================
    Modern Toast Styles - Creative & Clean
   ============================== */

.toast-container {
    z-index: 11055 !important;
    pointer-events: none;
}

.toast {
    pointer-events: auto;
    min-width: 330px;
    border-radius: 14px !important;
    border: none !important;
    overflow: hidden;
    padding: 0 !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    animation: slideToast 0.45s ease;
    box-shadow: 0 10px 30px rgba(0,0,0,0.12) !important;
}

/* === Gradient Backgrounds === */
.toast.text-bg-success {
    background: linear-gradient(135deg, #0f9d58, #34a853) !important;
}

.toast.text-bg-danger {
    background: linear-gradient(135deg, #d93025, #ea4335) !important;
}

.toast.text-bg-warning {
    background: linear-gradient(135deg, #fbbc04, #f9ab00) !important;
    color: #4a3e02 !important;
}

.toast.text-bg-info {
    background: linear-gradient(135deg, #4285f4, #2b7de9) !important;
}

/* === Content Style === */
.toast-body {
    padding: 1rem 1.2rem !important;
    font-size: 0.95rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.65rem;
    color: #fff !important;
}

.toast-body i {
    font-size: 1.2rem;
}

/* === Close Button === */
.toast .btn-close,
.toast .btn-close-white {
    filter: invert(1);
    opacity: 0.9;
    margin-right: 8px;
    transition: 0.2s;
}

.toast .btn-close:hover {
    transform: scale(1.1);
    opacity: 1;
}

/* === Slide Animation === */
@@keyframes slideToast {
    0% {
        transform: translateX(120%) scale(0.85);
        opacity: 0;
    }
    60% {
        transform: translateX(-5%) scale(1.03);
        opacity: 1;
    }
    100% {
        transform: translateX(0) scale(1);
    }
}

</style>

<script>
    // Initialize and show all Bootstrap toasts on page load
    document.addEventListener('DOMContentLoaded', function () {
        const toastElList = document.querySelectorAll('.toast');
        toastElList.forEach(function (toastEl) {
            const toast = new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 2000
            });
            toast.show();
        });
    });
    toastEl.addEventListener('hide.bs.toast', () => {
    toastEl.style.transition = "0.3s";
    toastEl.style.transform = "translateX(120%)";
    toastEl.style.opacity = "0";
});

</script>
