@model IEnumerable<PublicHoliday>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add" class="btn btn-success">Add Public Holiday</a>
</p>

<div class="mb-3">
    <form>
        @Html.AntiForgeryToken() 
        <div class="input-group">
            <input type="text" id="SearchTerm" class="form-control" placeholder="Search by name..." />

            <button type="button" id="searchBtn" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="publicHolidays">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>
                    <a href="@Url.Action("Edit", "PublicHoliday", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "PublicHoliday", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#searchBtn").click(function () {
                var searchTerm = $("#SearchTerm").val();
                var tableBody = $("#publicHolidays");

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "PublicHoliday")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        tableBody.empty();

                        if (response && response.length > 0) {
                            var newRows = "";
                            response.forEach(function (holiday) {
                                var editUrl = '@Url.Action("Edit", "PublicHoliday")/' + holiday.id;
                                var deleteUrl = '@Url.Action("Delete", "PublicHoliday")/' + holiday.id;
                        
                                newRows += `<tr>
                                                <td>${holiday.name}</td>
                                                <td>${new Date(holiday.date).toLocaleDateString()}</td>
                                                <td>
                                                    <a href="${editUrl}">Edit</a> |
                                                    <a href="${deleteUrl}">Delete</a>
                                                </td>
                                            </tr>`;
                            });
                            tableBody.html(newRows);
                        } else {
                            var noResultsRow = "<tr><td colspan='3' class='text-center'>No results found.</td></tr>";
                            tableBody.html(noResultsRow);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            });
        });
    </script>
}