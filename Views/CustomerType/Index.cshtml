@model IEnumerable<CustomerTypeVM>
@{
    ViewData["Title"] = "Index";
    string currentSearch = Context.Request.Query["searchByName"];
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 text-primary">Customer Types </h1>
            <p class="text-muted mb-0">Manage Customer Types</p>
        </div>
        <a asp-controller="CustomerType" asp-action="Create" class="btn btn-success d-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i>Add New Brand
        </a>
    </div>

    <!-- Search Form -->
    <form method="get" asp-controller="CustomerType" asp-action="Index" class="d-flex mb-3">
        <input type="text" name="searchByName" value="@currentSearch" class="form-control me-2" placeholder="Search byCustomerType Name..." />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <!-- Brands Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-light py-3">
            <h5 class="card-title mb-0">Type List </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Type Name</th>
                            <th>Description</th>
                            <th>Customers</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                         @if (Model != null && Model.Any())
                        {
                        @foreach (var type in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle">@type.Name</td>
                                <td class="align-middle text-truncate" style="max-width:360px;">@type.Description</td>
                                <td class="align-middle">@type.CustomerCount</td>
                                <td class="text-end pe-4 align-middle">
                                    <div class="btn-group">
                                        <a asp-controller="CustomerType" asp-action="Edit" asp-route-id="@type.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                                        <a asp-controller="CustomerType" asp-action="Delete" asp-route-id="@type.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">No customer types found.</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

   
</div>

<style>
    .brand-logo {
        width: 48px;
        height: 48px;
        object-fit: contain;
    }

    .website-link {
        max-width: 200px;
        display: inline-block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
