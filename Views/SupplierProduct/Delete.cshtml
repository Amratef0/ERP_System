@model ERP_System_Project.Models.SupplierProduct

<link rel="stylesheet" href="~/css/CRUD/Delete.css" />

<div class="delete-wrapper">
    <h2 class="title">Delete Supplier Product</h2>

    <div class="details-section">
        <h3 class="supplier-name">@Model.Product?.Name</h3>
        <dl class="details-grid">
            <div class="detail-item">
                <dt>Supplier</dt>
                <dd>@Model.Supplier?.SupplierName</dd>
            </div>

            <div class="detail-item">
                <dt>Product</dt>
                <dd>@Model.Product?.Name</dd>
            </div>

            <div class="detail-item">
                <dt>Unit Price</dt>
                <dd>@Model.UnitPrice</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" asp-controller="SupplierProduct" method="post">
        <input type="hidden" asp-for="SupplierProductId" />
        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" class="btn btn-back">Cancel</a>
            </div>
        </div>
    </form>

</div>
