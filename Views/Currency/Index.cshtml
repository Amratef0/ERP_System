@model IEnumerable<Currency>

@{
    ViewData["Title"] = "Currencies";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Currencies</h1>
        <p>Manage system currencies and exchange rates</p>
    </div>

    <!-- Search -->
    <div class="bp-search-card top-search">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search currencies by name, code, or symbol..." />
            </div>
            <button type="button" id="searchBtn">Search</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">

        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Count()</h3>
                <p>Total Currencies</p>
            </div>
            <i class="bi bi-currency-exchange"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Count(c => c.IsActive)</h3>
                <p>Active</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Count(c => !c.IsActive)</h3>
                <p>Inactive</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>

    </div>

    <!-- Currencies List -->
    <div class="list-page branches-page">

        <div class="card">
            <h2>Currencies List</h2>

            <a href="javascript:void(0)"
               onclick="openModalWithAjax('@Url.Action("Create", "Currency")', 'Add New Currency')"
               class="floating-btn"
               title="Add New Currency">
               <i class="fa-solid fa-plus"></i>
            </a>


            <!-- Table -->
            <table>
                <thead>
                    <tr>
                        <th>Currency Name</th>
                        <th>Code</th>
                        <th>Symbol</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody id="currencies">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Currency Name"><strong>@item.Name</strong></td>

                            <td data-label="Code">
                                <span class="text-muted">@item.Code</span>
                            </td>

                            <td data-label="Symbol">
                                <span class="text-muted fs-5">@item.Symbol</span>
                            </td>

                            <td data-label="Status">
                                @if (item.IsActive)
                                {
                                    <span class="status active">Active</span>
                                }
                                else
                                {
                                    <span class="status inactive">Inactive</span>
                                }
                            </td>

                            <td data-label="Actions">
                            <div class="action-buttons">

                                <!-- Edit Button AJAX -->
                                <a href="javascript:void(0)"
                                   onclick="openModalWithAjax('@Url.Action("Edit", "Currency", new { id = item.Id })', 'Edit Currency')"
                                   class="btn btn-update btn-sm"
                                   title="Edit Currency">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <!-- Delete Button (Non-AJAX) -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-delete btn-sm" title="Delete Currency">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>

                            </div>
                        </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <i class="bi bi-info-circle"></i> No currencies found. Click "Add New Currency" to get started.
        </div>
    }

</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "Currency")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        FillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function FillTable(response) {
                var tableBody = $("#currencies");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (currency) {
                        var activeStatus = currency.isActive 
                            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>'
                            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>';

                        newRows += `<tr>
                                        <td><strong>${currency.name}</strong></td>
                                        <td><span class="badge bg-secondary">${currency.code}</span></td>
                                        <td><span class="badge bg-info fs-5">${currency.symbol}</span></td>
                                        <td>${activeStatus}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/Currency/Edit/${currency.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${currency.name}?')) { document.getElementById('deleteForm${currency.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${currency.id}" action="/Currency/Delete/${currency.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='5' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}
