@model ERP_System_Project.Models.SupplierCategory

<link rel="stylesheet" href="~/css/CRUD/Delete.css" />

<div class="delete-wrapper">
    <h2 class="title">Delete Supplier Category</h2>

    <div class="details-section">
        <h3 class="supplier-name">@Model.CategoryName</h3>
        <dl class="details-grid">
            <div class="detail-item">
                <dt>Description</dt>
                <dd>@Model.Description</dd>
            </div>

            <div class="detail-item">
                <dt>Is Active</dt>
                <dd>@Model.IsActive</dd>
            </div>

            <div class="detail-item">
                <dt>Suppliers Count</dt>
                <dd>@(Model.Suppliers?.Count() ?? 0)</dd>
            </div>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" class="btn btn-back">Cancel</a>
            </div>
        </div>
    </form>
</div>
