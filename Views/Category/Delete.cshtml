@model CategoryVM
@{
    ViewData["Title"] = "Delete Category";
}

<link rel="stylesheet" href="~/css/CRUD/Delete.css" />

<div class="delete-wrapper">

    <h2 class="title">Delete Category</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="details-section">
        <h4 class="record-name">@Model.Name</h4>

        <dl class="details-grid">

            <div class="detail-item">
                <dt>Name</dt>
                <dd>@Model.Name</dd>
            </div>

            <div class="detail-item">
                <dt>Description</dt>
                <dd>@Model.Description</dd>
            </div>

        </dl>
    </div>

    <form asp-action="Delete" asp-controller="Category" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-back">Cancel</a>
            </div>
        </div>
    </form>

</div>
