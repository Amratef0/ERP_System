@model LeaveType

@{
    ViewData["Title"] = "Leave Type Details";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-info-circle"></i> Leave Type Details</h2>
                    <p class="text-muted">View complete leave type information</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar2-x"></i> @Model.Name</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <!-- Leave Type Name -->
                        <dt class="col-sm-5 mb-3">
                            <i class="bi bi-tag"></i> Leave Type:
                        </dt>
                        <dd class="col-sm-7 mb-3">
                            <span class="badge bg-primary fs-6">@Model.Name</span>
                        </dd>

                        <!-- Leave Code -->
                        <dt class="col-sm-5 mb-3">
                            <i class="bi bi-hash"></i> Leave Code:
                        </dt>
                        <dd class="col-sm-7 mb-3">
                            <span class="badge bg-secondary fs-6">@Model.Code</span>
                        </dd>

                        <!-- Max Days Per Year -->
                        <dt class="col-sm-5 mb-3">
                            <i class="bi bi-calendar-range"></i> Max Days/Year:
                        </dt>
                        <dd class="col-sm-7 mb-3">
                            @if (Model.MaxDaysPerYear.HasValue && Model.MaxDaysPerYear > 0)
                            {
                                <span class="badge bg-warning text-dark fs-6">@Model.MaxDaysPerYear days</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6">Unlimited</span>
                            }
                        </dd>

                        <!-- Paid Status -->
                        <dt class="col-sm-5 mb-3">
                            <i class="bi bi-cash"></i> Payment Status:
                        </dt>
                        <dd class="col-sm-7 mb-3">
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-cash"></i> Paid Leave
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-cash-stack"></i> Unpaid Leave
                                </span>
                            }
                        </dd>

                        <!-- Active Status -->
                        <dt class="col-sm-5 mb-0">
                            <i class="bi bi-toggle-on"></i> Status:
                        </dt>
                        <dd class="col-sm-7 mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-x-circle"></i> Inactive
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Leave Type
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-list"></i> View All Leave Types
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-lightbulb"></i> Leave Type Information</h6>
                    <ul class="mb-0 small">
                        <li><strong>Leave Type:</strong> Classification of leave request</li>
                        <li><strong>Leave Code:</strong> Short identifier for the leave type</li>
                        <li><strong>Max Days:</strong> Maximum days allowed per year (0 = unlimited)</li>
                        <li><strong>Payment:</strong> Indicates if employees are paid during this leave</li>
                        <li><strong>Status:</strong> Whether this leave type is available for use</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
