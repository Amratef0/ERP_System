@model IEnumerable<EmployeeType>

@{
    ViewData["Title"] = "Employee Types";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Employee Types</h1>
        <p>Manage employee classifications and types</p>
    </div>

    <!-- Search Card -->
    <div class="bp-search-card top-search mt-4">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search employee types by name..." />
            </div>
            <button type="button" id="searchBtn">Search</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Count()</h3>
                <p>Total Employee Types</p>
            </div>
            <i class="bi bi-collection"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Count(e => e.IsActive)</h3>
                <p>Active</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Count(e => !e.IsActive)</h3>
                <p>Inactive</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>
    </div>

    <!-- Employee Types Table -->
    <div class="list-page departments-page mt-4">
        <div class="card">
            <h2>Employee Types List</h2>

            <!-- Floating Add Button (AJAX) -->
            <a href="javascript:void(0);" 
               onclick="openModalWithAjax('@Url.Action("Create", "EmployeeType")', 'Add New Employee Type')" 
               class="floating-btn" 
               title="Add New Employee Type">
               <i class="fa-solid fa-plus"></i>
            </a>

            <table>
                <thead>
                    <tr>
                        <th>Type Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody id="employeeTypes">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Type Name">
                                <strong>@item.Name</strong>
                            </td>

                            <td data-label="Description">
                                <span class="text-muted">
                                    @(string.IsNullOrEmpty(item.Description) 
                                        ? "-" 
                                        : (item.Description.Length > 50 
                                            ? item.Description.Substring(0, 50) + "..." 
                                            : item.Description))
                                </span>
                            </td>

                            <td data-label="Status">
                                @if (item.IsActive)
                                {
                                    <span class="status active">Active</span>
                                }
                                else
                                {
                                    <span class="status inactive">Inactive</span>
                                }
                            </td>

                            <td data-label="Actions">
                                <div class="action-buttons">

                                    <!-- Details (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Details", "EmployeeType", new { id = item.Id })', 'Employee Type Details')"
                                       class="btn btn-view btn-sm">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    <!-- Edit (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Edit", "EmployeeType", new { id = item.Id })', 'Edit Employee Type')"
                                       class="btn btn-update btn-sm">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <!-- Delete (Normal Submit, NOT AJAX, NOT MODAL) -->
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-delete btn-sm" title="Delete">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>


                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <i class="bi bi-info-circle"></i> No employee types available.
        </div>
    }
</div>
<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "EmployeeType")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function fillTable(response) {
                var tableBody = $("#types");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (employeeType) {
                        var activeStatus = employeeType.isActive 
                            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>'
                            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>';
                        
                        var description = employeeType.description 
                            ? (employeeType.description.length > 50 ? employeeType.description.substring(0, 50) + '...' : employeeType.description)
                            : '-';

                        newRows += `<tr>
                                        <td><strong>${employeeType.name}</strong></td>
                                        <td><span class="text-muted">${description}</span></td>
                                        <td class="text-center">${activeStatus}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/EmployeeType/Details/${employeeType.id}" class="btn btn-sm btn-info" title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/EmployeeType/Edit/${employeeType.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${employeeType.name}?')) { document.getElementById('deleteForm${employeeType.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${employeeType.id}" action="/EmployeeType/Delete/${employeeType.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='4' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}