@model ERP_System_Project.ViewModels.Inventory.EditProductVM
@{
    ViewData["Title"] = "Edit Product";
}

<div class="form-page create-product">
    <div class="form">
        <h3 class="formTitle">Edit Product</h3>

        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Basic Information -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Description" class="form-control" placeholder=" " />
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Pricing -->
            <div class="number-field-group">
                <label asp-for="UnitCost" class="number-label">Unit Cost</label>
                <input asp-for="UnitCost" type="number" step="0.01" class="number-input" />
                <span asp-validation-for="UnitCost" class="text-danger"></span>
            </div>

            <div class="number-field-group">
                <label asp-for="StandardPrice" class="number-label">Standard Price</label>
                <input asp-for="StandardPrice" type="number" step="0.01" class="number-input" />
                <span asp-validation-for="StandardPrice" class="text-danger"></span>
            </div>

            <!-- Inventory & Selection -->
            <div class="number-field-group">
                <label asp-for="Quantity" class="number-label">Quantity</label>
                <input asp-for="Quantity" type="number" class="number-input" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="BrandId" asp-items="@ViewBag.Brands" class="form-select">
                    <option value="">-- Select Brand --</option>
                </select>
                <label asp-for="BrandId">Brand</label>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <label asp-for="CategoryId">Category</label>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Current Image -->
            <div class="form-group full-width">
                <label class="form-label">Current Image</label>
                <div class="current-image-container">
                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <div class="mb-2">
                            <img src="@Model.ImageURL" alt="Product Image" class="img-thumbnail" style="height:200px; max-width:400px;" />
                            <div class="form-text">Current product image</div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-image"></i> No image uploaded for this product.
                        </div>
                    }
                </div>
            </div>

            <!-- New Image Upload -->
            <div class="form-group full-width">
                <input asp-for="NewImage" type="file" class="form-control" accept="image/*" />
                <label asp-for="NewImage">Replace Image</label>
                <span asp-validation-for="NewImage" class="text-danger"></span>
                <div class="form-text">Leave empty to keep current image</div>
            </div>

            <!-- Product Attributes -->
            <div class="form-group full-width lists-section">
                <h4>Product Attributes</h4>
                <div id="attributes-container" class="item-list">
                    @if (Model?.AttributesVM != null)
                    {
                        @for (int i = 0; i < Model.AttributesVM.Count; i++)
                        {
                            <div class="attribute-group row mb-2">
                                <div class="col-md-5">
                                    <select asp-for="AttributesVM[i].AtrributeId" asp-items="@ViewBag.Attributes" class="form-select">
                                        <option value="">-- Select Attribute --</option>
                                    </select>
                                </div>
                                <div class="col-md-5">
                                    <input asp-for="AttributesVM[i].Value" class="form-control" placeholder=" " />
                                    <label asp-for="AttributesVM[i].Value">Value</label>
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-danger remove-attribute">Remove</button>
                                </div>
                            </div>
                        }
                    }
                </div>
                <button type="button" id="add-attribute" class="btn btn-secondary mt-2">Add Attribute</button>
            </div>

            <!-- Action Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const attributesContainer = document.getElementById('attributes-container');
            const addAttributeBtn = document.getElementById('add-attribute');
            let attributeIndex = @(Model?.AttributesVM?.Count ?? 0);

            addAttributeBtn.addEventListener('click', function () {
                const newAttributeHtml = `
                    <div class="attribute-group row mb-2">
                        <div class="col-md-5">
                            <select name="AttributesVM[${attributeIndex}].AtrributeId" class="form-select">
                                <option value="">-- Select Attribute --</option>
                                @if (ViewBag.Attributes != null)
                                {
                                    foreach (var item in ViewBag.Attributes)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <input name="AttributesVM[${attributeIndex}].Value" class="form-control" placeholder="Value" />
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger remove-attribute">Remove</button>
                        </div>
                    </div>
                `;
                attributesContainer.insertAdjacentHTML('beforeend', newAttributeHtml);
                attributeIndex++;
            });

            attributesContainer.addEventListener('click', function (e) {
                if (e.target.classList.contains('remove-attribute')) {
                    e.target.closest('.attribute-group').remove();
                    reindexAttributes();
                }
            });

            function reindexAttributes() {
                const attributeGroups = attributesContainer.querySelectorAll('.attribute-group');
                attributeIndex = 0;
                attributeGroups.forEach((group, index) => {
                    const select = group.querySelector('select');
                    const input = group.querySelector('input[type="text"]');
                    select.name = `AttributesVM[${index}].AtrributeId`;
                    input.name = `AttributesVM[${index}].Value`;
                    attributeIndex = index + 1;
                });
            }
        });
    </script>
}
