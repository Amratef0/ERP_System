@model PageSourcePagination<CategoryVM>
@{
    ViewData["Title"] = "Category Management";
    string currentSearch = Context.Request.Query["searchByName"];
}

<partial name="_Toast" />

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Category Management</h1>
        <p>Manage your product categories and organize your inventory</p>

        <a asp-action="Index" asp-controller="Product" class="bp-back-btn">
            <i class="bi bi-arrow-left"></i> Back to Products
        </a>
    </div>

    <!-- Stats + Search -->
    <div class="bp-grid">

        <!-- Stats Card -->
        <div class="bp-stat-card">
            <div>
                <h3>@Model.TotalRecords</h3>
                <p>Total Categories</p>
            </div>
            <i class="bi bi-grid"></i>
        </div>

        <!-- Search Card -->
        <div class="bp-search-card">
            <form method="get" asp-controller="Category" asp-action="Index" class="bp-search-form">
                <div class="bp-search-group">
                    <i class="bi bi-search"></i>
                    <input type="text" name="searchByName" value="@currentSearch" placeholder="Search by category name..." />
                </div>
                <button type="submit">Search Categories</button>
            </form>
        </div>
    </div>

</div>

<div class="list-page categories-page">
    <div class="card">
        <h2>Category List</h2>

        <!-- Floating Add Button -->
        <a href="javascript:void(0)" 
           onclick="openModalWithAjax('@Url.Action("New", "Category")', 'Add New Category')" 
           class="floating-btn" 
           title="Add New Category">
            <i class="fa-solid fa-plus"></i>
        </a>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Category Details</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Data)
                {
                    <tr>
                        <td data-label="Category Details">
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <div>
                                    <strong>@category.Name</strong><br />
                                    <small class="text-muted">ID: @category.Id</small>
                                </div>
                            </div>
                        </td>

                        <td data-label="Actions">
                            <div class="action-buttons">
                                <!-- Edit -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Edit", "Category", new { id = category.Id })', 'Edit Category')" 
                                   class="btn btn-update" 
                                   title="Edit Category">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <!-- Delete -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Delete", "Category", new { id = category.Id })', 'Delete Category')" 
                                   class="btn btn-delete" 
                                   title="Delete Category">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination & Info -->
<div class="pagination-container">
    <div class="pagination-info">
        Showing page @Model.PageNumber of @Model.TotalPages • @Model.TotalRecords total categories
    </div>

    <div class="pagination-controls">
        @if (Model.TotalPages > 1)
        {
            @if (Model.PageNumber > 1)
            {
                <a asp-controller="Category"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="5"
                   asp-route-searchByName="@currentSearch"
                   class="pagination-btn">Previous</a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageNumber)
                {
                    <span class="pagination-btn active">@i</span>
                }
                else
                {
                    <a asp-controller="Category"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="5"
                       asp-route-searchByName="@currentSearch"
                       class="pagination-btn">@i</a>
                }
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <a asp-controller="Category"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="5"
                   asp-route-searchByName="@currentSearch"
                   class="pagination-btn">Next</a>
            }
        }
    </div>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")
