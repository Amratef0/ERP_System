@model EmployeeVM

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="form-page create-product">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit Employee</h3>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />

            <!-- Image Section Wrapper -->
            <div class="my-image-section-wrapper">
                <div class="image-card">
                    <div class="image-card-header">
                        <h4 class="mb-0"><i class="bi bi-image"></i> Employee Photo</h4>
                    </div>
                    <div class="image-card-body">
                        <div class="image-section-body">
                            <!-- Avatar Column -->
                            <div class="avatar-container">
                                <label class="control-label d-block mb-2"><strong>Photo Preview</strong></label>
                                @if (!string.IsNullOrEmpty(Model.ImageURL))
                                {
                                    <img id="imagePreview" src="@Model.ImageURL" alt="@Model.FirstName @Model.LastName" class="avatar-preview" />
                                }
                                else
                                {
                                    <div id="avatarPlaceholder" class="avatar-placeholder">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <img id="imagePreview" src="" class="avatar-preview d-none" />
                                }
                                <p class="preview-text"><small id="previewText">
                                    @(string.IsNullOrEmpty(Model.ImageURL) ? "No photo selected" : "Current photo")
                                </small></p>

                                @if (!string.IsNullOrEmpty(Model.ImageURL))
                                {
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="checkbox" asp-for="RemoveImage" id="removeImageCheck" />
                                        <label class="form-check-label text-danger" for="removeImageCheck">
                                            <i class="bi bi-trash"></i> Remove current photo
                                        </label>
                                    </div>
                                }
                            </div>

                            <!-- Drop Zone Column -->
                            <div class="drop-zone-container">
                                <div id="dropZone" class="drop-zone">
                                    <i class="bi bi-cloud-upload upload-icon"></i>
                                    <h4 class="drop-title">Drag & Drop Photo Here</h4>
                                    <p class="drop-or">or</p>
                                    <button type="button" class="btn-browse" id="selectFileBtn">
                                        <i class="bi bi-folder2-open"></i> Browse Files
                                    </button>
                                    <input type="file" asp-for="NewImage" id="fileInput" class="file-input" accept="image/*" />
                                    <span asp-validation-for="NewImage" class="text-error d-block mt-2"></span>
                                    <small class="form-text text-muted d-block mt-3">
                                        <i class="bi bi-info-circle"></i> Accepted formats: JPG, JPEG, PNG, GIF (Max 1MB)
                                    </small>
                                </div>

                                <div id="fileInfo" class="file-info d-none" role="alert">
                                    <i class="bi bi-check-circle"></i> 
                                    <strong>File selected:</strong> <span id="fileName"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

