@model PageSourcePagination<CategoryVM>
@{
    ViewData["Title"] = "Index";
    string currentSearch = Context.Request.Query["searchByName"];
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-gradient-primary mb-2">Category Management</h1>
            <p class="text-muted mb-3">Manage your product categories and organize your inventory</p>
            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary d-inline-flex align-items-center">
                <i class="bi bi-arrow-left me-2"></i>Back to Products
            </a>
        </div>
        <a asp-controller="Category" asp-action="New" class="btn btn-primary d-flex align-items-center shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Add New Category
        </a>
    </div>

    <!-- Stats & Search Section -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.TotalRecords</h3>
                            <p class="card-text">Total Categories</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-grid fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <!-- Search Form -->
            <div class="card">
                <div class="card-body">
                    <form method="get" asp-controller="Category" asp-action="Index" class="row g-2">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input type="text" name="searchByName" value="@currentSearch" class="form-control border-start-0" placeholder="Search by category name..." />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">Search Categories</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Table Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 fw-semibold">Category List</h5>
                <span class="badge bg-light text-dark">@Model.Data.Count() items</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3 fw-semibold">Category Details</th>
                            <th class="text-end pe-4 py-3 fw-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Data)
                        {
                            <tr class="border-bottom">
                                <td class="ps-4 align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="bi bi-folder text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-semibold">@category.Name</h6>
                                            <small class="text-muted">ID: @category.Id</small>
                                        </div>
                                    </div>
                                </td>
                                
                                <td class="text-end pe-4 align-middle">
                                    <div class="btn-group">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary rounded-start">
                                            <i class="bi bi-pencil me-1"></i> Edit
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger rounded-end">
                                            <i class="bi bi-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination & Info -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="text-muted">
            Showing page @Model.PageNumber of @Model.TotalPages • @Model.TotalRecords total categories
        </div>
        <div class="d-flex justify-content-end gap-2">
            @if (Model.TotalPages > 1)
            {
                @if (Model.PageNumber > 1)
                {
                    <a asp-controller="Category"
                       asp-action="Index"
                       asp-route-pageNumber="@(Model.PageNumber - 1)"
                       asp-route-pageSize="5"
                       asp-route-searchByName="@currentSearch"
                       class="btn btn-sm btn-outline-primary d-flex align-items-center">
                        <i class="bi bi-chevron-left me-1"></i> Previous
                    </a>
                }

                <!-- Page Numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <span class="btn btn-sm btn-primary">@i</span>
                    }
                    else
                    {
                        <a asp-controller="Category"
                           asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-pageSize="5"
                           asp-route-searchByName="@currentSearch"
                           class="btn btn-sm btn-outline-primary">@i</a>
                    }
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <a asp-controller="Category"
                       asp-action="Index"
                       asp-route-pageNumber="@(Model.PageNumber + 1)"
                       asp-route-pageSize="5"
                       asp-route-searchByName="@currentSearch"
                       class="btn btn-sm btn-outline-primary d-flex align-items-center">
                        Next <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                }
            }
        </div>
    </div>
</div>

<style>
    .text-gradient-primary {
        background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-card {
        border-radius: 12px;
        transition: transform 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .table > :not(caption) > * > * {
        padding: 1rem 1.5rem;
    }

    .btn {
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .card {
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .badge {
        border-radius: 6px;
        padding: 0.5rem 0.75rem;
    }
</style>