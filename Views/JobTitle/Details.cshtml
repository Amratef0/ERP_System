@model ERP_System_Project.Models.HR.JobTitle

@{
    ViewData["Title"] = "Job Title Details";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-info-circle"></i> Job Title Details</h2>
                    <p class="text-muted">View complete job title information</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-briefcase"></i> @Model.Name</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <!-- Job Title Name -->
                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-tag"></i> Job Title:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    <span class="badge bg-primary fs-6">@Model.Name</span>
                                </dd>

                                <!-- Job Code -->
                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-hash"></i> Job Code:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    <span class="badge bg-secondary fs-6">@Model.Code</span>
                                </dd>

                                <!-- Status -->
                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-toggle-on"></i> Status:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <!-- Min Salary -->
                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-cash-stack"></i> Min Salary:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @if (Model.MinSalary.HasValue && Model.MinSalary > 0)
                                    {
                                        <span class="badge bg-success fs-6">$@Model.MinSalary.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </dd>

                                <!-- Max Salary -->
                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-cash-coin"></i> Max Salary:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @if (Model.MaxSalary.HasValue && Model.MaxSalary > 0)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">$@Model.MaxSalary.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </dd>

                                <!-- Salary Range -->
                                @if (Model.MinSalary.HasValue && Model.MaxSalary.HasValue && Model.MinSalary > 0 && Model.MaxSalary > 0)
                                {
                                    <dt class="col-sm-5 mb-3">
                                        <i class="bi bi-graph-up"></i> Range:
                                    </dt>
                                    <dd class="col-sm-7 mb-3">
                                        <span class="badge bg-info fs-6">$@((Model.MaxSalary.Value - Model.MinSalary.Value).ToString("N2"))</span>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr />
                        <div class="mb-0">
                            <h6 class="text-muted mb-2">
                                <i class="bi bi-card-text"></i> Description:
                            </h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="mb-0">@Model.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Job Title
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-list"></i> View All Job Titles
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-lightbulb"></i> Job Title Information</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="mb-0 small">
                                <li><strong>Job Title:</strong> Official position name</li>
                                <li><strong>Job Code:</strong> Unique identifier in the system</li>
                                <li><strong>Status:</strong> Availability in selection lists</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="mb-0 small">
                                <li><strong>Salary Range:</strong> Compensation guidelines</li>
                                <li><strong>Description:</strong> Responsibilities and requirements</li>
                                <li><strong>Range:</strong> Difference between min and max salary</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
