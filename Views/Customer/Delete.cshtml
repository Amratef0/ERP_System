@* Change from Customer to CustomerVM *@
@model ERP_System_Project.ViewModels.CRM.CustomerVM

@{
    ViewData["Title"] = "Delete Customer";
}

<link rel="stylesheet" href="~/css/CRUD/Delete.css" />

<div class="delete-wrapper">

    <h2 class="title">Delete Customer</h2>

    <div class="details-section">
        <h4 class="record-name">@Model.FullName</h4>

        <dl class="details-grid">

            <div class="detail-item">
                <dt>ID</dt>
                <dd>@Model.Id</dd>
            </div>

            <div class="detail-item">
                <dt>Full Name</dt>
                <dd>@Model.FullName</dd>
            </div>

            <div class="detail-item">
                <dt>Email</dt>
                <dd>@Model.Email</dd>
            </div>

            <div class="detail-item">
                <dt>Phone</dt>
                <dd>@Model.PhoneNumber</dd>
            </div>

            <div class="detail-item">
                <dt>Customer Type</dt>
                <dd>@Model.CustomerTypeName</dd>
            </div>

            <div class="detail-item">
                <dt>Number of Orders</dt>
                <dd>@Model.NumOfOrders</dd>
            </div>

        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="viewActions">
            <div class="left-buttons">
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-back">Cancel</a>
            </div>
        </div>
    </form>

</div>
