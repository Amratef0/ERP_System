@using ERP_System_Project.ViewModels
@using ERP_System_Project.ViewModels.Inventory
@model PageSourcePagination<ProductVM>
@{
    ViewData["Title"] = "Index";
    string currentSearch = Context.Request.Query["searchByName"];
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 text-primary fw-bold">Product Management</h1>
            <p class="text-muted mb-0">Manage your products and their details efficiently</p>
        </div>
        <a asp-controller="Product" asp-action="New" class="btn btn-success d-flex align-items-center shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Add New Product
        </a>
    </div>

    <!-- Search and Filter Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form method="get" asp-controller="Product" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label for="searchInput" class="form-label small text-muted">Search Products</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" name="searchByName" value="@currentSearch"
                               class="form-control border-start-0" placeholder="Enter product name to search..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Table Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light py-3 border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 fw-semibold text-dark">Product List</h5>
                <span class="badge bg-primary rounded-pill">@Model.TotalRecords Products</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3 fw-semibold text-dark">Product Name</th>
                            <th class="text-center py-3 fw-semibold text-dark">Status</th>
                            <th class="text-end pe-4 py-3 fw-semibold text-dark">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Data.Any())
                        {
                            @foreach (var product in Model.Data)
                            {
                                <tr class="align-middle">
                                    <td class="ps-4 align-middle">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <i class="bi bi-box-seam text-primary"></i>
                                            </div>
                                            <div>
                                                <span class="fw-medium">@product.Name</span>
                                                <div class="text-muted small">ID: @product.Id</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center align-middle">
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    </td>
                                    <td class="text-end pe-4 align-middle">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                                               class="btn btn-sm btn-outline-primary rounded-start">
                                                <i class="bi bi-pencil me-1"></i> Edit
                                            </a>
                                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                                               class="btn btn-sm btn-outline-danger rounded-end">
                                                <i class="bi bi-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox display-4 d-block mb-2"></i>
                                    No products found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted small">
                Showing page @Model.PageNumber of @Model.TotalPages
            </div>
            <nav aria-label="Product pagination">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(Model.PageNumber > 1 ? "" : "disabled")">
                        <a class="page-link"
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-pageSize="10"
                           asp-route-searchByName="@currentSearch">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link"
                               asp-controller="Product"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-pageSize="10"
                               asp-route-searchByName="@currentSearch">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber < Model.TotalPages ? "" : "disabled")">
                        <a class="page-link"
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-pageSize="10"
                           asp-route-searchByName="@currentSearch">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #6c757d;
    }

    .table td {
        border-top: 1px solid #f0f0f0;
        padding-top: 1rem;
        padding-bottom: 1rem;
        vertical-align: middle;
    }

    .btn {
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.1);
        border-color: #86b7fe;
    }
</style>

