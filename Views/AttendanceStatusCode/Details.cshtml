@model AttendanceStatusCode

@{
    ViewData["Title"] = "Status Code Details";
}

<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page">

    <!-- Title -->
    <h2 class="title">Status Code Details</h2>

    <!-- Name + Code -->
    <h3 class="supplier-name">@Model.Name (@Model.Code)</h3>

    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <!-- Status Name -->
        <div class="detail-item">
            <dt>Status Name</dt>
            <dd>@Model.Name</dd>
        </div>

        <!-- Status Code -->
        <div class="detail-item">
            <dt>Status Code</dt>
            <dd>@Model.Code</dd>
        </div>

        <!-- Status -->
        <div class="detail-item">
            <dt>Status</dt>
            <dd>
                @if (Model.IsActive)
                {
                    <span class="status active">Active</span>
                }
                else
                {
                    <span class="status inactive">Inactive</span>
                }
            </dd>
        </div>

    </dl>

    <!-- DESCRIPTION -->
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="details-section" style="margin-top:18px;">
            <h4>Description</h4>

           <div class="detail-item" style="grid-column: 1 / -1;">
              <dt>Description</dt>
              <dd>@Model.Description</dd>
           </div>
        </div>
    }

    <!-- INFO LIST -->
    <div class="lists-section" style="margin-top:22px;">
        <h4>Status Code Information</h4>

        <ul class="item-list">
            <li><strong>Status Name:</strong> Full name of the attendance status</li>
            <li><strong>Status Code:</strong> Short identifier used in the system</li>
            <li><strong>Status:</strong> Indicates whether the code is active</li>
            <li><strong>Description:</strong> Explains when this status is used</li>
        </ul>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="viewActions">
        <div class="left-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
        </div>

        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>
</div>
