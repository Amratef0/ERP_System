@model BrandVM
@{
    ViewData["Title"] = "Delete Brand";
}

<div class="container mt-4">
    <form method="post" asp-action="Delete">
        <input asp-for="Id" type="hidden" />
        <div class="card p-4 shadow-sm">
            <div class="mb-3">
                <h2 class="text-primary">Delete Brand</h2>
                <hr />
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="LogoURL" class="form-label"></label>
                <input asp-for="LogoURL" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="WebsiteURL" class="form-label"></label>
                <input asp-for="WebsiteURL" class="form-control" disabled />
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-danger flex-fill">Delete</button>
                <a asp-action="Index" asp-controller="Brand" class="btn btn-secondary flex-fill">Back to Brands</a>
            </div>
        </div>
    </form>
</div>
