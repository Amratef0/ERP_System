@model IEnumerable<ERP_System_Project.Models.SupplierCategory>

@{
    ViewData["Title"] = "Supplier Categories";
}
<link rel="stylesheet" href="@(Url.Content("~/css/Purchase/Supplier/Index.css"))" />

<div class="suppliers-page">
    <div class="card">
        <h2>Supplier Categories</h2>

        <a href="javascript:void(0)" 
           onclick="openModalWithAjax('@Url.Action("Create", "SupplierCategory")', 'Create New Category')" 
           class="floating-btn" 
           title="Create New Category">
           <i class="fa-solid fa-plus"></i>
        </a>

        <table>
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Is Active</th>
                    <th>Suppliers Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Category Name">@item.CategoryName</td>
                        <td data-label="Description">@item.Description</td>
                        <td data-label="Is Active">@item.IsActive</td>
                        <td data-label="Suppliers Count">@((item.Suppliers?.Count() ?? 0))</td>
                        <td data-label="Actions">
                            <div class="action-buttons">
                                <!-- Details Button -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Details", "SupplierCategory", new { id = item.CategoryId })', 'Details Category')" 
                                   class="btn btn-view btn-sm" 
                                   title="Details">
                                   <i class="fa-solid fa-eye"></i>
                                </a>

                                <!-- Edit Button -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Edit", "SupplierCategory", new { id = item.CategoryId })', 'Edit Category')" 
                                   class="btn btn-update btn-sm" 
                                   title="Edit">
                                   <i class="fa-solid fa-pen"></i>
                                </a>

                                <!-- Delete Button -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Delete", "SupplierCategory", new { id = item.CategoryId })', 'Delete Category')" 
                                   class="btn btn-delete btn-sm" 
                                   title="Delete">
                                   <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_GeneralModal")
