@using ERP_System_Project.ViewModels.Core
@model BranchVM

@{
    ViewData["Title"] = "Edit Branch";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit Branch</h3>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />

            <!-- Branch Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Branch Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Branch Code -->
            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " maxlength="10" />
                <label asp-for="Code">Branch Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder=" " />
                <label asp-for="PhoneNumber">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder=" " />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Address Fields -->
            <div class="form-group">
                <input asp-for="Line1" class="form-control" placeholder=" " />
                <label asp-for="Line1">Street Address</label>
                <span asp-validation-for="Line1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="City" class="form-control" placeholder=" " />
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="StateProvince" class="form-control" placeholder=" " />
                <label asp-for="StateProvince">State/Province</label>
                <span asp-validation-for="StateProvince" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="PostalCode" class="form-control" placeholder=" " />
                <label asp-for="PostalCode">Postal Code</label>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="CountryId" class="form-control" asp-items="@(new SelectList(Model.Countries, "Id", "Name"))">
                    <option value="">-- Select Country --</option>
                </select>
                <label asp-for="CountryId">Country <span class="text-danger">*</span></label>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="AddressType" class="form-control" placeholder=" " />
                <label asp-for="AddressType">Address Type</label>
                <span asp-validation-for="AddressType" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="form-group form-check">
                <input asp-for="IsMainBranch" id="isMainBranchSwitch" type="checkbox" class="form-check-input" />
                <label asp-for="IsMainBranch" class="form-check-label" for="isMainBranchSwitch">
                    This is the Main Branch
                </label>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label" for="isActiveSwitch">
                    Branch is Active
                </label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>

        <!-- Info Section -->
        <div class="lists-section" style="margin-top:22px;">
            <h4>Branch Information</h4>
            <ul class="item-list">
                <li><strong>Branch Name:</strong> Full name of the branch</li>
                <li><strong>Code:</strong> Short unique identifier</li>
                <li><strong>Phone Number:</strong> Optional contact number</li>
                <li><strong>Email:</strong> Optional contact email</li>
                <li><strong>Address:</strong> Street, City, State, Postal Code, Country</li>
                <li><strong>Status:</strong> Only active branches will appear in lists</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
