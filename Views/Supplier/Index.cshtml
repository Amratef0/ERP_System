@model IEnumerable<ERP_System_Project.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />

<div class="suppliers-page">
    <div class="card">
        <h2>Suppliers</h2>

        @* <a asp-action="Create" class="floating-btn" title="Add New Supplier">
            <i class="fa-solid fa-plus"></i>
        </a> *@

        <a href="javascript:void(0)" 
           onclick="openModalWithAjax('@Url.Action("Create", "Supplier")', 'Add New Supplier')" 
           class="floating-btn" 
           title="Add New Supplier">
           <i class="fa-solid fa-plus"></i>
        </a>

        <table>
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Code">@item.SupplierCode</td>
                        <td data-label="Name">@item.SupplierName</td>
                        <td data-label="Category">@item.SupplierCategory?.CategoryName</td>
                        <td data-label="Actions">
                            <div class="action-buttons">
                                <!-- View Button -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Details", "Supplier", new { id = item.SupplierId })', 'View Supplier')" 
                                   class="btn btn-view btn-sm" 
                                   title="View Supplier">
                                   <i class="fa-solid fa-eye"></i>
                                </a>

                                <!-- Edit Button -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Edit", "Supplier", new { id = item.SupplierId })', 'Edit Supplier')" 
                                   class="btn btn-update btn-sm" 
                                   title="Edit Supplier">
                                   <i class="fa-solid fa-pen"></i>
                                </a>

                                <!-- Delete Button -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Delete", "Supplier", new { id = item.SupplierId })', 'Delete Supplier')" 
                                   class="btn btn-delete btn-sm" 
                                   title="Delete Supplier">
                                   <i class="fa-solid fa-trash"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




@await Html.PartialAsync("_GeneralModal")




