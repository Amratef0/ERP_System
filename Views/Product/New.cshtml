@using ERP_System_Project.ViewModels.Inventory
@model ProductVM

@{
    ViewData["Title"] = "New";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<form asp-action="New" method="post" enctype="multipart/form-data">
    @* <div asp-validation-summary="All" class="text-danger"></div> *@

    <!-- STEP 1: PRODUCT DETAILS -->
    <div id="step1" class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-box-seam"></i> Product Information
        </div>
        <div class="card-body">

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="UnitCost" class="form-label"></label>
                    <input asp-for="UnitCost" class="form-control" value=0 />
                    <span asp-validation-for="UnitCost" class="text-danger"></span>

                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="StandardPrice" class="form-label"></label>
                    <input asp-for="StandardPrice" class="form-control" value=0 />
                    <span asp-validation-for="StandardPrice" class="text-danger"></span>

                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="BrandId" class="form-label"></label>
                    <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands" required>
                        <option value="0">Select Brand</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>

                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories" required>
                        <option value="0">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>

                </div>
            </div>

            <div class="mb-3">
                <label asp-for="NumberOfVariants" class="form-label"></label>
                <input asp-for="NumberOfVariants" class="form-control" id="variantCount" min="1" max="3" />
                <span id="variantError" class="text-danger d-none">Please enter a number between 1 and 3.</span>
            </div>

            <button type="button" class="btn btn-primary w-100" id="btnNext">
                <i class="bi bi-arrow-right-circle"></i> Next
            </button>
        </div>
    </div>

    <!-- STEP 2: VARIANTS -->
    <div id="step2" style="display:none;">
        <div id="variantContainer"></div>

        <button type="button" class="btn btn-secondary w-100 mb-2" id="btnBack">
            <i class="bi bi-arrow-left-circle"></i> Back
        </button>
        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-check-circle"></i> Submit
        </button>
    </div>

</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        $("#btnNext").click(function () {
            let count = parseInt($("#variantCount").val());

            if (isNaN(count) || count < 1 || count > 3) {
                $("#variantError").removeClass("d-none");
                return;
            } else {
                $("#variantError").addClass("d-none");
            }

            $("#variantContainer").empty();

            for (let i = 0; i < count; i++) {
                $("#variantContainer").append(`
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-info text-white">
                            <i class="bi bi-sliders"></i> Variant ${i + 1}
                        </div>
                        <div class="card-body">

                            <div class="mb-2">
                                <label>Additional Price</label>
                                <input name="ProductVariants[${i}].AdditionalPrice" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label>Quantity</label>
                                <input name="ProductVariants[${i}].Quantity" class="form-control" />
                            </div>

                            <div class="form-check">
                                <input type="checkbox" class="form-check-input"
                                       name="ProductVariants[${i}].IsDefault"
                                       value="true" />
                                <input type="hidden" name="ProductVariants[${i}].IsDefault" value="false" />
                                <label class="form-check-label">Is Default</label>
                            </div>


                            <div class="mb-2">
                                <label>Image</label>
                                <input type="file" name="ProductVariants[${i}].Image" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label>Attribute Name</label>
                                <select name="ProductVariants[${i}].AtrributeId" class="form-select">
                                    <option value="">Select Attribute</option>
                                    @foreach (var item in ViewBag.Attributes)
                                    {
                                                <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="ProductVariants[${i}].AtrributeId" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label>Attribute Value</label>
                                <input name="ProductVariants[${i}].AtrributeValue" class="form-control" />
                            </div>

                        </div>
                    </div>
                `);
            }

            $("#step1").hide();
            $("#step2").show();
        });

        $("#btnBack").click(function () {
            $("#step2").hide();
            $("#step1").show();
        });
    </script>
}