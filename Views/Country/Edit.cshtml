@model Country

@{
    ViewData["Title"] = "Edit Country";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit Country</h3>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden ID field -->
            <input asp-for="Id" type="hidden" />

            <!-- Country Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " />
                <label asp-for="Name">Country Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Country Code -->
            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " maxlength="3" style="text-transform: uppercase;" />
                <label asp-for="Code">Country Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <!-- Phone Code -->
            <div class="number-field-group">
                <label for="PhoneCode" class="number-label">Phone Code</label>
                <input asp-for="PhoneCode" type="number" class="number-input" />
                <span asp-validation-for="PhoneCode" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-uppercase country code
        document.querySelector('input[name="Code"]')?.addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });

        // Number field focus effect like Job Title
        document.querySelectorAll('input[type="number"]').forEach(input => {
            if (input.value) input.classList.add('has-value');
            input.addEventListener('input', () => {
                if (input.value) input.classList.add('has-value');
                else input.classList.remove('has-value');
            });
        });
    </script>
}
