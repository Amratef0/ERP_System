@model EmployeesIndexVM

@{
    ViewData["Title"] = "Employees";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-people"></i> Employees</h2>
                    <p class="text-muted">Manage company employees and workforce</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Add New Employee
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-people"></i> Total Employees</h6>
                    <h2 class="mb-0">@Model.Employees.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-building"></i> Branches</h6>
                    <h2 class="mb-0">@Model.Branches.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-diagram-3"></i> Departments</h6>
                    <h2 class="mb-0">@Model.Departments.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-briefcase"></i> Job Titles</h6>
                    <h2 class="mb-0">@Model.JobTitles.Count()</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters & Search</h5>
        </div>
        <div class="card-body">
            <form id="searchForm">
                @Html.AntiForgeryToken()
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label"><i class="bi bi-search"></i> Search Employee</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" id="searchTerm" class="form-control" 
                                   placeholder="Search by employee name..." />
                            <button type="button" id="searchBtn" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <label for="branchFilter" class="form-label">
                            <i class="bi bi-building"></i> Branch
                        </label>
                        <select id="branchFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.Branches, "Id", "Name"))">
                            <option value="">All Branches</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="departmentFilter" class="form-label">
                            <i class="bi bi-diagram-3"></i> Department
                        </label>
                        <select id="departmentFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="employeeTypeFilter" class="form-label">
                            <i class="bi bi-person-lines-fill"></i> Employee Type
                        </label>
                        <select id="employeeTypeFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.EmployeeTypes, "Id", "Name"))">
                            <option value="">All Types</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="jobTitleFilter" class="form-label">
                            <i class="bi bi-briefcase"></i> Job Title
                        </label>
                        <select id="jobTitleFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.JobTitles, "Id", "Name"))">
                            <option value="">All Job Titles</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Employees Table -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-table"></i> Employees List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person"></i> Full Name</th>
                            <th><i class="bi bi-building"></i> Branch</th>
                            <th><i class="bi bi-diagram-3"></i> Department</th>
                            <th><i class="bi bi-person-badge"></i> Type</th>
                            <th><i class="bi bi-briefcase"></i> Job Title</th>
                            <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody id="employees">
                        @foreach (var item in Model.Employees)
                        {
                            <tr>
                                <td>
                                    <strong>@item.FullName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.Branch.Name</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Department.Name</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.Type.Name</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">@item.JobTitle.Name</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal@(item.Id)" 
                                                title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Delete employee <strong>@item.FullName</strong>?</p>
                                                    <p class="text-danger mb-0">
                                                        <i class="bi bi-exclamation-triangle"></i> This action cannot be undone!
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Employees.Any())
    {
        <div class="alert alert-info mt-4">
            <i class="bi bi-info-circle"></i> No employees found. Click "Add New Employee" to get started.
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var branch = parseInt($("#branchFilter").val()) || 0;
                var department = parseInt($("#departmentFilter").val()) || 0;
                var employeeType = parseInt($("#employeeTypeFilter").val()) || 0;
                var jobTitle = parseInt($("#jobTitleFilter").val()) || 0;
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "Employee")',
                    data: {
                        name: searchTerm,
                        branchId: branch,
                        departmentId: department,
                        employeeTypeId: employeeType,
                        jobTitleId: jobTitle,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#branchFilter, #departmentFilter, #employeeTypeFilter, #jobTitleFilter").change(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function fillTable(response) {
                var tableBody = $("#employees");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (employee) {
                        newRows += `<tr>
                                        <td><strong>${employee.fullName}</strong></td>
                                        <td><span class="badge bg-primary">${employee.branch.name}</span></td>
                                        <td><span class="badge bg-info">${employee.department.name}</span></td>
                                        <td><span class="badge bg-secondary">${employee.type.name}</span></td>
                                        <td><span class="badge bg-success">${employee.jobTitle.name}</span></td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/Employee/Details/${employee.id}" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/Employee/Edit/${employee.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${employee.fullName}?')) { document.getElementById('deleteForm${employee.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${employee.id}" action="/Employee/Delete/${employee.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='6' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}