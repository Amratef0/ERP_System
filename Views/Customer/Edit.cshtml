@model CustomerVM

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="form-page edit-customer">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit Customer</h3>

        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />

            <!-- First Name -->
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder=" " />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder=" " />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder=" " />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder=" " />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Customer Type -->
            <div class="form-group">
                <select asp-for="CustomerTypeId" class="form-select" asp-items="ViewBag.CustomerTypes">
                    <option value="" disabled hidden>Select Customer Type</option>
                </select>
                <label asp-for="CustomerTypeId">Customer Type</label>
                <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                    <input asp-for="IsActive" id="isActiveSwitch" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">Active Customer</label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            
                        <!-- Customer Address (Full Width Section) -->
            <div class="form-section full-width">
                <label class="section-label">Customer Address</label>

                <div class="address-card">
                    <div class="address-content">
                        <small class="text-muted d-block mb-1">Primary Address</small>

                        @if (!string.IsNullOrEmpty(Model.MainAddress))
                        {
                            <span class="address-text">@Model.MainAddress</span>
                        }
                        else
                        {
                            <span class="no-address">No address available</span>
                        }
                    </div>

                    <a asp-controller="CustomerAddress"
                       asp-action="Index"
                       asp-route-customerId="@Model.Id"
                       class="btn-manage">
                        <i class="bi bi-gear"></i> Manage
                    </a>
                </div>
            </div>



            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
