@model IEnumerable<Customer>
@{
    ViewData["Title"] = "All Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h1>All Customers</h1>
</center>
<br />
<br />
@* <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Create New Customer</a>   *@
<br />

<div class="row justify-content-center align-items-center mt-3">
    <form asp-action= "Index" class="row col-8 offset-1">

        <div class="col-8">
            <input type="text" class="form-control" name="searchValue" placeholder="Search By Name" />

        </div>
        <div class="col-4" >
            <input type="submit" value="search" name="searchTerm" class="btn btn-success" />
            </div>
    </form>
</div>
<br />
@if (Model.Count() != 0)
{

    <table class="table table-striped table-hover">

        <thead>
        <td>@Html.DisplayNameFor(C => C.Id)</td>
        <td>@Html.DisplayNameFor(C => C.FullName)</td>
        <td>@Html.DisplayNameFor(C => C.Email)</td>
        <td>@Html.DisplayNameFor(C => C.PhoneNumber)</td>
        @* <td>@Html.DisplayNameFor(C => C.CustomerType.Name)</td> *@
        <td>@Html.DisplayNameFor(C => C.IsActive)</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>



        </thead>


        <tbody>

            @foreach (var E in Model)
            {

                <tr>
                    <td>@E.Id</td>
                    <td>@E.FullName</td>
                    <td>@Html.DisplayFor(emp => E.Email)</td>
                    <td>@E.PhoneNumber</td>
                    <td>@Html.DisplayFor(emp => E.IsActive)</td>
                    <partial name="_ButtonsPartialView" model="@E.Id" />

                </tr>
            }

        </tbody>


    </table>

}
else
{

    <div class="alert alert-danger">
        <h2> No Customers</h2>

    </div>

}