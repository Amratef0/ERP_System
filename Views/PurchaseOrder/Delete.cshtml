@model ERP_System_Project.Models.PurchaseOrder

<h2>Delete Purchase Order</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this Purchase Order?
</div>

<dl class="row">
    <dt class="col-sm-2">Po Number</dt>
    <dd class="col-sm-10">@Model.PoNumber</dd>

    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Supplier</dt>
    <dd class="col-sm-10">@Model.Supplier?.SupplierName</dd>

    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.WarehouseProduct?.Product?.Name</dd>

    <dt class="col-sm-2">Warehouse</dt>
    <dd class="col-sm-10">@Model.WarehouseProduct?.Warehouse?.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PurchaseOrderId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
