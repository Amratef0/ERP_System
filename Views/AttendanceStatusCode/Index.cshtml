@model IEnumerable<AttendanceStatusCode>

@{
    ViewData["Title"] = "Attendance Status Codes";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Attendance Status Codes</h1>
        <p>Manage attendance status classifications</p>
    </div>


    <!-- Stats Row -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Count()</h3>
                <p>Total Status Codes</p>
            </div>
            <i class="bi bi-list"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Count(c => c.IsActive)</h3>
                <p>Active</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Count(c => !c.IsActive)</h3>
                <p>Inactive</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>
    </div>

    <!-- Status Codes Table -->
    <div class="list-page departments-page mt-4">
        <div class="card">
            <h2>Status Codes List</h2>

            <!-- Floating Add Button -->
            <a href="javascript:void(0);" 
               onclick="openModalWithAjax('@Url.Action("Create", "AttendanceStatusCode")', 'Add New Status Code')" 
               class="floating-btn" 
               title="Add New Status Code">
               <i class="fa-solid fa-plus"></i>
            </a>


            <table>
                <thead>
                    <tr>
                        <th>Status Name</th>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="codes">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Status Name"><strong>@item.Name</strong></td>
                            <td data-label="Code">
                                <span class="text-muted">@item.Code</span>
                            </td>
                            <td data-label="Description">
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <span class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td data-label="Status">
                                @if (item.IsActive)
                                {
                                    <span class="status active">Active</span>
                                }
                                else
                                {
                                    <span class="status inactive">Inactive</span>
                                }
                            </td>
                            <td data-label="Actions">
                                <div class="action-buttons">
                                    <!-- View (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Details", "AttendanceStatusCode", new { id = item.Id })', 'View Job Title')"
                                       class="btn btn-view btn-sm" 
                                       title="View Job Title">
                                       <i class="fa-solid fa-eye"></i>
                                    </a>

                                    <!-- Edit (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Edit", "AttendanceStatusCode", new { id = item.Id })', 'Edit Job Title')"
                                       class="btn btn-update btn-sm" 
                                       title="Edit Job Title">
                                       <i class="fa-solid fa-pen"></i>
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No status codes found. Click "Add New Status Code" to get started.
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "AttendanceStatusCode")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function fillTable(response) {
                var tableBody = $("#codes");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (attendanceStatus) {
                        var activeStatus = attendanceStatus.isActive 
                            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>'
                            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>';
                        
                        var description = attendanceStatus.description 
                            ? (attendanceStatus.description.length > 50 ? attendanceStatus.description.substring(0, 50) + '...' : attendanceStatus.description)
                            : '-';

                        newRows += `<tr>
                                        <td><strong>${attendanceStatus.name}</strong></td>
                                        <td><span class="badge bg-secondary fs-6">${attendanceStatus.code}</span></td>
                                        <td><span class="text-muted">${description}</span></td>
                                        <td class="text-center">${activeStatus}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/AttendanceStatusCode/Details/${attendanceStatus.id}" class="btn btn-sm btn-info" title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/AttendanceStatusCode/Edit/${attendanceStatus.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${attendanceStatus.name}?')) { document.getElementById('deleteForm${attendanceStatus.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${attendanceStatus.id}" action="/AttendanceStatusCode/Delete/${attendanceStatus.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='5' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}