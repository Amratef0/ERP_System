@using ERP_System_Project.ViewModels.Core
@model BranchVM

@{
    ViewData["Title"] = "Branch Details";
}

<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page">

    <!-- Title -->
    <h2 class="title">Branch Details</h2>

    <!-- Name + Code -->
    <h3 class="supplier-name">@Model.Name (@Model.Code)</h3>

    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <!-- Branch Name -->
        <div class="detail-item">
            <dt>Branch Name</dt>
            <dd>@Model.Name</dd>
        </div>

        <!-- Branch Code -->
        <div class="detail-item">
            <dt>Branch Code</dt>
            <dd>@Model.Code</dd>
        </div>

        <!-- Phone Number -->
        <div class="detail-item">
            <dt>Phone Number</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    @Model.PhoneNumber
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>
        </div>

        <!-- Email -->
        <div class="detail-item">
            <dt>Email</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    @Model.Email
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>
        </div>

        <!-- Address -->
        <div class="detail-item">
            <dt>Address</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.Line1))
                {
                    @Model.Line1<br />
                }
                @if (!string.IsNullOrEmpty(Model.City))
                {
                    @Model.City
                }
                @if (!string.IsNullOrEmpty(Model.StateProvince))
                {
                    <text>, @Model.StateProvince </text>
                }
                @if (!string.IsNullOrEmpty(Model.PostalCode))
                {
                    @Model.PostalCode
                }
                @if (!string.IsNullOrEmpty(Model.Country))
                {
                    <br />@Model.Country
                }
            </dd>
        </div>

        <!-- Address Type -->
        @if (!string.IsNullOrEmpty(Model.AddressType))
        {
            <div class="detail-item">
                <dt>Address Type</dt>
                <dd>@Model.AddressType</dd>
            </div>
        }

        <!-- Status -->
        <div class="detail-item">
            <dt>Status</dt>
            <dd>
                @if (Model.IsActive)
                {
                    <span class="status active">Active</span>
                }
                else
                {
                    <span class="status inactive">Inactive</span>
                }
            </dd>
        </div>

        <!-- Main Branch -->
        <div class="detail-item">
            <dt>Main Branch</dt>
            <dd>
                @if (Model.IsMainBranch)
                {
                    <span class="status active">Yes</span>
                }
                else
                {
                    <span class="status inactive">No</span>
                }
            </dd>
        </div>

        <!-- Internal ID -->
        <div class="detail-item">
            <dt>Internal ID</dt>
            <dd class="text-muted">@Model.Id</dd>
        </div>

    </dl>

    <!-- INFO LIST -->
    <div class="lists-section" style="margin-top:22px;">
        <h4>Branch Information</h4>
        <ul class="item-list">
            <li><strong>Branch Name:</strong> Full name of the branch</li>
            <li><strong>Branch Code:</strong> Unique identifier used in the system</li>
            <li><strong>Phone Number:</strong> Optional contact number</li>
            <li><strong>Email:</strong> Optional contact email</li>
            <li><strong>Address:</strong> Street, City, State, Postal Code, Country</li>
            <li><strong>Status:</strong> Indicates if the branch is active</li>
            <li><strong>Main Branch:</strong> Shows if this is the main branch</li>
        </ul>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="viewActions">
        <div class="left-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
        </div>
        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>

</div>
