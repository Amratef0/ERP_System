@model ERP_System_Project.ViewModels.CRM.CustomerVM

@{
    ViewData["Title"] = "Customer Details";
}

<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page">

    <!-- Title -->
    <h2 class="title">Customer Details</h2>

    <!-- Main Name -->
    <h3 class="supplier-name">@Model.FullName</h3>

    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <div class="detail-item">
            <dt>ID</dt>
            <dd>@Model.Id</dd>
        </div>

        <div class="detail-item">
            <dt>Full Name</dt>
            <dd>@Model.FullName</dd>
        </div>

        <div class="detail-item">
            <dt>Email</dt>
            <dd>@Model.Email</dd>
        </div>

        <div class="detail-item">
            <dt>Phone</dt>
            <dd>@Model.PhoneNumber</dd>
        </div>

        <div class="detail-item">
            <dt>Date of Birth</dt>
            <dd>@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
        </div>

        <div class="detail-item">
            <dt>Customer Type</dt>
            <dd>@Model.CustomerTypeName</dd>
        </div>

        <div class="detail-item">
            <dt>Main Address</dt>
            <dd>@Model.MainAddress</dd>
        </div>

        <div class="detail-item">
            <dt>Number of Orders</dt>
            <dd>@Model.NumOfOrders</dd>
        </div>

        <div class="detail-item">
            <dt>Status</dt>
            <dd>
                @if (Model.IsActive)
                {
                    <span class="status active">Active</span>
                }
                else
                {
                    <span class="status inactive">Inactive</span>
                }
            </dd>
        </div>

        <div class="detail-item">
            <dt>Last Login</dt>
            <dd>@(Model.LastLoginDate?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
        </div>

    </dl>

    <!-- INFO LIST -->
    <div class="lists-section" style="margin-top:22px;">
        <h4>Customer Information</h4>

        <ul class="item-list">
            <li><strong>Full Name:</strong> Customer's full registered name</li>
            <li><strong>Email:</strong> Used for notifications and login</li>
            <li><strong>Phone:</strong> Main contact number</li>
            <li><strong>Customer Type:</strong> Category assigned to the customer</li>
            <li><strong>Status:</strong> Indicates whether the customer is active</li>
        </ul>
    </div>


    <!-- ACTION BUTTONS -->
    <div class="viewActions">
        <div class="left-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-delete">Delete</a>
        </div>

        <div class="right-button">
            <a asp-action="Index" class="btn btn-back">← Back</a>
        </div>
    </div>

</div>
