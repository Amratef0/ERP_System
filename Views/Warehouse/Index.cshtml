@model IEnumerable<ERP_System_Project.Models.Inventory.Warehouse>
@{
    ViewData["Title"] = "Warehouses";
}

<h2>Warehouses</h2>

<a asp-action="Create" class="btn btn-success mb-3">Create New Warehouse</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Branch</th>
            <th>Products Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model)
        {
            <tr>
                <td>@w.Code</td>
                <td>@w.Name</td>
                <td>@w.Branch?.Name</td>
                <td>@w.WarehouseProducts.Count()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@w.WarehouseId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@w.WarehouseId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@w.WarehouseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
