@model LeaveType

@{
    ViewData["Title"] = "Edit Leave Type";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-pencil-square"></i> Edit Leave Type</h2>
                    <p class="text-muted">Update leave type information</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Edit Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-calendar2-x"></i> Leave Type Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Hidden ID field -->
                        <input asp-for="Id" type="hidden" />
                        
                        <!-- Name Field -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-tag"></i> Leave Type Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter leave type name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Full name of the leave type</div>
                        </div>

                        <!-- Code Field -->
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">
                                <i class="bi bi-hash"></i> Leave Code <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter leave code" maxlength="10" style="text-transform: uppercase;" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <div class="form-text">Short code for identification</div>
                        </div>

                        <!-- Max Days Per Year Field -->
                        <div class="mb-3">
                            <label asp-for="MaxDaysPerYear" class="form-label">
                                <i class="bi bi-calendar-range"></i> Max Days Per Year
                            </label>
                            <div class="input-group input-group-lg">
                                <input asp-for="MaxDaysPerYear" type="number" min="0" class="form-control" />
                                <span class="input-group-text">days</span>
                            </div>
                            <span asp-validation-for="MaxDaysPerYear" class="text-danger"></span>
                            <div class="form-text">Maximum days allowed per year (0 for unlimited)</div>
                        </div>

                        <!-- Is Paid Field -->
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsPaid" class="form-check-input" type="checkbox" role="switch" id="isPaidSwitch" />
                                <label class="form-check-label" for="isPaidSwitch">
                                    <i class="bi bi-cash"></i> This is Paid Leave
                                </label>
                            </div>
                            <div class="form-text">Indicates whether employees receive pay during this leave</div>
                        </div>

                        <!-- Is Active Field -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch" />
                                <label class="form-check-label" for="isActiveSwitch">
                                    <i class="bi bi-toggle-on"></i> Leave Type is Active
                                </label>
                            </div>
                            <div class="form-text">Inactive leave types won't appear in selection lists</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Update Leave Type
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Tips</h6>
                    <ul class="mb-0 small">
                        <li>Changing the code may affect existing leave requests</li>
                        <li>Max days per year helps track leave balance</li>
                        <li>Paid/Unpaid status affects payroll calculations</li>
                        <li>Deactivating will hide this type from new leave requests</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-uppercase leave code
        document.querySelector('input[name="Code"]')?.addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });
    </script>
}
