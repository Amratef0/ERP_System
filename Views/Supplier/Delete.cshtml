@model ERP_System_Project.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="delete-wrapper">
    <h2 class="title">Delete Supplier</h2>

    <div class="details-section">
        <h3 class="supplier-name">@Model.SupplierName (@Model.SupplierCode)</h3>
        <dl class="details-grid">
            <div class="detail-item">
                <dt>Category</dt>
                <dd>@Model.SupplierCategory?.CategoryName</dd>
            </div>

            <div class="detail-item">
                <dt>Created</dt>
                <dd>@Model.CreatedDate?.ToString("yyyy-MM-dd")</dd>
            </div>

            <div class="detail-item">
                <dt>Modified</dt>
                <dd>@Model.ModifiedDate?.ToString("yyyy-MM-dd")</dd>
            </div>
        </dl>
    </div>

    <form id="deleteSupplierForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="SupplierId" />
        <div class="viewActions">
            <div class="left-buttons">
                <button type="button" class="btn btn-delete" onclick="confirmDeleteSupplier()">Delete</button>
                <button type="button" class="btn btn-back" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/Purchase/Supplier/Delete.css"))" />

