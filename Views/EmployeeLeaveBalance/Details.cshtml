@model EmployeeLeaveBalance

@{
    ViewData["Title"] = "Leave Balance Details";
    var leaveRequests = ViewBag.LeaveRequests as List<LeaveRequest> ?? new List<LeaveRequest>();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2><i class="bi bi-info-circle"></i> Leave Balance Details</h2>
            <hr />

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Balance Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Employee:</dt>
                                <dd class="col-sm-7">@Model.Employee.FirstName @Model.Employee.LastName</dd>

                                <dt class="col-sm-5">Branch:</dt>
                                <dd class="col-sm-7">@Model.Employee.Branch?.Name</dd>

                                <dt class="col-sm-5">Department:</dt>
                                <dd class="col-sm-7">@Model.Employee.Department?.Name</dd>

                                <dt class="col-sm-5">Job Title:</dt>
                                <dd class="col-sm-7">@Model.Employee.JobTitle?.Name</dd>

                                <dt class="col-sm-5">Employee Type:</dt>
                                <dd class="col-sm-7">@Model.Employee.Type?.Name</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Leave Type:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-info">@Model.LeaveType.Name</span>
                                </dd>

                                <dt class="col-sm-5">Year:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-secondary">@Model.Year</span>
                                </dd>

                                <dt class="col-sm-5">Total Entitled Days:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-primary">@Model.TotalEntitledDays.ToString("F2") days</span>
                                </dd>

                                <dt class="col-sm-5">Used Days:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-warning">@Model.UsedDays.ToString("F2") days</span>
                                </dd>

                                <dt class="col-sm-5">Remaining Days:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge @(Model.RemainingDays < 0 ? "bg-danger" : Model.RemainingDays < 5 ? "bg-warning" : "bg-success")">
                                        @Model.RemainingDays.ToString("F2") days
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Progress Bar -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Balance Usage</h5>
                </div>
                <div class="card-body">
                    @{
                        var usedPercentage = Model.TotalEntitledDays > 0 
                            ? (Model.UsedDays / Model.TotalEntitledDays) * 100 
                            : 0;
                        var progressClass = usedPercentage >= 80 ? "bg-danger" : usedPercentage >= 50 ? "bg-warning" : "bg-success";
                    }
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar @progressClass" role="progressbar" 
                             style="width: @usedPercentage.ToString("F0")%"
                             aria-valuenow="@usedPercentage" aria-valuemin="0" aria-valuemax="100">
                            @usedPercentage.ToString("F1")% Used
                        </div>
                    </div>
                    <div class="mt-2 text-center">
                        <small class="text-muted">
                            Used: @Model.UsedDays.ToString("F2") / @Model.TotalEntitledDays.ToString("F2") days
                        </small>
                    </div>
                </div>
            </div>

            <!-- Related Leave Requests -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Related Leave Requests (@leaveRequests.Count)</h5>
                </div>
                <div class="card-body">
                    @if (leaveRequests.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Total Days</th>
                                        <th>Status</th>
                                        <th>Reason</th>
                                        <th>Approved By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in leaveRequests)
                                    {
                                        <tr>
                                            <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                            <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                            <td>@request.TotalDays.ToString("F1")</td>
                                            <td>
                                                @switch (request.Status)
                                                {
                                                    case ERP_System_Project.Models.Enums.LeaveRequestStatus.Pending:
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case ERP_System_Project.Models.Enums.LeaveRequestStatus.Approved:
                                                        <span class="badge bg-success">Approved</span>
                                                        break;
                                                    case ERP_System_Project.Models.Enums.LeaveRequestStatus.Rejected:
                                                        <span class="badge bg-danger">Rejected</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(request.Reason ?? "N/A")</td>
                                            <td>
                                                @if (request.ApprovedBy != null)
                                                {
                                                    @request.ApprovedBy.FirstName @request.ApprovedBy.LastName
                                                }
                                                else
                                                {
                                                    <em>Not yet approved</em>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">No leave requests found for this balance.</p>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="mb-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;" 
                      onsubmit="return confirm('Are you sure you want to delete this balance? This action cannot be undone.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
