@model IEnumerable<ERP_System_Project.Models.SupplierProduct>

<h2>Supplier Products</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add Supplier Product</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Supplier</th>
            <th>Product</th>
            <th>Unit Price</th>
            <th>Created Date</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Supplier?.SupplierName</td>
                <td>@item.Product?.Name</td>
                <td>@item.UnitPrice</td>
                <td>@item.CreatedDate.ToShortDateString()</td>
                <td>@item.ModifiedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SupplierProductId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.SupplierProductId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SupplierProductId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
