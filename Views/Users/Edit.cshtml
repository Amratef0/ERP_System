@model ERP_System_Project.ViewModels.User.UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Edit User</h3>

        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()

            <input asp-for="Id" type="hidden" />

            <!-- User Name -->
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder=" " />
                <label asp-for="UserName">Username <span class="text-danger">*</span></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder=" " />
                <label asp-for="Email">Email <span class="text-danger">*</span></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Is Active -->
            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">User is Active</label>
            </div>

            <!-- Employee Id -->
            <div class="number-field-group">
                <label class="number-label" asp-for="EmployeeId">Employee ID</label>
                <input asp-for="EmployeeId" class="number-input" placeholder=" " />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

<!-- Roles -->
<div class="number-field-group">
    <label asp-for="SelectedRoles" class="number-label" >Roles</label>
    <select asp-for="SelectedRoles" class="form-control" multiple="multiple" asp-items="@(new SelectList(Model.AllRoles, Model.Roles))">
    </select>
</div>


            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
