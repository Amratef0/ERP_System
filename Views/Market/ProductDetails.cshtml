@model ERP_System_Project.ViewModels.ECommerce.ProductDetailsVM
@{
    ViewData["Title"] = Model.Name;
    @if (TempData["AddReviewSuccess"] != null)
    {
        <div class="alert alert-success">@TempData["AddReviewSuccess"]</div>
    }
    @if (TempData["AddReviewError"] != null)
    {
        <div class="alert alert-danger">@TempData["AddReviewError"]</div>
    }
    @if (TempData["AddReviewInfo"] != null)
    {
        <div class="alert alert-info">@TempData["AddReviewInfo"]</div>
    }
    @if (TempData["EditReviewSuccess"] != null)
    {
        <div class="alert alert-success">@TempData["EditReviewSuccess"]</div>
    }
    @if (TempData["EditReviewError"] != null)
    {
        <div class="alert alert-danger">@TempData["EditReviewError"]</div>
    }

}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Market" asp-action="Index">Marketplace</a></li>
            <li class="breadcrumb-item"><a href="#">@Model.CategoryName</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- Product Images & Gallery -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Main Image -->
                    <div class="text-center mb-4">
                        <img src="@Model.ImageURL" alt="@Model.Name" 
                             class="img-fluid rounded-3" style="max-height: 400px; object-fit: contain;">
                    </div>
                    
                    <!-- Image Gallery (you can add more images here) -->
                    <div class="d-flex justify-content-center gap-3">
                        <div class="border rounded-3 p-2 cursor-pointer" style="width: 80px; height: 80px;">
                            <img src="@Model.ImageURL" alt="@Model.Name" 
                                 class="w-100 h-100 rounded-2" style="object-fit: cover;">
                        </div>
                        <!-- Add more thumbnail images here if available -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Brand -->
                    <div class="d-flex align-items-center mb-3">
                        <img src="@Model.BrandImageURL" alt="@Model.BrandName" 
                             class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                        <span class="text-muted fw-semibold">@Model.BrandName</span>
                    </div>

                    <!-- Product Name -->
                    <h1 class="h2 fw-bold text-dark mb-3">@Model.Name</h1>

                    <!-- Rating & Reviews -->
                    <div class="d-flex align-items-center mb-4">
                        <div class="d-flex align-items-center me-3">
                            @{
                                double rating = Model.TotalRate;
                                int fullStars = (int)rating;
                                bool hasHalfStar = (rating - fullStars) >= 0.5;
                                int emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                            }
                            
                            @for (int i = 0; i < fullStars; i++)
                            {
                                <i class="bi bi-star-fill text-warning me-1" style="font-size: 1.1rem;"></i>
                            }
                            
                            @if (hasHalfStar)
                            {
                                <i class="bi bi-star-half text-warning me-1" style="font-size: 1.1rem;"></i>
                            }
                            
                            @for (int i = 0; i < emptyStars; i++)
                            {
                                <i class="bi bi-star text-warning me-1" style="font-size: 1.1rem;"></i>
                            }
                            
                            <span class="fw-bold text-dark ms-2">@Model.TotalRate.ToString("0.0")</span>
                        </div>
                        <span class="text-muted">(@Model.NumberOfReviews reviews)</span>
                    </div>

                    <!-- Pricing -->
                    <div class="mb-4">
                        @if (Model.HasOffer)
                        {
                            <div class="d-flex align-items-center gap-3">
                                <span class="h2 fw-bold text-success mb-0">$@Model.NetPrice.ToString("N2")</span>
                                <span class="h4 text-muted text-decoration-line-through mb-0">$@Model.Price.ToString("N2")</span>
                                <span class="badge bg-danger rounded-pill px-3 py-2 fs-6">
                                    Save @Model.DiscountPercentage%
                                </span>
                            </div>
                        }
                        else
                        {
                            <span class="h2 fw-bold text-dark mb-0">$@Model.Price.ToString("N2")</span>
                        }
                    </div>

                    <!-- Stock Status -->
                    <div class="mb-4">
                        @if (Model.QuantityInStock == 0)
                        {
                            <div class="alert alert-warning d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <span class="fw-semibold">Out of Stock</span>
                            </div>
                        }
                        else if (Model.QuantityInStock < 10)
                        {
                            <div class="alert alert-info d-flex align-items-center" role="alert">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <span>Only @Model.QuantityInStock left in stock - order soon</span>
                            </div>
                        }
                        else
                        {
                            <div class="text-success d-flex align-items-center">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <span class="fw-semibold">In Stock</span>
                            </div>
                        }
                    </div>

                    <!-- Product Attributes -->
                    @if (Model.Attributes.Any())
                    {
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">Specifications</h5>
                            <div class="row g-2">
                                @foreach (var attr in Model.Attributes)
                                {
                                    <div class="col-12">
                                        <div class="d-flex justify-content-between border-bottom py-2">
                                            <span class="fw-semibold">@attr.Name</span>
                                            <span class="text-muted">@attr.Type</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Quantity & Actions -->
                    <div class="mb-4">
                        @if (Model.QuantityInStock == 0)
                        {
                            <!-- Out of Stock Actions -->
                            <div class="d-flex gap-3">
                                <button class="btn btn-outline-primary btn-lg btn-wishlist flex-fill"
                                        data-product-id="@Model.Id"
                                        data-customer-id="@(ViewBag.CustomerId ?? 0)">
                                    <i class="bi bi-bookmark me-2"></i>Add to Wishlist
                                </button>
                                <button class="btn btn-outline-secondary btn-lg" disabled>
                                    <i class="bi bi-bell me-2"></i>Notify Me
                                </button>
                            </div>
                        }
                        else
                        {
                            @* <!-- In Stock Actions -->
                            <div class="row g-3 align-items-end">
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Quantity</label>
                                    <div class="input-group input-group-lg">
                                        <button class="btn btn-outline-secondary" type="button" id="decreaseQty">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" class="form-control text-center" 
                                               id="quantity" value="1" min="1" max="@Model.QuantityInStock">
                                        <button class="btn btn-outline-secondary" type="button" id="increaseQty">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary btn-lg flex-fill">
                                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm btn-favorite"
                                                data-product-id="@Model.Id"
                                                data-customer-id="@(ViewBag.CustomerId ?? 0)">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div> *@

                            <!-- In Stock Actions -->
                            <div class="row g-3 align-items-end">
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">Quantity</label>
                                    <div class="input-group input-group-lg">
                                        <button class="btn btn-outline-secondary" type="button" id="decreaseQty">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" class="form-control text-center"
                                               id="quantity" name="quantity" value="1" min="1" max="@Model.QuantityInStock">
                                        <button class="btn btn-outline-secondary" type="button" id="increaseQty">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="d-flex gap-2">
                                        <form asp-controller="Market" asp-action="AddToCart" method="post" class="flex-fill">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@Model.Id" />
                                            <input type="hidden" name="quantity" id="formQuantity" value="1" />
                                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                                <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                            </button>
                                        </form>
                                        <button class="btn btn-outline-danger btn-sm btn-favorite"
                                                data-product-id="@Model.Id"
                                                data-customer-id="@(ViewBag.CustomerId ?? 0)">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Additional Info -->
                    <div class="border-top pt-4">
                        <div class="row text-center g-3">
                            <div class="col-4">
                                <i class="bi bi-truck display-6 text-primary d-block mb-2"></i>
                                <small class="fw-semibold">Free Shipping</small>
                            </div>
                            <div class="col-4">
                                <i class="bi bi-arrow-left-right display-6 text-primary d-block mb-2"></i>
                                <small class="fw-semibold">30-Day Returns</small>
                            </div>
                            <div class="col-4">
                                <i class="bi bi-shield-check display-6 text-primary d-block mb-2"></i>
                                <small class="fw-semibold">2-Year Warranty</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Description & Details Tabs -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <ul class="nav nav-tabs nav-underline" id="productTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="description-tab" data-bs-toggle="tab" 
                                    data-bs-target="#description" type="button" role="tab">
                                Description
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" 
                                    data-bs-target="#reviews" type="button" role="tab">
                                Reviews (@Model.NumberOfReviews)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="shipping-tab" data-bs-toggle="tab" 
                                    data-bs-target="#shipping" type="button" role="tab">
                                Shipping & Returns
                            </button>
                        </li>
                    </ul>
                    
                    <div class="tab-content mt-4" id="productTabsContent">
                        <!-- Description Tab -->
                        <div class="tab-pane fade show active" id="description" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-8">
                                    <h4 class="fw-bold mb-3">Product Description</h4>
                                    <p class="text-muted lead">@Model.Description</p>
                                    
                                    @if (Model.Attributes.Any())
                                    {
                                        <div class="mt-4">
                                            <h5 class="fw-bold mb-3">Key Features</h5>
                                            <div class="row g-3">
                                                @foreach (var attr in Model.Attributes.Take(4))
                                                {
                                                    <div class="col-md-6">
                                                        <div class="d-flex align-items-center">
                                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                            <span>@attr.Name: @attr.Type</span>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Reviews Tab -->
                        <div class="tab-pane fade" id="reviews" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-4 mb-4">
                                    <div class="text-center p-4 bg-light rounded-3">
                                        <div class="display-4 fw-bold text-primary mb-2">@Model.TotalRate.ToString("0.0")</div>
                                        <div class="mb-3">
                                            @* @for (int i = 0; i < 5; i++)
                                            {
                                                if (i < Model.TotalRate)
                                                {
                                                    <i class="bi bi-star-fill text-warning me-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-warning me-1"></i>
                                                }
                                            } *@
                                           

                                            @for (int i = 0; i < fullStars; i++)
                                            {
                                                <i class="bi bi-star-fill text-warning me-1" style="font-size: 1.1rem;"></i>
                                            }

                                            @if (hasHalfStar)
                                            {
                                                <i class="bi bi-star-half text-warning me-1" style="font-size: 1.1rem;"></i>
                                            }

                                            @for (int i = 0; i < emptyStars; i++)
                                            {
                                                <i class="bi bi-star text-warning me-1" style="font-size: 1.1rem;"></i>
                                            }
                                        </div>
                                        <p class="text-muted mb-0">Based on @Model.NumberOfReviews reviews</p>
                                    </div>
                                </div>

                                <div class="col-lg-8">
                                    @if (Model.Reviews.Any())
                                    {
                                        <div class="reviews-container">
                                            @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                                            {
                                                <div class="review-item border-bottom pb-4 mb-4" id="review-@review.Id">
                                                    <div class="d-flex align-items-start gap-3">
                                                        <!-- Avatar -->
                                                        <div class="flex-shrink-0">
                                                            @if (!string.IsNullOrEmpty(review.CustomerImageURL))
                                                            {
                                                                <img src="@review.CustomerImageURL"
                                                                     class="rounded-circle"
                                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                                            }
                                                            else
                                                            {
                                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                                                     style="width: 50px; height: 50px;">
                                                                    <i class="bi bi-person-fill" style="font-size: 1.2rem;"></i>
                                                                </div>
                                                            }
                                                        </div>

                                                        <!-- Review content + controls -->
                                                        <div class="flex-grow-1">
                                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                                <div>
                                                                    <h6 class="fw-bold mb-1">@review.CustomerName</h6>
                                                                    <div class="d-flex align-items-center">
                                                                        @for (int i = 0; i < 5; i++)
                                                                        {
                                                                            if (i < review.Rating)
                                                                            {
                                                                                <i class="bi bi-star-fill text-warning me-1" style="font-size: 0.9rem;"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                <i class="bi bi-star text-warning me-1" style="font-size: 0.9rem;"></i>
                                                                            }
                                                                        }
                                                                        <span class="text-muted small ms-2">@review.CreatedAt?.ToString("g")</span>
                                                                        @if (review.IsEdited)
                                                                        {
                                                                            <small class="text-muted ms-2">(edited @review.EditedAt?.ToString("g"))</small>
                                                                        }
                                                                    </div>
                                                                </div>

                                                                @* Edit/Delete buttons only for the owner *@
                                                                @{
                                                                    var currentCustomerId = (int?)( ViewBag.CustomerId ?? 0);
                                                                    bool isOwner = currentCustomerId != null && currentCustomerId == review.CustomerId;
                                                                }
                                                               
                                                                
                                                                @if (isOwner)
                                                                {
                                                                    <div class="btn-group">
                                                                        <button class="btn btn-sm btn-outline-secondary" type="button"
                                                                                onclick="toggleEditForm(@review.Id)">
                                                                            <i class="bi bi-pencil"></i> Edit
                                                                        </button>

                                                                        <form asp-controller="CustomerReview" asp-action="DeleteReview" method="post" class="d-inline ms-1"
                                                                              onsubmit="return confirm('Are you sure you want to delete your review?');">
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="reviewId" value="@review.Id" />
                                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                                <i class="bi bi-trash"></i> Delete
                                                                            </button>
                                                                        </form>
                                                                    </div>
                                                                }
                                                            </div>

                                                            <p class="text-muted mb-0" id="review-comment-@review.Id">@review.Comment</p>

                                                            @* Inline Edit Form (hidden by default) *@
                                                            <div id="edit-form-@review.Id" class="mt-3" style="display:none;">
                                                                <form asp-controller="CustomerReview" asp-action="EditReview" method="post" class="row g-2">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="Id" value="@review.Id" />
                                                                    <input type="hidden" name="ProductId" value="@review.ProductId" />
                                                                    <input type="hidden" name="CustomerId" value="@review.CustomerId" />

                                                                    <div class="col-12">
                                                                        <label class="form-label">Rating</label>
                                                                        <div>
                                                                            @for (int i = 1; i <= 5; i++)
                                                                            {
                                                                                <div class="form-check form-check-inline">
                                                                                    <input class="form-check-input" type="radio" name="Rating" id="edit-@review.Id-rating-@i" value="@i"
                                                                                           @(review.Rating == i ? "checked" : "") />
                                                                                    <label class="form-check-label" for="edit-@review.Id-rating-@i">@i</label>
                                                                                </div>
                                                                            }
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-12">
                                                                        <label class="form-label">Comment</label>
                                                                        <textarea name="Comment" class="form-control" rows="3" maxlength="250" required>@review.Comment</textarea>
                                                                    </div>

                                                                    <div class="col-12 d-flex gap-2">
                                                                        <button type="submit" class="btn btn-sm btn-primary">Save</button>
                                                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleEditForm(@review.Id)">Cancel</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-5 text-muted">
                                            <i class="bi bi-chat-quote display-4 d-block mb-3"></i>
                                            <h5>No reviews yet</h5>
                                            <p>Be the first to review this product!</p>
                                        </div>
                                    }
                                    <!-- Add Review Form -->
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <h5 class="fw-bold mb-3">Write a review</h5>

                                            @* show validation summary *@
                                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                            <form asp-controller="CustomerReview" asp-action="AddReview" method="post" class="row g-3">
                                                @Html.AntiForgeryToken()

                                                @* Hidden product id *@
                                                <input type="hidden" name="ProductId" value="@Model.Id" />
                                                <input type="hidden" name="CustomerId" value="@Model.Id" />


                                                @* Rating: radio buttons visually rendered as stars *@
                                                <div class="col-12">
                                                    <label class="form-label fw-semibold">Your rating</label>
                                                    <div id="rating-stars" class="d-flex align-items-center">
                                                        @for (int i = 5; i >= 1; i--)
                                                        {
                                                            <div class="form-check me-2">
                                                                <input class="form-check-input rating-radio" type="radio" name="Rating" id="rating-@i" value="@i" />
                                                                <label class="form-check-label" for="rating-@i">
                                                                    @for (int s = 0; s < i; s++)
                                                                    {
                                                                        <i class="bi bi-star-fill" style="font-size:1.0rem;"></i>
                                                                    }
                                                                </label>
                                                            </div>
                                                        }
                                                    </div>
                                                    <span class="text-danger small field-validation-error" data-valmsg-for="Rating" data-valmsg-replace="true"></span>
                                                </div>

                                                @* Comment *@
                                                <div class="col-12">
                                                    <label class="form-label fw-semibold">Your review</label>
                                                    <textarea name="Comment" class="form-control" rows="4" maxlength="250" placeholder="Tell others what you think..." required></textarea>
                                                    <div class="form-text">Max 250 characters.</div>
                                                    <span class="text-danger small field-validation-error" data-valmsg-for="Comment" data-valmsg-replace="true"></span>
                                                </div>

                                                <div class="col-12 d-flex gap-2">
                                                    <button type="submit" class="btn btn-primary">Submit review</button>
                                                    <button type="reset" class="btn btn-outline-secondary">Reset</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Shipping Tab -->
                        <div class="tab-pane fade" id="shipping" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-6">
                                    <h5 class="fw-bold mb-3">Shipping Information</h5>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="bi bi-truck text-primary me-2"></i>
                                            <strong>Free shipping</strong> on orders over $50
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-clock text-primary me-2"></i>
                                            <strong>Delivery:</strong> 3-5 business days
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-geo-alt text-primary me-2"></i>
                                            <strong>Available</strong> in all 50 states
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <h5 class="fw-bold mb-3">Return Policy</h5>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="bi bi-arrow-left-right text-primary me-2"></i>
                                            <strong>30-day return policy</strong>
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-shield-check text-primary me-2"></i>
                                            <strong>Full refund</strong> if returned in original condition
                                        </li>
                                        <li class="mb-2">
                                            <i class="bi bi-telephone text-primary me-2"></i>
                                            <strong>Contact support</strong> for return authorization
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="~/Views/Shared/_ProductCardsScripts.cshtml" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Toggle inline edit form for a review
            window.toggleEditForm = function (reviewId) {
                const form = document.getElementById('edit-form-' + reviewId);
                const comment = document.getElementById('review-comment-' + reviewId);
                if (!form) return;
                const currentlyHidden = form.style.display === 'none' || form.style.display === '';
                if (currentlyHidden) {
                    form.style.display = 'block';
                    if (comment) comment.style.display = 'none';
                    const ta = form.querySelector('textarea');
                    if (ta) ta.focus();
                } else {
                    form.style.display = 'none';
                    if (comment) comment.style.display = 'block';
                }
            };

            // Highlight rating radio labels in any form when changed
            function highlightRadioGroup(radio) {
                const name = radio.name;
                const root = radio.closest('form') || document;
                const radios = Array.from(root.querySelectorAll(`input[type="radio"][name="${name}"]`));
                radios.forEach(r => {
                    const lbl = root.querySelector(`label[for="${r.id}"]`);
                    if (lbl) lbl.classList.remove('text-primary', 'fw-bold');
                });
