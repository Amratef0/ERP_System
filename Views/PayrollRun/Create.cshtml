@model CreatePayrollRunVM

@{
    ViewData["Title"] = "Generate New Payroll Run";
}

<div class="form-page create-product">
    <div class="form">

        <h3 class="formTitle"><i class="bi bi-plus-circle me-1"></i> Generate New Payroll Run</h3>
        
            <!-- Warning -->
            <div class="alert alert-warning mt-2">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Note:</strong> This will generate payroll entries for all active employees. The process may take a few moments.
            </div>
            <br />
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Year -->
            <div class="form-group">
                <select asp-for="Year" class="form-select" id="yearSelect">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                    {
                        <option value="@y">@y</option>
                    }
                </select>
                <label asp-for="Year"></label>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <!-- Month -->
            <div class="form-group">
                <select asp-for="Month" class="form-select" id="monthSelect">
                    @for (int m = 1; m <= 12; m++)
                    {
                        var monthName = new DateTime(2000, m, 1).ToString("MMMM");
                        <option value="@m">@monthName</option>
                    }
                </select>
                <label asp-for="Month"></label>
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>

<!-- 🔷 Preview Card For Create Page -->
<div class="preview-box-create">

    <h2 class="preview-title-create">Preview</h2>

    <div class="preview-grid-create">

        <div class="preview-item-create">
            <dt>Payroll Name</dt>
            <dd id="previewName">@Model.MonthName @Model.Year Payroll</dd>
        </div>

        <div class="preview-item-create">
            <dt>Period</dt>
            <dd id="previewPeriod"></dd>
        </div>

    </div>

</div>

            <!-- Action Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Generate Payroll Run
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>

        <!-- Info (Converted to same style as Holiday Page Notes) -->
        <div class="lists-section" style="margin-top:22px;">
            <h4><i class="bi bi-info-circle me-1"></i> What happens when you generate?</h4>

            <ul class="item-list">
                <li>System creates a new Payroll Run for the selected period</li>
                <li>Fetches all active employees</li>
                <li>For each employee:
                    <ul>
                        <li>Calculates base salary (in employee's currency)</li>
                        <li>Calculates overtime (1.5x hourly rate)</li>
                        <li>Applies unpaid leave deductions</li>
                        <li>Calculates tax (10% of gross)</li>
                        <li>Computes net amount</li>
                    </ul>
                </li>
                <li>Creates a Payroll Entry for each employee (in their salary currency)</li>
                <li>Payroll run is created in <strong>DRAFT</strong> status (you can review and edit)</li>
                <li>Supports <strong>multiple currencies</strong> in one payroll run!</li>
            </ul>
        </div>

    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            updatePreview();

            $('#yearSelect, #monthSelect').change(function() {
                updatePreview();
            });

            function updatePreview() {
                var year = parseInt($('#yearSelect').val());
                var month = parseInt($('#monthSelect').val());
                
                var monthNames = ["January", "February", "March", "April", "May", "June",
                    "July", "August", "September", "October", "November", "December"];
                
                var monthName = monthNames[month - 1];
                var startDate = new Date(year, month - 1, 1);
                var endDate = new Date(year, month, 0);
                
                $('#previewName').text(monthName + ' ' + year + ' Payroll');
                $('#previewPeriod').text(
                    startDate.toLocaleDateString('en-GB', { day: '2-digit', month: 'short' }) + ' - ' +
                    end
                        .toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' })
                );
            }
        });
    </script>
}
