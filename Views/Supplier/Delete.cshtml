@model ERP_System_Project.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Delete Supplier</h2>

<div>
    <h4>@Model.SupplierName (@Model.SupplierCode)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.SupplierCategory?.CategoryName</dd>

       
    </dl>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this supplier?');">
    <input type="hidden" asp-for="SupplierId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
