@model IEnumerable<LeaveRequest>

@{
    ViewData["Title"] = "Team Leave Calendar";
}

<!-- General styles -->
<link rel="stylesheet" href="~/css/ListPageHeader.css" />
<link rel="stylesheet" href="~/css/CRUD/Index.css" />
<link rel="stylesheet" href="~/css/GeneralModal.css" />

<div class="page-section">
    <!-- Header -->
    <div class="bp-header">
        <div class="bp-header-content">
            <div>
                <h2><i class="bi bi-calendar3"></i> Team Leave Calendar</h2>
                <p>Upcoming approved leave schedule for your team</p>
            </div>
            <div>
                <a asp-action="PendingApprovals" class="bp-back-btn btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to Pending
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="bp-search-card shadow-sm border-0 mb-4">
        <div class="card-body p-3 d-flex gap-2 flex-wrap">
            <a asp-action="PendingApprovals" class="quick-action-btn card2">
                <i class="bi bi-list-check me-2"></i><span>Pending Approvals</span>
            </a>
        </div>
    </div>

    <!-- Calendar View -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Upcoming Approved Leaves</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                <th>Leave Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Duration</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.OrderBy(r => r.StartDate))
                            {
                                var isCurrentlyOnLeave = request.StartDate <= DateOnly.FromDateTime(DateTime.Today) 
                                                      && request.EndDate >= DateOnly.FromDateTime(DateTime.Today);
                                var rowClass = isCurrentlyOnLeave ? "table-warning" : "";

                                <tr class="@rowClass">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(request.Employee.ImageURL))
                                            {
                                                <img src="@request.Employee.ImageURL" alt="@request.Employee.FirstName" 
                                                     class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center me-2" 
                                                     style="width: 40px; height: 40px; font-size: 1.2rem;">
                                                    @request.Employee.FirstName?.Substring(0, 1).ToUpper()
                                                </div>
                                            }
                                            <div>
                                                <strong>@request.Employee.FirstName @request.Employee.LastName</strong>
                                                <br />
                                                <small class="text-muted">@request.Employee.JobTitle?.Name</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@request.Employee.Department?.Name</td>
                                    <td>
                                        <i class="bi bi-calendar-event text-primary"></i>
                                        @request.LeaveType.Name
                                    </td>
                                    <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                    <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@request.TotalDays.ToString("F1") days</span>
                                    </td>
                                    <td>
                                        @if (isCurrentlyOnLeave)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-person-x"></i> On Leave Now
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Approved
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Section -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="alert alert-info">
                            <h6><i class="bi bi-info-circle"></i> Summary</h6>
                            <ul class="mb-0">
                                <li><strong>Total Approved Leaves:</strong> @Model.Count()</li>
                                <li><strong>Employees on Leave Today:</strong> 
                                    @Model.Count(r => r.StartDate <= DateOnly.FromDateTime(DateTime.Today) && r.EndDate >= DateOnly.FromDateTime(DateTime.Today))
                                </li>
                                <li><strong>Total Days Scheduled:</strong> @Model.Sum(r => r.TotalDays).ToString("F1") days</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No upcoming approved leaves found for your team.
                </div>
            }
        </div>
    </div>

    <!-- Legend -->
    <div class="card mt-3">
        <div class="card-body">
            <h6>Legend:</h6>
            <span class="badge bg-warning text-dark me-2">On Leave Now</span>
            <span class="badge bg-success me-2">Approved - Upcoming</span>
        </div>
    </div>
</div>
