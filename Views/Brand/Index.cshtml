@model PageSourcePagination<BrandVM>
@{
    ViewData["Title"] = "Brand Management";
    string currentSearch = Context.Request.Query["searchByName"];
}

<partial name="_Toast" />

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Brand Management</h1>
        <p>Manage your product brands and build your brand portfolio</p>

        <a asp-action="Index" asp-controller="Product" class="bp-back-btn">
            <i class="bi bi-arrow-left"></i> Back to Products
        </a>
    </div>

    <!-- Stats + Search -->
    <div class="bp-grid">

        <!-- Stats Card -->
        <div class="bp-stat-card">
            <div>
                <h3>@Model.TotalRecords</h3>
                <p>Total Brands</p>
            </div>
            <i class="bi bi-star"></i>
        </div>

        <!-- Search Card -->
        <div class="bp-search-card">
            <form method="get" asp-controller="Brand" asp-action="Index" class="bp-search-form">
                <div class="bp-search-group">
                    <i class="bi bi-search"></i>
                    <input type="text" name="searchByName" value="@currentSearch" placeholder="Search by brand name..." />
                </div>
                <button type="submit">Search</button>
            </form>
        </div>
    </div>

</div>

<div class="list-page brands-page">
    <div class="card">
        <h2>Brand Portfolio</h2>

        <!-- Floating Add Button -->
        <a href="javascript:void(0)" 
           onclick="openModalWithAjax('@Url.Action("New", "Brand")', 'Add New Brand')" 
           class="floating-btn" 
           title="Add New Brand">
            <i class="fa-solid fa-plus"></i>
        </a>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Brand Details</th>
                    <th>Logo</th>
                    <th>Website</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model.Data)
                {
                    <tr>
                        <td data-label="Brand Details">
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                @* <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px;">
                                    <i class="fa-solid fa-trophy" style="color: var(--color-accent, #635BFF);"></i>
                                </div> *@
                                <div>
                                    <strong>@brand.Name</strong><br />
                                    <small class="text-muted">ID: @brand.Id</small>
                                </div>
                            </div>
                        </td>

                        <td data-label="Logo">
                            @if (!string.IsNullOrEmpty(brand.LogoURL))
                            {
                                <img src="@brand.LogoURL" alt="@brand.Name logo" 
                                     style="width:45px; height:45px; border-radius:10px; object-fit:cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                                     style="width:45px; height:45px;">
                                    <i class="fa-regular fa-image text-muted"></i>
                                </div>
                            }
                        </td>

                        <td data-label="Website">
                            @if (!string.IsNullOrEmpty(brand.WebsiteURL))
                            {
                                <a href="@brand.WebsiteURL" target="_blank" class="text-decoration-none">
                                    <i class="fa-solid fa-link me-1" style="color: var(--color-accent, #635BFF);"></i>
                                    Visit
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No website</span>
                            }
                        </td>

                        <td data-label="Status">
                            <span class="status active">
                                <i class="fa-solid fa-circle-check me-1"></i> Active
                            </span>
                        </td>

                        <td data-label="Actions">
                            <div class="action-buttons">
                                <!-- Edit -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Edit", "Brand", new { id = brand.Id })', 'Edit Brand')" 
                                   class="btn btn-update" 
                                   title="Edit Brand">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <!-- Delete -->
                                <a href="javascript:void(0)" 
                                   onclick="openModalWithAjax('@Url.Action("Delete", "Brand", new { id = brand.Id })', 'Delete Brand')" 
                                   class="btn btn-delete" 
                                   title="Delete Brand">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination & Info -->
<div class="pagination-container">
    <div class="pagination-info">
        Showing page @Model.PageNumber of @Model.TotalPages • @Model.TotalRecords total brands
    </div>

    <div class="pagination-controls">
        @if (Model.TotalPages > 1)
        {
            @if (Model.PageNumber > 1)
            {
                <a asp-controller="Brand"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="5"
                   asp-route-searchByName="@currentSearch"
                   class="pagination-btn">Previous</a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageNumber)
                {
                    <span class="pagination-btn active">@i</span>
                }
                else
                {
                    <a asp-controller="Brand"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="5"
                       asp-route-searchByName="@currentSearch"
                       class="pagination-btn">@i</a>
                }
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <a asp-controller="Brand"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="5"
                   asp-route-searchByName="@currentSearch"
                   class="pagination-btn">Next</a>
            }
        }
    </div>
</div>


<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")


