@model ERP_System_Project.Models.Authentication.ViewProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}
<link rel="stylesheet" href="~/css/CRUD/Details.css" />

<div class="details-page profile-page">

    <!-- Title -->
    <h2 class="title">My Profile</h2>

    <!-- Name Section -->
    <h3 class="profile-name">@Model.FirstName @Model.LastName</h3>

    <!-- MAIN DETAILS GRID -->
    <dl class="details-grid">

        <div class="detail-item">
            <dt>First Name</dt>
            <dd>@Model.FirstName</dd>
        </div>

        <div class="detail-item">
            <dt>Last Name</dt>
            <dd>@Model.LastName</dd>
        </div>

        <div class="detail-item">
            <dt>Email</dt>
            <dd>@Model.Email</dd>
        </div>

        <div class="detail-item">
            <dt>Phone Number</dt>
            <dd>@Model.PhoneNumber</dd>
        </div>

        <div class="detail-item">
            <dt>Date of Birth</dt>
            <dd>@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
        </div>

        <div class="detail-item">
            <dt>Account Created At</dt>
            <dd>@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
        </div>
    </dl>

    <!-- ACTION BUTTONS -->
    <div class="viewActions mt-4">
        <div class="left-buttons">
            <a asp-action="EditProfile" class="btn btn-edit">Edit Profile</a>
            <a asp-action="ChangePassword" class="btn btn-back">Change Password</a>
        </div>
    </div>

</div>

