@model AttendanceStatusCode

@{
    ViewData["Title"] = "Add Attendance Status Code";
}

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

<div class="form-page mt-4">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add Attendance Status Code</h3>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Name -->
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder=" " autofocus />
                <label asp-for="Name">Status Name <span class="text-danger">*</span></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Code -->
            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder=" " maxlength="10" style="text-transform: uppercase;" />
                <label asp-for="Code">Status Code <span class="text-danger">*</span></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group full-width">
                <textarea asp-for="Description" class="form-control" placeholder=" " rows="3"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Is Active -->
            <div class="form-group form-check">
                <input asp-for="IsActive" id="isActiveSwitch" type="checkbox" class="form-check-input" checked />
                <label asp-for="IsActive" for="isActiveSwitch" class="form-check-label">Status Code is Active</label>
            </div>

            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-uppercase for Code
        document.querySelector('input[name="Code"]')?.addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });
    </script>
}
