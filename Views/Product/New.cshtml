@model ERP_System_Project.ViewModels.Inventory.ProductVM
@{
    ViewData["Title"] = "Add New Product";
}

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Product</h2>
            <hr />
        </div>

        <!-- Basic Information -->
        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Pricing -->
        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="UnitCost" class="form-label"></label>
                <input asp-for="UnitCost" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="UnitCost" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="StandardPrice" class="form-label"></label>
                <input asp-for="StandardPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="StandardPrice" class="text-danger"></span>
            </div>
        </div>

        <!-- Inventory & Selection -->
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-4">
                <label asp-for="BrandId" class="form-label"></label>
                <select asp-for="BrandId" asp-items="@ViewBag.Brands" class="form-select">
                    <option value="">-- Select Brand --</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-4">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <!-- Product Attributes -->
        <div class="mb-3">
            <label class="form-label">Product Attributes</label>
            <div id="attributes-container">
                @if (Model?.AttributesVM != null)
                {
                    @for (int i = 0; i < Model.AttributesVM.Count; i++)
                    {
                        <div class="attribute-group row mb-2">
                            <div class="col-md-5">
                                <select asp-for="AttributesVM[i].AtrributeId" asp-items="@ViewBag.Attributes" class="form-select">
                                    <option value="">-- Select Attribute --</option>
                                </select>
                            </div>
                            <div class="col-md-5">
                                <input asp-for="AttributesVM[i].Value" class="form-control" placeholder="Value" />
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-danger remove-attribute">Remove</button>
                            </div>
                        </div>
                    }
                }
            </div>
            <button type="button" id="add-attribute" class="btn btn-secondary mt-2">Add Attribute</button>
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
            <label asp-for="Image" class="form-label"></label>
            <input asp-for="Image" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <br />
        <hr />

        <!-- Action Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success" style="width:150px">
                <i class="fas fa-plus"></i> Add Product
            </button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary" style="width:160px">
                <i class="fas fa-arrow-left"></i> Back to Products
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Dynamic attribute management
        document.addEventListener('DOMContentLoaded', function() {
            const attributesContainer = document.getElementById('attributes-container');
            const addAttributeBtn = document.getElementById('add-attribute');
            let attributeIndex = @(Model?.AttributesVM?.Count ?? 0);

            addAttributeBtn.addEventListener('click', function() {
                const newAttributeHtml = `
                    <div class="attribute-group row mb-2">
                        <div class="col-md-5">
                            <select name="AttributesVM[${attributeIndex}].AtrributeId" class="form-select">
                                <option value="">-- Select Attribute --</option>
                                @if (ViewBag.Attributes != null)
                                {
                                        foreach (var item in ViewBag.Attributes)
                                        {
                                                <option value="@item.Value">@item.Text</option>
                                        }
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <input name="AttributesVM[${attributeIndex}].Value" class="form-control" placeholder="Value" />
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger remove-attribute">Remove</button>
                        </div>
                    </div>
                `;

                attributesContainer.insertAdjacentHTML('beforeend', newAttributeHtml);
                attributeIndex++;
            });

            // Remove attribute
            attributesContainer.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-attribute')) {
                    e.target.closest('.attribute-group').remove();
                    // Reindex remaining attributes if needed
                    reindexAttributes();
                }
            });

            function reindexAttributes() {
                const attributeGroups = attributesContainer.querySelectorAll('.attribute-group');
                attributeIndex = 0;
                attributeGroups.forEach((group, index) => {
                    const select = group.querySelector('select');
                    const input = group.querySelector('input[type="text"]');

                    select.name = `AttributesVM[${index}].AtrributeId`;
                    input.name = `AttributesVM[${index}].Value`;
                    attributeIndex = index + 1;
                });
            }
        });
    </script>
}