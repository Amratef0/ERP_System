@using ERP_System_Project.ViewModels
@using ERP_System_Project.ViewModels.Inventory
@model PageSourcePagination<ProductVM>

@{
    ViewData["Title"] = "All Products";
    string currentSearch = Context.Request.Query["searchByName"];
    string currentLowStockFilter = Context.Request.Query["lowStock"];
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>All Products</h1>
        <p>Manage and view your registered products</p>
    </div>

    <div class="d-flex gap-3 flex-wrap mb-4">

    <a asp-controller="Attribute" asp-action="Index" class="quick-action-btn card1">
        <i class="bi bi-tags me-2"></i> Manage Attributes
    </a>

    <a asp-controller="Category" asp-action="Index" class="quick-action-btn card2">
        <i class="bi bi-folder me-2"></i> Manage Categories
    </a>

    <a asp-controller="Brand" asp-action="Index" class="quick-action-btn card3">
        <i class="bi bi-star me-2"></i> Manage Brands
    </a>

</div>

<style>
    
</style>
 <!-- Search and Filter Card -->
<div class="bp-search-card shadow-sm border-0 mb-4">
    <div class="card-body p-3">
        <form method="get" asp-controller="Product" asp-action="Index" class="bp-search-form row g-3 align-items-end">

            <!-- Search -->
            <div class="col-md-5">
                <label for="searchInput" class="form-label small text-muted">Search Products</label>
                <div class="bp-search-group">
                    <i class="bi bi-search"></i>
                    <input type="text" id="searchInput" name="searchByName" value="@currentSearch" placeholder="Search products by name..." />
                </div>
            </div>

            <!-- Filter -->
            <div class="col-md-3">
                <label for="lowStockFilter" class="form-label small">Stock Filter</label>
                <select class="form-select bp-filter-select" id="lowStockFilter" name="lowStock">
                    <option value="">All Products</option>
                    <option value="lowStock" selected="@(currentLowStockFilter == "lowStock")">Low Stock Items</option>
                    <option value="outOfStock" selected="@(currentLowStockFilter == "outOfStock")">Out of Stock</option>
                    <option value="inStock" selected="@(currentLowStockFilter == "inStock")">In Stock</option>
                </select>
            </div>

            <!-- Button -->
            <div class="col-md-2">
                <button type="submit" class="btn bp-btn-filter w-100">
                    <i class="bi bi-funnel me-2"></i>Apply Filters
                </button>
            </div>

        </form>
    </div>
</div>


    <!-- Stats Row (Optional) -->
    <div class="bp-stats-row">

        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Data.Count()</h3>
                <p>Total Products</p>
            </div>
            <i class="bi bi-box-seam"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Data.Count(p => p.Quantity > 0)</h3>
                <p>In Stock</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Data.Count(p => p.Quantity == 0)</h3>
                <p>Out of Stock</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>

    </div>

    <!-- Products Table -->
    <div class="list-page customers-page mt-4">
        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="card-title fw-semibold">Product List</h2>
                <span class="badge bg-primary rounded-pill">@Model.TotalRecords Products</span>
            </div>
            <!-- Floating Add Button -->
            <a asp-controller="Product" asp-action="New"
               class="floating-btn" 
               title="Add New Product">
               <i class="fa-solid fa-plus"></i>
            </a>

            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Offer</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Data.Any())
                    {
                        @foreach (var product in Model.Data)
                        {
                            <tr>
                                <td data-label="Product">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(product.ImageURL))
                                        {
                                            <img src="@product.ImageURL" alt="@product.Name"
                                                 class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-box-seam text-primary"></i>
                                            </div>
                                        }
                                        <div>
                                            <span class="fw-medium">@product.Name</span>
                                            <div class="text-muted small text-truncate" style="max-width: 200px;" title="@product.Description">
                                                @product.Description
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td data-label="Stock">
                                    <span class="@(product.Quantity <= 10 ? "text-warning" : product.Quantity == 0 ? "text-danger" : "text-success")">
                                        @product.Quantity
                                    </span>
                                </td>
                                <td data-label="Price">
                                    <span class="text-success fw-bold">$@product.StandardPrice.ToString("N2")</span>
                                </td>
                                <td data-label="Status">
                                    @if (product.Quantity > 0)
                                    {
                                        <span class="status active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="status inactive">Out of Stock</span>
                                    }
                                </td>
                                <td data-label="Offer">
                                    @if (product.OfferPercentege > 0)
                                    {
                                        <span class="badge bg-danger rounded-pill px-2 py-1">
                                            -@product.OfferPercentege% SALE
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Offer</span>
                                    }
                                </td>
                                 <td data-label="Actions">
     <div class="action-buttons">
         <a asp-controller="Offer" asp-action="Set" asp-route-productId="@product.Id" class="btn btn-success btn-sm" title="Set Offer">
             <i class="fa-solid fa-tag"></i> 
         </a>
         <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-update btn-sm" title="Edit Product">
             <i class="fa-solid fa-pen"></i> 
         </a>
         <a href="javascript:void(0)"
            onclick="openModalWithAjax('@Url.Action("Delete", "Product", new { id = product.Id })', 'Delete Customer')"
            class="btn btn-delete btn-sm"
            title="Delete Customer">
             <i class="fa-solid fa-trash"></i>
         </a>
     </div>
 </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-4 d-block mb-2"></i>
                                No products found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-muted small">
                        Showing page @Model.PageNumber of @Model.TotalPages
                    </div>
                    <nav aria-label="Product pagination">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.PageNumber > 1 ? "" : "disabled")">
                                <a class="page-link"
                                   asp-controller="Product"
                                   asp-action="Index"
                                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                                   asp-route-pageSize="10"
                                   asp-route-searchByName="@currentSearch"
                                   asp-route-lowStock="@currentLowStockFilter">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       asp-controller="Product"
                                       asp-action="Index"
                                       asp-route-pageNumber="@i"
                                       asp-route-pageSize="10"
                                       asp-route-searchByName="@currentSearch"
                                       asp-route-lowStock="@currentLowStockFilter">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.PageNumber < Model.TotalPages ? "" : "disabled")">
                                <a class="page-link"
                                   asp-controller="Product"
                                   asp-action="Index"
                                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                                   asp-route-pageSize="10"
                                   asp-route-searchByName="@currentSearch"
                                   asp-route-lowStock="@currentLowStockFilter">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/ListPageHeader.css" />
<link rel="stylesheet" href="~/css/CRUD/Index.css" />
<link rel="stylesheet" href="~/css/pagination.css" />
@await Html.PartialAsync("_GeneralModal")







