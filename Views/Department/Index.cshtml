@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h2>Departments</h2>
        <p>Manage organizational departments</p>
    </div>

    <!-- Search Card -->
    <div class="bp-search-card top-search mt-4">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search departments by name ..." />
            </div>
            <button type="button" id="searchBtn">Search</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Count()</h3>
                <p>Total Departments</p>
            </div>
            <i class="bi bi-collection"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Count(d => d.IsActive)</h3>
                <p>Active</p>
            </div>
            <i class="bi bi-check-circle"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Count(d => !d.IsActive)</h3>
                <p>Inactive</p>
            </div>
            <i class="bi bi-x-circle"></i>
        </div>

        <div class="bp-stat-card stat-4">
            <div>
                <h3>@Model.Count(d => !string.IsNullOrEmpty(d.CostCenterCode))</h3>
                <p>Cost Centers</p>
            </div>
            <i class="bi bi-gear"></i>
        </div>
    </div>

    <!-- Departments Table -->
    <div class="list-page departments-page mt-4">
        <div class="card">
            <h2>Departments List</h2>

            <!-- Floating Add Button -->
            <a href="javascript:void(0)" 
               onclick="openModalWithAjax('@Url.Action("Create", "Department")', 'Add New Department')" 
               class="floating-btn" 
               title="Add New Department">
               <i class="fa-solid fa-plus"></i>
            </a>


            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Cost Center</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="departments">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Name"><strong>@item.Name</strong></td>
                            <td data-label="Code">
                                <span class="text-muted">@item.Code</span>
                            </td>
                            <td data-label="Cost Center">
                                @if (!string.IsNullOrEmpty(item.CostCenterCode))
                                {
                                    <span class="text-muted">@item.CostCenterCode</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td data-label="Status">
                                @if (item.IsActive)
                                {
                                    <span class="status active">Active</span>
                                }
                                else
                                {
                                    <span class="status inactive">Inactive</span>
                                }
                            </td>
                            <td data-label="Actions">
                                <div class="action-buttons">
                                    <!-- Details Button -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Details", "Department", new { id = item.Id })', 'Department Details')"
                                       class="btn btn-view btn-sm" 
                                       title="View Department Details">
                                       <i class="fa-solid fa-eye"></i>
                                    </a>

                                    <!-- Edit Button -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Edit", "Department", new { id = item.Id })', 'Edit Department')"
                                       class="btn btn-update btn-sm" 
                                       title="Edit Department">
                                       <i class="fa-solid fa-pen"></i>
                                    </a>


                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No departments found. Click "Add New Department" to get started.
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "Department")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        fillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function fillTable(response) {
                var tableBody = $("#departments");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (department) {
                        var activeStatus = department.isActive 
                            ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>'
                            : '<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactive</span>';
                        
                        var costCenter = department.costCenterCode 
                            ? `<span class="badge bg-info">${department.costCenterCode}</span>`
                            : '<span class="text-muted">-</span>';

                        newRows += `<tr>
                                        <td><strong>${department.name}</strong></td>
                                        <td><span class="badge bg-secondary">${department.code}</span></td>
                                        <td>${costCenter}</td>
                                        <td>${activeStatus}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/Department/Details/${department.id}" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/Department/Edit/${department.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${department.name}?')) { document.getElementById('deleteForm${department.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${department.id}" action="/Department/Delete/${department.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='5' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}