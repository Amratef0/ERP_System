@model AttendanceIndexVM

@{
    ViewData["Title"] = "Attendance Records";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-calendar-check"></i> Attendance Records</h2>
                    <p class="text-muted">Track and manage employee attendance</p>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters & Search</h5>
        </div>
        <div class="card-body">
            <form id="searchForm">
                @Html.AntiForgeryToken()
                
                <!-- Date and Country Row -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="dateFilter" class="form-label">
                            <i class="bi bi-calendar3"></i> Select Date <span class="text-danger">*</span>
                        </label>
                        <input type="date" id="dateFilter" class="form-control form-control-lg" />
                    </div>
                    <div class="col-md-6">
                        <label for="countryFilter" class="form-label">
                            <i class="bi bi-globe"></i> Country <span class="text-danger">*</span>
                        </label>
                        <select id="countryFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.Countries, "Id", "Name"))">
                            <option value="">-- Select Country --</option>
                        </select>
                    </div>
                </div>

                <!-- Search and Branch Row -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="searchTerm" class="form-label">
                            <i class="bi bi-search"></i> Search Employee
                        </label>
                        <input type="text" id="searchTerm" class="form-control form-control-lg" 
                               placeholder="Search by employee name..." />
                    </div>
                    <div class="col-md-6">
                        <label for="branchFilter" class="form-label">
                            <i class="bi bi-building"></i> Filter by Branch
                        </label>
                        <select id="branchFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.Branches, "Id", "Name"))">
                            <option value="">-- All Branches --</option>
                        </select>
                    </div>
                </div>

                <!-- Department and Type Row -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="departmentFilter" class="form-label">
                            <i class="bi bi-diagram-3"></i> Filter by Department
                        </label>
                        <select id="departmentFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                            <option value="">-- All Departments --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="employeeTypeFilter" class="form-label">
                            <i class="bi bi-person-lines-fill"></i> Filter by Type
                        </label>
                        <select id="employeeTypeFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.EmployeeTypes, "Id", "Name"))">
                            <option value="">-- All Types --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="jobTitleFilter" class="form-label">
                            <i class="bi bi-briefcase"></i> Filter by Job Title
                        </label>
                        <select id="jobTitleFilter" class="form-select form-select-lg" 
                                asp-items="@(new SelectList(Model.JobTitles, "Id", "Name"))">
                            <option value="">-- All Job Titles --</option>
                        </select>
                    </div>
                </div>

                <!-- Search Button -->
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" id="searchBtn" class="btn btn-primary btn-lg">
                            <i class="bi bi-search"></i> Load Attendance Records
                        </button>
                        <button type="button" id="clearBtn" class="btn btn-secondary btn-lg ms-2">
                            <i class="bi bi-x-circle"></i> Clear Filters
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Alert for info messages -->
    <div id="infoAlert"></div>

    <!-- Attendance Records Table -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-table"></i> Attendance Records</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person"></i> Full Name</th>
                            <th><i class="bi bi-building"></i> Branch</th>
                            <th><i class="bi bi-diagram-3"></i> Department</th>
                            <th><i class="bi bi-person-badge"></i> Type</th>
                            <th><i class="bi bi-briefcase"></i> Job Title</th>
                            <th class="text-center"><i class="bi bi-check2-square"></i> Status</th>
                            <th class="text-center"><i class="bi bi-clock"></i> Check In</th>
                            <th class="text-center"><i class="bi bi-clock-history"></i> Check Out</th>
                            <th class="text-center"><i class="bi bi-hourglass-split"></i> Total Hours</th>
                            <th class="text-center"><i class="bi bi-clock-fill"></i> Overtime</th>
                            <th><i class="bi bi-journal-text"></i> Notes</th>
                        </tr>
                    </thead>
                    <tbody id="attendanceRecords">
                        <tr>
                            <td colspan="11" class="text-center text-muted py-5">
                                <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                                <p class="mt-3 mb-0">Please select a date and country to view attendance records</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            // Set today's date as default
            const today = new Date().toISOString().split('T')[0];
            $("#dateFilter").val(today);

            function filter() {
                var date = $("#dateFilter").val();
                var searchTerm = $("#searchTerm").val();
                var country = parseInt($("#countryFilter").val()) || 0;
                var branch = parseInt($("#branchFilter").val()) || 0;
                var department = parseInt($("#departmentFilter").val()) || 0;
                var employeeType = parseInt($("#employeeTypeFilter").val()) || 0;
                var jobTitle = parseInt($("#jobTitleFilter").val()) || 0;
                var token = $('input[name="__RequestVerificationToken"]').val();

                if (date && country > 0) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetAttendance", "Attendance")',
                        data: {
                            date: date,
                            name: searchTerm,
                            countryId: country,
                            branchId: branch,
                            departmentId: department,
                            typeId: employeeType,
                            jobTitleId: jobTitle,
                            __RequestVerificationToken: token
                        },
                        success: function (response) {
                            fillTable(response.attendanceRecords);
                            if (response.infoMessage) {
                                $("#infoAlert").html(`<div class="alert alert-info alert-dismissible fade show">
                                    <i class="bi bi-info-circle"></i> ${response.infoMessage}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>`);
                            } else {
                                $("#infoAlert").html('');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Search failed:", error);
                            $("#infoAlert").html(`<div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-exclamation-triangle"></i> An error occurred while loading attendance records.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>`);
                        }
                    });
                } else {
                    if (!date) {
                        $("#infoAlert").html(`<div class="alert alert-warning alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> Please select a date.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>`);
                    } else if (country === 0) {
                        $("#infoAlert").html(`<div class="alert alert-warning alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> Please select a country.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>`);
                    }
                }
            }

            function formatTime(timeString) {
                if (!timeString) return '<span class="text-muted">-</span>';
                const parts = timeString.split(':');
                if (parts.length < 2) return timeString;
                let hours = parseInt(parts[0]);
                const minutes = parts[1];
                const ampm = hours >= 12 ? 'PM' : 'AM';
                hours = hours % 12;
                hours = hours ? hours : 12;
                return `${hours}:${minutes} ${ampm}`;
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#clearBtn").click(function() {
                $("#searchTerm").val('');
                $("#branchFilter").val('');
                $("#departmentFilter").val('');
                $("#employeeTypeFilter").val('');
                $("#jobTitleFilter").val('');
            });

            $("#dateFilter, #countryFilter, #branchFilter, #departmentFilter, #employeeTypeFilter, #jobTitleFilter").change(function () {
                filter();
            });

            function fillTable(response) {
                var tableBody = $("#attendanceRecords");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    response.forEach(function (attendanceRecord) {
                        var statusBadge = '';
                        var statusClass = attendanceRecord.status || 'Unknown';
                        
                        switch(statusClass.toLowerCase()) {
                            case 'present':
                                statusBadge = '<span class="badge bg-success">Present</span>';
                                break;
                            case 'absent':
                                statusBadge = '<span class="badge bg-danger">Absent</span>';
                                break;
                            case 'late':
                                statusBadge = '<span class="badge bg-warning text-dark">Late</span>';
                                break;
                            case 'on leave':
                                statusBadge = '<span class="badge bg-info">On Leave</span>';
                                break;
                            default:
                                statusBadge = `<span class="badge bg-secondary">${statusClass}</span>`;
                        }

                        newRows += `<tr>
                                        <td><strong>${attendanceRecord.fullName || '-'}</strong></td>
                                        <td>${attendanceRecord.branch || '-'}</td>
                                        <td>${attendanceRecord.department || '-'}</td>
                                        <td>${attendanceRecord.type || '-'}</td>
                                        <td>${attendanceRecord.jobTitle || '-'}</td>
                                        <td class="text-center">${statusBadge}</td>
                                        <td class="text-center"><span class="badge bg-primary">${formatTime(attendanceRecord.checkInTime)}</span></td>
                                        <td class="text-center"><span class="badge bg-warning text-dark">${formatTime(attendanceRecord.checkOutTime)}</span></td>
                                        <td class="text-center"><span class="badge bg-info">${attendanceRecord.totalHours || '0'}</span></td>
                                        <td class="text-center"><span class="badge bg-success">${attendanceRecord.overTimeHours || '0'}</span></td>
                                        <td><small class="text-muted">${attendanceRecord.notes || '-'}</small></td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = `<tr>
                        <td colspan="11" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-0">No attendance records found for the selected criteria</p>
                        </td>
                    </tr>`;
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}