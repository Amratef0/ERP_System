@model CustomerVM

@{
    ViewData["Title"] = "Create Customer";
}

<div class="form-page create-customer">
    <div class="form">
        <h3 class="formTitle" id="form-title">Add Customer</h3>

        <form asp-action="Create" method="post">

            <!-- First Name -->
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder=" " />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder=" " />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder=" " />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder=" " />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Customer Type -->
            <div class="form-group">
                <select asp-for="CustomerTypeId" class="form-select" asp-items="ViewBag.CustomerTypes">
                    <option value="" disabled selected hidden>Select Customer Type</option>
                </select>
                <label asp-for="CustomerTypeId">Customer Type</label>
                <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/CRUD/Create.css" />

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
