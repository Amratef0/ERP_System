@model Department

@{
    ViewData["Title"] = "Add Department";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-plus-circle"></i> Add New Department</h2>
                    <p class="text-muted">Create a new organizational department</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
            <hr />

            <!-- Form Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Department Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">
                                        <i class="bi bi-tag"></i> Department Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" 
                                           placeholder="e.g., Human Resources" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Code" class="form-label">
                                        <i class="bi bi-hash"></i> Department Code <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Code" class="form-control form-control-lg" 
                                           placeholder="e.g., HR" maxlength="10" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Unique identifier for the department (max 10 characters)
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CostCenterCode" class="form-label">
                                        <i class="bi bi-building"></i> Cost Center Code
                                    </label>
                                    <input asp-for="CostCenterCode" class="form-control form-control-lg" 
                                           placeholder="e.g., CC-HR-001" />
                                    <span asp-validation-for="CostCenterCode" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Optional: For financial tracking purposes
                                    </small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">
                                        <i class="bi bi-toggle-on"></i> Status
                                    </label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive" 
                                               id="isActiveSwitch" checked />
                                        <label class="form-check-label" for="isActiveSwitch">
                                            <span id="statusLabel">Active</span>
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">
                                        Active departments are available for employee assignment
                                    </small>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Create Department
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle"></i> Information</h6>
                    <ul class="mb-0">
                        <li><strong>Department Name:</strong> Full name of the department</li>
                        <li><strong>Code:</strong> Short unique identifier (used in reports and systems)</li>
                        <li><strong>Cost Center:</strong> Optional code for financial reporting</li>
                        <li><strong>Status:</strong> Only active departments can have employees assigned</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Toggle status label
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            document.getElementById('statusLabel').textContent = this.checked ? 'Active' : 'Inactive';
        });

        // Auto-generate code from name (optional helper)
        document.querySelector('input[name="Name"]').addEventListener('blur', function() {
            const codeInput = document.querySelector('input[name="Code"]');
            if (!codeInput.value) {
                const code = this.value.split(' ').map(word => word.charAt(0)).join('').toUpperCase();
                codeInput.value = code.substring(0, 10);
            }
        });
    </script>
}
