<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP_System_Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ERP_System_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ERP_System_Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PerformanceLog" asp-action="Index">Develper View</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- E-Commerce Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="marketDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-shop"></i> Market
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="marketDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Market" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="25">
                                        <i class="bi bi-basket"></i> Browse Market
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Cart" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="25">
                                        <i class="bi bi-cart3"></i> Shopping Cart
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- HR Management Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="hrDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> HR Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="hrDropdown">
                                <li><h6 class="dropdown-header">Employee Management</h6></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="Index"><i class="bi bi-person-badge"></i> Employees</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Index"><i class="bi bi-diagram-3"></i> Departments</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="JobTitle" asp-action="Index"><i class="bi bi-briefcase"></i> Job Titles</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="EmployeeType" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Employee Types</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Attendance & Leave</h6></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Attendance" asp-action="Index"><i class="bi bi-calendar-check"></i> Attendance</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AttendanceStatusCode" asp-action="Index"><i class="bi bi-list-check"></i> Attendance Status Codes</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="LeaveType" asp-action="Index"><i class="bi bi-calendar-event"></i> Leave Types</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="EmployeeLeaveBalance" asp-action="Index"><i class="bi bi-calendar-range"></i> Leave Balances</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Work Schedule</h6></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="WorkSchedule" asp-action="Index"><i class="bi bi-clock"></i> Work Schedule</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PublicHoliday" asp-action="Index"><i class="bi bi-calendar-day"></i> Public Holidays</a></li>
                            </ul>
                        </li>

                        <!-- Employee Self-Service (Only for Employees) -->
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="employeeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> My Portal
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="employeeDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="Profile"><i class="bi bi-person-circle"></i> My Profile</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="MyLeaveRequests"><i class="bi bi-list-ul"></i> My Leave Requests</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="RequestLeave"><i class="bi bi-calendar-plus"></i> Request Leave</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Manager Portal (Only for Managers & HR) -->
                        @if (User.IsInRole("HR Manager") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-clipboard-check"></i> Manager Portal
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                                    <li><h6 class="dropdown-header">Leave Approvals</h6></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="PendingApprovals"><i class="bi bi-clock-history"></i> Pending Approvals</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="TeamLeaveCalendar"><i class="bi bi-calendar3"></i> Team Leave Calendar</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Settings Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="settingsDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Country" asp-action="Index"><i class="bi bi-globe"></i> Countries</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Branch" asp-action="Index"><i class="bi bi-building"></i> Branches</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Currency" asp-action="Index"><i class="bi bi-currency-exchange"></i> Currencies</a></li>
                            </ul>
                        </li>

                        <!-- CRM Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Customers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="customerDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Customer" asp-action="Index"><i class="bi bi-person-circle"></i> Customers</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CustomerType" asp-action="Index"><i class="bi bi-person-badge"></i> Customer Types</a></li>
                            </ul>
                        </li>

                        @* <!-- Purchasing Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="purchasingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-cart"></i> Purchasing
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="purchasingDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="PurchaseOrder" asp-action="Index">Purchase Orders</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="SupplierCategory" asp-action="Index">Supplier Categories</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="SupplierProduct" asp-action="Index">Supplier Products</a></li>
                            </ul>
                        </li> *@
                        <!-- Purchasing Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="purchasingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-cart"></i> Purchasing
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="purchasingDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="PurchaseOrder" asp-action="Index">
                                        <i class="bi bi-file-earmark-text"></i> Purchase Orders
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Supplier" asp-action="Index">
                                        <i class="bi bi-truck"></i> Suppliers
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="SupplierCategory" asp-action="Index">
                                        <i class="bi bi-diagram-3"></i> Supplier Categories
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="SupplierProduct" asp-action="Index">
                                        <i class="bi bi-box-seam"></i> Supplier Products
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Inventory Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="inventoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box-seam"></i> Inventory
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="inventoryDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="10">
                                        <i class="bi bi-box"></i> Products
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">
                                        <i class="bi bi-tags"></i> Categories
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Attribute" asp-action="Index">
                                        <i class="bi bi-list-check"></i> Attributes
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Brand" asp-action="Index">
                                        <i class="bi bi-award"></i> Brands
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Warehouse" asp-action="Index">
                                        <i class="bi bi-building"></i> Warehouse
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="InventoryTransaction" asp-action="Index">
                                        <i class="bi bi-arrow-left-right"></i> Inventory Transaction
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Role Management (Development Only - Remove in Production) -->
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="RoleManagement" asp-action="AssignRole">
                                <i class="bi bi-shield-lock"></i> Assign Roles (Testing)
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Toast Notification Partial -->
    <partial name="_Toast" />
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ERP_System_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
