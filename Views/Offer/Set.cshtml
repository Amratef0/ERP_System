@using ERP_System_Project.ViewModels.ECommerce
@model OfferVM
@{
    ViewData["Title"] = "Set Offer";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 fw-bold text-gradient-primary mb-2">Edit Offer</h1>
                    <p class="text-muted mb-0">Update product discount, duration, and start date</p>
                </div>
                <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary d-flex align-items-center">
                    <i class="bi bi-arrow-left me-2"></i>Back to Products
                </a>
            </div>

            <!-- Edit Form -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="card-title mb-0 fw-semibold">Offer Details</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Set">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProductId" />

                        <!-- Offer Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label small text-muted fw-semibold">
                                Offer Name <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="Name"
                                       class="form-control" placeholder="Enter Offer Name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Discount Percentage -->
                        <div class="mb-4">
                            <label asp-for="DiscountPercentage" class="form-label small text-muted fw-semibold">
                                Discount Percentage <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="DiscountPercentage" type="number" min="1" max="100"
                                       class="form-control" placeholder="Enter discount percentage" />
                                <span class="input-group-text bg-light">%</span>
                            </div>
                            <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                            <div class="form-text">Discount must be between 1% and 100%</div>
                        </div>

                        <!-- Offer Duration -->
                        <div class="mb-4">
                            <label asp-for="OfferDays" class="form-label small text-muted fw-semibold">
                                Offer Duration (Days) <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="OfferDays" type="number" min="1" max="365"
                                       class="form-control" placeholder="Enter number of days" />
                                <span class="input-group-text bg-light">days</span>
                            </div>
                            <span asp-validation-for="OfferDays" class="text-danger small"></span>
                            <div class="form-text">Offer duration must be between 1 and 365 days</div>
                        </div>

                        <!-- Start Date -->
                        <div class="mb-4">
                            <label asp-for="StartDate" class="form-label small text-muted fw-semibold">
                                Start Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                            <div class="form-text">Select when the offer should start</div>
                        </div>

                        <!-- Preview Card -->
                        <div class="mb-4">
                            <label class="form-label small text-muted fw-semibold">Offer Preview</label>
                            <div class="card border-dashed bg-light">
                                <div class="card-body text-center py-4">
                                    <div class="offer-preview">
                                        <div class="discount-badge bg-success text-white mb-3">
                                            <i class="bi bi-tag me-2"></i>
                                            <span id="previewDiscount">@Model.DiscountPercentage</span>% OFF
                                        </div>
                                        <h6 class="fw-semibold mb-2">@Model.Name</h6>
                                        <p class="text-muted small mb-1">
                                            Valid for <span id="previewDays">@Model.OfferDays</span> days
                                        </p>
                                        <p class="text-muted small mb-0">
                                            Starts: <span id="previewStartDate">@Model.StartDate.ToString("MMM dd, yyyy HH:mm")</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 pt-3">
                            <button type="submit" class="btn btn-primary flex-fill d-flex align-items-center justify-content-center">
                                <i class="bi bi-check-circle me-2"></i>Update Offer
                            </button>
                            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary d-flex align-items-center justify-content-center">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-gradient-primary {
        background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .card {
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .border-dashed {
        border: 2px dashed #dee2e6 !important;
    }

    .discount-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .form-control {
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.1);
            border-color: #86b7fe;
        }

    .btn {
        border-radius: 8px;
        transition: all 0.2s ease;
        font-weight: 500;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .spinner {
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .input-group-text {
        border-radius: 0 8px 8px 0;
    }

    .input-group .form-control {
        border-radius: 8px 0 0 8px;
    }
</style>