@model IEnumerable<Country>

@{
    ViewData["Title"] = "Countries";
}

<div class="page-section">

    <!-- Header -->
    <div class="bp-header">
        <h1>Countries</h1>
        <p>Manage countries and regional settings</p>
    </div>

    <!-- Search Card -->
    <div class="bp-search-card top-search mt-4">
        <form id="searchForm" class="bp-search-form">
            @Html.AntiForgeryToken()
            <div class="bp-search-group">
                <i class="bi bi-search"></i>
                <input type="text" id="searchTerm" placeholder="Search countries by name, code, or phone code..." />
            </div>
            <button type="button" id="searchBtn">Search</button>
        </form>
    </div>

    <!-- Stats Row -->
    <div class="bp-stats-row">
        <div class="bp-stat-card stat-1">
            <div>
                <h3>@Model.Count()</h3>
                <p>Total Countries</p>
            </div>
            <i class="bi bi-globe"></i>
        </div>

        <div class="bp-stat-card stat-2">
            <div>
                <h3>@Model.Count(c => !string.IsNullOrEmpty(c.PhoneCode))</h3>
                <p>Phone Codes</p>
            </div>
            <i class="bi bi-telephone"></i>
        </div>

        <div class="bp-stat-card stat-3">
            <div>
                <h3>@Model.Count(c => !string.IsNullOrEmpty(c.Code))</h3>
                <p>Country Codes</p>
            </div>
            <i class="bi bi-hash"></i>
        </div>
    </div>

    <!-- Countries Table -->
    <div class="list-page departments-page mt-4">
        <div class="card">
            <h2>Countries List</h2>

            <!-- Floating Add Button -->
            <a href="javascript:void(0);" 
               onclick="openModalWithAjax('@Url.Action("Create", "Country")', 'Add New Country')" 
               class="floating-btn" 
               title="Add New Country">
               <i class="fa-solid fa-plus"></i>
            </a>

            <table>
                <thead>
                    <tr>
                        <th>Country Name</th>
                        <th>Code</th>
                        <th>Phone Code</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="countries">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Country Name"><strong>@item.Name</strong></td>
                            <td data-label="Code"><span class="text-muted">@item.Code</span></td>
                            <td data-label="Phone Code">
                                @if (!string.IsNullOrEmpty(item.PhoneCode))
                                {
                                    <span class="badge bg-info">@item.PhoneCode</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td data-label="Actions">
                                <div class="action-buttons">
                                    <!-- Edit (AJAX) -->
                                    <a href="javascript:void(0)" 
                                       onclick="openModalWithAjax('@Url.Action("Edit", "Country", new { id = item.Id })', 'Edit Country')"
                                       class="btn btn-update btn-sm" 
                                       title="Edit Country">
                                       <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <!-- Delete -->
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-delete btn-sm" title="Delete Country">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle"></i> No countries found. Click "Add New Country" to get started.
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="@(Url.Content("~/css/ListPageHeader.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/CRUD/Index.css"))" />
<link rel="stylesheet" href="@(Url.Content("~/css/pagination.css"))" />
@await Html.PartialAsync("_GeneralModal")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            function filter() {
                var searchTerm = $("#searchTerm").val();
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Search", "Country")',
                    data: {
                        name: searchTerm,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        FillTable(response);
                    },
                    error: function (xhr, status, error) {
                        console.error("Search failed:", error);
                        alert("An error occurred while searching.");
                    }
                });
            }

            $("#searchForm").submit(function (e) {
                e.preventDefault();
                filter();
            });

            $("#searchBtn").click(function () {
                filter();
            });

            $("#searchTerm").keyup(function() {
                if ($(this).val() === '') {
                    location.reload();
                }
            });

            function FillTable(response) {
                var tableBody = $("#countries");
                tableBody.empty();

                if (response && response.length > 0) {
                    var newRows = "";
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    
                    response.forEach(function (country) {
                        var phoneCode = country.phoneCode 
                            ? `<span class="badge bg-info">${country.phoneCode}</span>` 
                            : '<span class="text-muted">-</span>';

                        newRows += `<tr>
                                        <td><strong>${country.name}</strong></td>
                                        <td><span class="text-muted">${country.code}</span></td>
                                        <td>${phoneCode}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/Country/Edit/${country.id}" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Delete ${country.name}?')) { document.getElementById('deleteForm${country.id}').submit(); }" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                            <form id="deleteForm${country.id}" action="/Country/Delete/${country.id}" method="post" style="display:none;">
                                                <input type="hidden" name="__RequestVerificationToken" value="${token}" />
                                            </form>
                                        </td>
                                    </tr>`;
                    });
                    tableBody.html(newRows);
                } else {
                    var noResultsRow = "<tr><td colspan='4' class='text-center'>No results found.</td></tr>";
                    tableBody.html(noResultsRow);
                }
            }
        });
    </script>
}
